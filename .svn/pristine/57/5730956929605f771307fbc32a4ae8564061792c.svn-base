<div class="card">
    <div class="row ms-3 mt-3 d-flex align-items-center">
        <div class="col">
            <h3 class="card-title">Appointment Order</h3>
        </div>
    </div>

    <div class="table-responsive">
        <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded">
            <table id="appointmentorder" class="table table-striped table-row-bordered border-bottom gs-7">
                <thead>
                    <tr class="fw-bolder fs-5 text-nowrap bg-lightblue text-blue align-middle">
                        <th>Employee Name</th>
                        <th>Designation </th>
                        <th>Branch </th>
                        <th>Appointment Date</th>
                        <th style="text-align: center;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr *ngFor="let data of appointmentorder; let i=index;" class="align-middle">
                        <td>{{data.user_name}}</td>
                        <td>{{data.branch_name}}</td>
                        <td>{{data.designation_name}}</td>
                        <td>{{data.appointment_date}}</td>
                        <td class="text-center text-nowrap">
                            <button title="Edit" type="button" class="btn btn-icon btn-sm bg-success me-2" (click)="onedit(data.appointmentorder_gid)">
                                <span class="fa-solid fa-pencil fs-6" style="color: #ffffff;"></span>
                            </button>
                            <button title="Print" type="button" class="btn btn-icon btn-sm bg-warning me-2" (click)="PrintPDF(data.appointmentorder_gid)" >
                                <span class="fa-solid fa-print fs-6" style="color: #ffffff;"></span>
                            </button>                          
                         </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
