<div class="card">
    <div class="row ms-3 mt-3 d-flex align-items-center">
      <div class="col">
        <h3 class="card-title">Salary Component Group</h3>
      </div>
    
      <div class="col me-5">
        <button title="Add Component Group" class="btn-primary btn-sm text-white me-4 mb-2 mt-2 float-end" data-bs-toggle="modal" data-bs-target="#myModaladd">
          <i class="fas fa-plus"></i> &nbsp;&nbsp;
          Add Component Group</button>
      </div>
    </div>
    
    <div class="table-responsive">
      <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded">
        <table id="Componentgroup_list" class="table table-striped table-row-bordered border-bottom gs-7">
          <thead>
            <tr class="fw-bolder fs-5 text-nowrap bg-lightblue text-blue align-middle">
              <th>S.No</th>
              <th>Component Group Code</th>
              <th>Componentgroup Name</th>
              <th>Component Display Name</th>
              <th class="text-center">Action</th>
            </tr>
          </thead>
          <tbody>
            <tr *ngFor="let data of Componentgroup_list; let i=index;" class="align-middle">
              <td>{{i+1}}</td>
              <td>{{data.componentgroup_code}}</td>
              <td>{{data.componentgroup_name}}</td>
              <td>{{data.display_name}}</td>
              <td class="text-center text-nowrap">
                <button title="Edit" type="button" class="btn btn-icon btn-sm bg-success me-2" data-bs-toggle="modal" data-bs-target="#myModaledit" (click)="openModaledit(data)">
                  <span class="fa-solid fa-pencil fs-6" style="color: #ffffff;"></span>
                </button>
                <!-- <button title="Delete" type="button" class="btn btn-icon btn-sm bg-danger me-2" data-bs-toggle="modal" data-bs-target="#myModaldelete" (click)="openModaldelete(data.branch_gid)">
                  <span class="fa-solid fa-trash fs-6" style="color: #ffffff;"></span>
                </button>  -->
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>



  <form [formGroup]="reactiveFormadd" #form="ngForm">
    <div class="modal mt-20" id="myModaladd" data-bs-backdrop="static" data-bs-keyboard="false">
      <div class="modal-dialog ">
        <div class="modal-content">
          <!-- Modal Header -->
          <div class="card-header p-1 pb-3 pt-2 rounded-top bg-primary">
            <div>
              <h2 class="fw-bolder ms-5 mt-4" style="color: #ffffff;">Add Component Group</h2>
            </div>
          </div>
          <!-- Modal body -->
          <div class="modal-body">
            <div class="d-flex flex-row flex-wrap">
              <div class="col-12 col-lg-6 col-md-6 col-sm-12"><b>Component Group Code<span style="color:red"> *</span></b>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                  <input formControlName="componentgroup_code" type="text" 
                  class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input" 
                  [ngStyle]="{'border-color': componentgroup_code.invalid && componentgroup_code.touched ? 'red' : 'rgb(209, 209, 209)'}" 
                  placeholder="Enter component group code" pattern="^(?!\s*$).+" required name="componentgroup_code" required 
                  [class.is-invalid]="componentgroup_code.invalid && (componentgroup_code.dirty || componentgroup_code.touched)" />
                  
                  <div *ngIf="componentgroup_code.invalid && (componentgroup_code.dirty || componentgroup_code.touched)" class="invalid-feedback">
                    <div *ngIf="componentgroup_code.errors?.['required']">
                      <span style="color: red; width: 200px; margin-top: 1px; margin-left: 8px; font-size: 11px;">* Component Group Code  is required</span>
                    </div>
                  </div>
                </div>              
              </div>
  
              <div class="col-12 col-lg-6 col-md-6 col-sm-12"><b>Component Group Name<span style="color:red"> *</span></b>
                <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2">
                  <input formControlName="componentgroup_name" type="text" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input" [ngStyle]="{'border-color': componentgroup_name.invalid && componentgroup_name.touched ? 'red' : 'rgb(209, 209, 209)'}" placeholder="Enter Component Group Name " pattern="^(?!\s*$).+" name="componentgroup_name" required [class.is-invalid]="componentgroup_name.invalid && (componentgroup_name.dirty || componentgroup_name.touched)"/>
                  <div *ngIf="componentgroup_name.invalid && (componentgroup_name.dirty || componentgroup_name.touched)" class="invalid-feedback">
                    <div *ngIf="componentgroup_name.errors?.['required']">
                      <span style="color: red; width: 200px; margin-top: 1px; margin-left: 8px; font-size: 11px;">* Component Group Name is required</span>
                    </div>
                  </div>
                </div>              
              </div>
            </div>
  
            <div class="row mt-4">
              <span class="font-bold"><b>Display Name<span style="color:red"> *</span></b></span>
              <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2">
                <input formControlName="display_name" type="text" class=" form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input" [ngStyle]="{'border-color': display_name.invalid && display_name.touched ? 'red' : 'rgb(209, 209, 209)'}" placeholder="Enter Display Name" pattern="^(?!\s*$).+" name="display_name" required [class.is-invalid]="display_name.invalid && (display_name.dirty || display_name.touched)"/>
                <div *ngIf="display_name.invalid && (display_name.dirty || display_name.touched)" class="invalid-feedback">
                  <div *ngIf="display_name.errors?.['required']">
                    <span style="color: red; width: 200px; margin-top: 1px; margin-left: 8px; font-size: 11px;">* Display Name is required</span>
                  </div>
                </div>
              </div>            
            </div>
            <div class="row mt-4">
              <span class="font-bold"><b>Statutory<span style="color: red"> *</span></b></span>
              <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2">
                <label>
                  <input type="radio" formControlName="statutory" value="Yes"> Yes
                </label>
                <label class="ms-3">
                  <input type="radio" formControlName="statutory" value="No"> No
                </label>
                <div *ngIf="statutory.invalid && (statutory.dirty || statutory.touched)" class="invalid-feedback">
                  <div *ngIf="statutory.errors?.['required']">
                    <span style="color: red; width: 200px; margin-top: 1px; margin-left: 8px; font-size: 11px;">* statutory is required</span>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Modal footer -->
            <div class="text-center my-4 mt-8">
              <button class="me-4" (click)="onsubmit()" [disabled]="reactiveFormadd.invalid"
                [ngClass]="{'primary-button': !reactiveFormadd.invalid, 'secondary-button': reactiveFormadd.invalid}"
                data-bs-dismiss="modal">
                <i class="bi bi-check-square fs-5"></i>
                <span class="ms-3">Submit</span>
              </button>
              <button class="btn-danger btn-sm text-white me-4" (click)="onclose()" data-bs-dismiss="modal">
                <i class="fas fa-close text-white fs-5"></i>
                <span class="ms-3">Close</span>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
  




  <form [formGroup]="reactiveFormadd" #form="ngForm">
    <div class="modal mt-20" id="myModaledit" data-bs-backdrop="static" data-bs-keyboard="false">
      <div class="modal-dialog ">
        <div class="modal-content">
          <!-- Modal Header -->
          <div class="card-header p-1 pb-3 pt-2 rounded-top bg-primary">
            <div>
              <h2 class="fw-bolder ms-5 mt-4" style="color: #ffffff;">Edit Component Group</h2>
            </div>
          </div>
          <!-- Modal body -->
          <div class="modal-body">
            <div class="d-flex flex-row flex-wrap">
              <div class="col-12 col-lg-6 col-md-6 col-sm-12"><b>Component Group Code<span style="color:red"> *</span></b>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                  <input formControlName="componentgroup_code" type="text" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input" [ngStyle]="{'border-color': componentgroup_code.invalid && componentgroup_code.touched ? 'red' : 'rgb(209, 209, 209)'}" placeholder="Enter Component Group Code" pattern="^(?!\s*$).+"
                   required name="componentgroup_code" required
                    [class.is-invalid]="componentgroup_code.invalid && 
                    (componentgroup_code.dirty || componentgroup_code.touched)"  readonly/>
                  <div *ngIf="componentgroup_code.invalid && (componentgroup_code.dirty || componentgroup_code.touched)" class="invalid-feedback">
                    <div *ngIf="componentgroup_code.errors?.['required']">
                      <span style="color: red; width: 200px; margin-top: 1px; margin-left: 8px; font-size: 11px;">* Component Group code is required</span>
                    </div>
                  </div>
                </div>              
              </div>
  
              <div class="col-12 col-lg-6 col-md-6 col-sm-12"><b>Component Group Name<span style="color:red"> *</span></b>
                <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2">
                  <input formControlName="componentgroup_name" type="text" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input" [ngStyle]="{'border-color': componentgroup_name.invalid && componentgroup_name.touched ? 'red' : 'rgb(209, 209, 209)'}" placeholder="Enter Component Group Name Prefix" pattern="^(?!\s*$).+" name="componentgroup_name" required [class.is-invalid]="componentgroup_name.invalid && (componentgroup_name.dirty || componentgroup_name.touched)"/>
                  <div *ngIf="componentgroup_name.invalid && (componentgroup_name.dirty || componentgroup_name.touched)" class="invalid-feedback">
                    <div *ngIf="componentgroup_name.errors?.['required']">
                      <span style="color: red; width: 200px; margin-top: 1px; margin-left: 8px; font-size: 11px;">* Component Group name is required</span>
                    </div>
                  </div>
                </div>              
              </div>
            </div>
  
            <div class="row mt-4">
              <span class="font-bold"><b>Display Name<span style="color:red"> *</span></b></span>
              <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2">
                <input formControlName="display_name" type="text" class=" form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input" [ngStyle]="{'border-color': display_name.invalid && display_name.touched ? 'red' : 'rgb(209, 209, 209)'}" placeholder="Enter Display Name" pattern="^(?!\s*$).+" name="display_name" required [class.is-invalid]="display_name.invalid && (display_name.dirty || display_name.touched)"/>
                <div *ngIf="display_name.invalid && (display_name.dirty || display_name.touched)" class="invalid-feedback">
                  <div *ngIf="display_name.errors?.['required']">
                    <span style="color: red; width: 200px; margin-top: 1px; margin-left: 8px; font-size: 11px;">* Display Name is required</span>
                  </div>
                </div>
              </div>            
            </div>
            <div class="row mt-4">
              <span class="font-bold"><b>Statutory<span style="color: red"> *</span></b></span>
              <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2">
                <label>
                  <input type="radio" (change)="onRadioChange('Yes')" [checked]="reactiveFormadd.get('statutory')?.value === 'Yes'"> Yes
                </label>
                <label class="ms-3">
                  <input type="radio" (change)="onRadioChange('No')" [checked]="reactiveFormadd.get('statutory')?.value === 'No'"> No
                </label>
              </div>
            </div>
            
            
            
            <!-- Modal footer -->
            <div class="text-center my-4 mt-8">
              <button class="me-4" (click)="onupdate()" [disabled]="reactiveFormadd.invalid"
                [ngClass]="{'primary-button': !reactiveFormadd.invalid, 'secondary-button': reactiveFormadd.invalid}"
                data-bs-dismiss="modal">
                <i class="bi bi-check-square fs-5"></i>
                <span class="ms-3">Submit</span>
              </button>
              <button class="btn-danger btn-sm text-white me-4" (click)="onclose()" data-bs-dismiss="modal">
                <i class="fas fa-close text-white fs-5"></i>
                <span class="ms-3">Close</span>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>




 