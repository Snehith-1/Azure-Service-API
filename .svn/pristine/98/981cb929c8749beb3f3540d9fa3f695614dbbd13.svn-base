          <div class="d-flex row justify-content-end mt-2">
            <div class="col-md-3 d-flex align-items-center">
              <label class="col-sm-6 col-form-label fw-bolder">Grand Total:</label>
              <input type="text" class="form-control" readonly formControlName="grandtotal" style="width:120px; text-align: right;"
                (input)="finaltotal()" [(ngModel)]="grandtotal"
                style="text-align: right; background-color: #e9e7e7;">&nbsp;
              <!-- <span style=" color:  rgb(0, 0, 80);font-weight: bold;">{{SelectedCurrencyCode}}</span> -->
            </div>
          </div>
          <br>

          <div class="card-header bg-lightblue card-height55">
            <div class="card-title m-0">
              <h5 class="fw-bolder text-blue">Terms and Conditions</h5>
            </div>
          </div>
          <ng-select [items]="terms_list" class="custom col-lg-5 m-6 col-12 fv-row mt-2" bindLabel="template_name"
            [(ngModel)]="mdlTerms" formControlName="template_name" bindValue="template_gid"
            placeholder="Select an option" (change)="GetOnChangeTerms()"></ng-select>
          <div class="d-flex flex-row m-2 flex-wrap table-responsive">
            <div class="col-12 col-lg-12 col-md-10  col-sm-10 fv-row mt-2">
              <angular-editor [config]="config" formControlName="termsandconditions"></angular-editor>
            </div>
          </div>
        </div>
        <div class="text-center my-4">
          <button type="submit" class="btn-success btn-sm text-white me-2">
            <i class="bi bi-check-square fs-5"></i>
