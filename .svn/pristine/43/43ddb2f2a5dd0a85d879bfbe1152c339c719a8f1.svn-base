<div class="m-5">
    <form  [formGroup]="RaiseRequestForm" #form="ngForm">
      <div class="card shadow-lg rounded-top"   style="top:-50px;">
        <div class="card m-7">
          <div class="m-5 mt-5 border card">
            <div class="card-header bg-lightblue card-height55">
              <div class="card-title m-0">
                <h5 class="fw-bolder text-blue">RAISE PURCHASE REQUISITION</h5>
              </div>
            </div>
            <div class="d-flex flex-row m-6 flex-wrap">  
              <div class="col-12 col-lg-4 col-md-6 col-sm-12">  
                <span class="font-bold">PR Ref. No</span>
                       <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                         <input type="text" formControlName="purchaserequisition_gid" class="
                             form-control form-control-lg form-control-solid
                             custom-input
                             mb-3 mb-lg-0
                             bg-white
                             custom-input borderc-secondary
                            "  placeholder="New Ref. No" name="purchaserequisition_gid" readonly />
                   
               </div>
              </div>
  
                 <div class="col-12 col-lg-4 col-md-6 col-sm-12">
                       <span class="font-bold">PR Date<span class="ms-1 text-red">*</span></span>
                       <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                         <input type="date" formControlName="purchaserequisition_date" class="
                             form-control form-control-lg form-control-solid
                             custom-input
                             mb-3 mb-lg-0
                             bg-white
                             custom-input borderc-secondary " name="purchaserequisition_date" required />
                   <div *ngIf=" purchaserequisition_date.invalid &&
                        (purchaserequisition_date.dirty || purchaserequisition_date.touched)
                 " class="text-red">
                    <div *ngIf="purchaserequisition_date.errors?.['required']">
                       PR Date is required.
                    </div>
                  </div>
               </div>
            </div>
  
            <div class="col-12 col-lg-4 col-md-6 col-sm-12">
                <span class="font-bold">Branch Name<span class="ms-1 text-red">*</span></span>
                <ng-select formControlName="branch_name" [class.is-invalid]="
                branch_name.invalid && (branch_name.dirty || branch_name.touched)
                  "  [ngClass]="{'invalid-border': branch_name.invalid && branch_name.touched}" 
                  [items]="branch_list"  class="custom col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2" [(ngModel)]="mdlBranchName"
                  bindLabel="branch_name" bindValue="branch_gid" placeholder="Select Branch"></ng-select>
                <div *ngIf="
                branch_name.invalid && (branch_name.dirty || branch_name.touched)
                  " class="invalid-feedback">
                  <div *ngIf="branch_name.errors?.['required']">
                    Branch is required.
                  </div>
                </div>
              </div>                 
        </div>
  
        <div class="d-flex flex-row m-6 flex-wrap">
              <div class="col-12 col-lg">
                <span class="font-bold">Department</span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                  <input type="text" formControlName="department_name" class="
                      form-control form-control-lg form-control-solid
                      custom-input
                      mb-3 mb-lg-0
                      bg-white
                      custom-input borderc-secondary" readonly/>                  
                </div>
              </div>
              <div class="col-12 col-lg-4 col-md-6 col-sm-12">
                <span class="font-bold">Cost Center<span class="ms-1 text-red">*</span></span>
                <ng-select formControlName="costcenter_name" [class.is-invalid]="
                costcenter_name.invalid && (costcenter_name.dirty || costcenter_name.touched)
                  "  [ngClass]="{'invalid-border': costcenter_name.invalid && costcenter_name.touched}" 
                  [items]="costcenter_list"  class="custom col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2" [(ngModel)]="mdlCost"
                  bindLabel="costcenter_name" bindValue="country_gid" placeholder="Select Cost center"></ng-select>
                <div *ngIf="
                costcenter_name.invalid && (costcenter_name.dirty || costcenter_name.touched)
                  " class="invalid-feedback">
                  <div *ngIf="costcenter_name.errors?.['required']">
                    Branch is required.
                  </div>
                </div>
              </div>                 
        
              <div class="col-12 col-lg-4 col-md-6 col-sm-12" >
                <span class="font-bold">Available Amount</span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
  
                                      <input formControlName="available_amount" type="number" class="
                                      form-control form-control-lg form-control-solid
                                      borderc-secondary
                                      bg-white
                                      custom-input
                                      mb-3 mb-lg-0" readonly />
                </div>
              </div>
              </div> 

            <div class="d-flex flex-row m-6 flex-wrap">
              
              <div class="col-12 col-lg-4 col-md-6 col-sm-12">
                <span class="font-bold">PR Raised By</span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                  <input type="text" formControlName="user_firstname" class="
                      form-control form-control-lg form-control-solid
                      custom-input
                      mb-3 mb-lg-0
                      bg-white
                      custom-input borderc-secondary"  readonly/>                
                </div>
              </div>
             
            <div class="col-12 col-lg-4 col-md-6 col-sm-12" >
                <span class="font-bold">PR Remarks</span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">    
                    <textarea formControlName="purchaserequisition_remarks"  type="text" class="
                    form-control form-control-lg form-control-solid
                    borderc-secondary
                    bg-white
                    custom-input
                    mb-3 mb-lg-0"></textarea>
                </div>  
        </div>
        <div class="col-12 col-lg-4 col-md-6 col-sm-12">
            <span class="font-bold">PR Reference </span>
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
              <textarea type="text" formControlName="customer_state" class="
                  form-control form-control-lg form-control-solid
                  custom-input
                  mb-3 mb-lg-0
                  bg-white
                  custom-input borderc-secondary" ></textarea>                 
            </div>
          </div> </div>


            <div class="d-flex flex-row m-6 flex-wrap">
             
              <div class="col-12 col-lg-4 col-md-6 col-sm-12">
                <span class="font-bold">Priority</span>
                <div class="d-flex justify-content-start mt-4 ms-2">
                    <div class="form-check form-check-custom form-check-success form-check-solid form-check-sm">
                        <input class="form-check-input" type="radio" name="priority_remarks" id="Y" formControlName="priority_remarks" value="Y">
                        <label class="form-check-label text-gray-700 text-nowrap"
                            for="Low">Low</label>
                    </div>
                    <div class="form-check form-check-custom form-check-success form-check-solid form-check-sm ms-10">
                        <input class="form-check-input" type="radio" name="priority_remarks" formControlName="priority_remarks" value="N" id="N">
                        <label class="form-check-label text-gray-700 text-nowrap"
                            for="High">High</label>
                    </div>
                </div>
            </div>
 </div>
            <!--product summary-->
            <div class="table-responsive">
                <div class="card-header bg-lightblue card-height55">
                    <div class="card-title m-0">
                      <h5 class="fw-bolder text-blue">PRODUCT SUMMARY</h5>
                    </div>
                  </div>
                <form [formGroup]="productform" (ngSubmit)="productSubmit()">

                    <div class="card card-body table-responsive m-3 shadow-lg p-3 mb-5 bg-white rounded">
                        <table id="product_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
                            <thead>
                                <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                                    <th>Product Name</th>
                                    <th>Product Group</th>
                                    <th>Product Code</th>
                                    <th>unit</th>
                                    <th>Qty Requested</th>
                                    <th class="align-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr>
                                    <!--Product Group Dropdown-->
                                    <td>
                                        <div class="col-lg-12 col-12 col-md-11 col-sm-11 fv-row mt-2">
                                            <ng-select formControlName="product_name" [items]="products_list"
                                                required
                                                class="custom col-lg-12 col-12 col-md-11 col-sm-11 fv-row mt-2"
                                                bindLabel="product_name" placeholder="Select an option"
                                                (change)="GetOnChangeProductsName()"
                                                [(ngModel)]="mdlproduct"></ng-select>
                                        </div>
                                    </td>                                      
                                     <!--Product Code-->
                                    <td>
                                        <div class="col-lg-10 col-6 col-md-11 col-sm-11 fv-row mt-2">
                                            <input type="text" class="form-control" formControlName="productgroup_name"
                                                readonly style="background-color: #e9e7e7">
                                        </div>
                                    </td>
                                    <!--Product Name-->
                                    <td>                                       
                                        <div class="col-lg-6 col-12 col-md-11 col-sm-11 fv-row mt-2">
                                            <input type="text" class="form-control" formControlName="product_code"
                                                readonly style="background-color: #e9e7e7">
                                        </div>                                         
                                    </td>
                                    <!--Unit-->
                                    <td>
                                        <div class="col-lg-6 col-12 col-md-11 col-sm-11 fv-row mt-2">
                                            <input type="text" class="form-control" formControlName="productuom_name"
                                                readonly style="background-color: #e9e7e7;">
                                        </div>
                                    </td>
                                    <!--Requested Quantity-->
                                    <td>
                                        <div class="col-lg-6 col-12 col-md-11 col-sm-11 fv-row mt-2">
                                            <input type="text" class="
        form-control form-control-lg form-control-solid custom-input
        mb-3 mb-lg-0  borderc-secondary bg-white custom-input" formControlName="qty_requested" class="form-control" />
                                        </div>
                                    </td>
                                  
                                    <td class="text-center text-nowrap">
                                        <button title="Add" type="button" class="btn btn-icon btn-sm bg-success me-2"
                                            (click)="productSubmit()">
                                            <span Class="fa-solid fa-plus text-white  fs-6"></span></button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- <div class="modal" id="myModaldeletes" data-bs-backdrop="static" data-bs-keyboard="false">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="text-center my-4">
                                    <h2><b>Are you sure?</b></h2>
                                    <br>
                                    <p style="display: block;">Do You Want To Delete the Record ?</p>
                                    <div class="text-center my-4">
                                        <button class="btn-primary btn-sm text-white me-2" data-bs-dismiss="modal">
                                            <i class="fas fa-close text-white"></i> &nbsp;Close
                                        </button>&nbsp;
                                        <button class="btn-danger btn-sm text-white me-4" (click)="ondelete()"
                                            data-bs-dismiss="modal">
                                            <i class="fas fa-trash text-white fs-5 "></i> &nbsp;Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> -->
                </form>
            </div>

            <div class="table-responsive">
                <div class="card card-body table-responsive m-3 shadow-lg p-3 mb-5 bg-white rounded">
                    <table id="product_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
                        <thead>
                            <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                                <th>Product Name</th>
                                <th>Product Group</th>
                                <th>Product Code</th>
                                <th>Unit</th>
                                <th>Qty Requested</th>
                                <th class="align-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>


                            <tr *ngFor="let data of product_list; ">
                              
                                <td>{{data.product_name}}</td>
                                <td>{{data.productgroup_name}}</td>
                                <td>{{data.product_code}}</td>
                                <td>{{data.productuom_name}}</td>
                                <td>{{data.qty_requested}}</td>
                                <td>
                                    <button title="Delete" type="button"
                                        (click)="openModaldelete()" data-bs-toggle="modal"
                                        data-bs-target="#myModaldeletes"
                                        class="btn btn-icon btn-sm bg-danger me-1"><span
                                            class="fa-solid fa-trash text-white  fs-6"></span></button>&nbsp;
                                    <button title="Edit" type="button" (click)="openModaledit()"
                                        data-bs-toggle="modal" data-bs-target="#myModaledits"
                                        class="btn btn-icon btn-sm bg-warning me-1"><span
                                            class="fa-solid fa-pencil text-white  fs-6"></span></button>

                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
  
            
          <div class="text-center my-4">
            <button class="btn-sm text-white me-2"  
            [ngClass]="{
                'primary-button': !RaiseRequestForm.invalid,
                'secondary-button': RaiseRequestForm.invalid
              }" (click)="validate()">
              <i class="fas fa-check text-white fs-5"></i> &nbsp; Submit
            </button>
  
            <button class="btn-primary btn-sm text-white me-4" (click)="onclose()">
              <i class="fas fa-arrow-left"></i> &nbsp; Back
            </button>
          </div>
          </div>
        </div>
      </div> 
    </form>
  </div>
  
  