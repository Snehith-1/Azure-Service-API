<div class="card shadow-sm">

    <div class="row ms-3 mt-3 d-flex align-items-center">
        <div class="col">
            <h3 class="card-title">Assign Employee To Salary Grade</h3>
        </div>

        <div class="col me-5">
            <button title="Assign Template" class="btn-primary btn-sm text-white me-4 mb-2 mt-2 float-end"
                routerLink="/payroll/PayMstEmployee2gradeassign">
                <i class="fas fa-plus"></i> &nbsp;&nbsp;
                Assign Template</button>
        </div>
    </div>

    <div class="table-responsive">
        <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
            <div class="table-container">
                <table id="salarygrade_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
                    <thead>
                        <tr class="fw-bold fs-8 text-nowrap bg-lightblue text-blue align-middle">
                            <th>S.No</th>
                            <th>Branch</th>
                            <th>Department</th>
                            <th>Employee Name</th>
                            <th>Designation</th>
                            <th>Grade Name</th>
                            <th>Basic Salary</th>
                            <th>Additional Component</th>
                            <th>Gross Salary</th>
                            <th>Deduction Component</th>
                            <th>Other Component</th>
                            <th>Net Salary</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr *ngFor="let data of salarygrade_list; let i=index;" class="fs-8 align-middle">
                            <td>{{i+1}}</td>
                            <td>{{data.branch_name}}</td>
                            <td>{{data.department_name}}</td>
                            <td>{{data.user_name}}</td>
                            <td>{{data.designation_name}}</td>
                            <td>{{data.salarygradetemplate_name}}</td>
                            <td>{{data.basic_salary}}</td>

                            <td class="text-center text-nowrap">
                                <button type="button" title="Additional Component" (click)="showAdlCompOnEnter(data)"
                                    data-bs-toggle="modal" data-bs-target="#mymodelBank"
                                    class="btn btn-icon btn-sm bg-primary me-2">
                                    <span class="fa fa-question-circle fs-6"></span>
                                </button>
                            </td>

                            <td>{{data.gross_salary}}</td>
                            <td class="text-center text-nowrap">
                                <button type="button" title="Deduction Component"
                                    (click)="showAdlCompOnEnterdeduction(data)" data-bs-toggle="modal"
                                    data-bs-target="#mymodelBank" class="btn btn-icon btn-sm bg-primary me-2">
                                    <span class="fa fa-question-circle fs-6"></span>
                                </button>
                            </td>
                            <td class="text-center text-nowrap">
                                <button type="button" title="Other Component" (click)="showAdlCompOnEnterother(data)"
                                    data-bs-toggle="modal" data-bs-target="#mymodelBank"
                                    class="btn btn-icon btn-sm bg-primary me-2">
                                    <span class="fa fa-question-circle fs-6"></span>
                                </button>
                            </td>
                            <td>{{data.net_salary}}</td>
                            <td class="text-center text-nowrap">
                                <button title="View" type="button" class="btn btn-icon btn-sm bg-primary me-2"
                                    (click)="onview(data.employee2salarygradetemplate_gid)"><span
                                        class="fa-solid fa-eye text-white  fs-6"></span></button>
                                <button title="Edit" type="button" class="btn btn-icon btn-sm bg-success me-2"
                                    (click)="onedit(data.employee2salarygradetemplate_gid)"><span
                                        class="fa-solid fa-pencil text-white  fs-6"></span></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div class="modal" id="mymodelBank" style="margin-top: 150px;" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog " style="width: 95%;">
        <div class="modal-content">
            <div class="table-responsive">
                <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded d-flex">
                    <table id="" class="table table-striped table-row-bordered gy-5 gs-7">
                        <thead>
                            <tr class="fw-bold fs-5 bg-lightblue text-blue">
                                <th>Component Name</th>
                                <th>Employee Contribution</th>
                                <th>Employer Contribution</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr *ngFor="let data of addtional_component; let i=index;">
                                <td>{{data.salarycomponent_name}}</td>
                                <td>{{data.salarycomponent_amount}}</td>
                                <td>{{data.salarycomponent_amount_employer}}</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="text-center my-4">
                        <button class="btn-danger btn-sm text-white me-4" id="mymodelAddBank" (click)="onback()"
                            data-bs-dismiss="modal">
                            <i class="fa fa-arrow-left"></i> &nbsp;Back
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>