<div class="card rounded-top">
    <div class="card-title p-5 pb-6 pt-6 rounded-top bg-primary">
        <h3 class="fw-bolder text-white">
            <i class="fas fa-plus fw-bolder fs-3 me-4"></i>Holiday
        </h3>
    </div>

    <form [formGroup]="reactiveFormadd" #form="ngForm">

        <div class="d-flex flex-row m-6 flex-wrap">
            <div class="col-12 col-lg-4 col-md-6 col-sm-12 mt-2"><span>Holiday Date</span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="text"
                        class="form-control form-control-lg form-control-solid date-picker mb-3 mb-lg-0 bg-white custom-input borderc-secondary"
                        placeholder="DD-MM-YYYY" formControlName="Holiday_date" pattern="^(?!\s*$).+" />
                </div>
            </div>
            <div class="col-12 col-lg-4 col-md-6 col-sm-12 mt-2"><span class="font-bold">Holiday</span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="text" formControlName="holiday_name"
                        class="form-control form-control-lg form-control-solid bg-white custom-input mb-3 mb-lg-0 borderc-secondary"
                        placeholder="Enter Holiday" />
                </div>
            </div>

            <div class="col-12 col-lg-4 col-md-6 col-sm-12 mt-2"><span class="">Holiday Type</span>
                <div class="d-flex justify-content-start mt-4 ms-2">
                    <div class="form-check form-check-custom form-check-primary form-check-solid form-check-sm">
                        <input type="radio" name="holiday_type" value="NH" formControlName="holiday_type">
                        <label class="form-check-label text-gray-700 text-nowrap"
                            for="kt_builder_header_content_menu">NH</label>
                    </div>
                    <div class="form-check form-check-custom form-check-primary form-check-solid form-check-sm ms-10">
                        <input type="radio" name="holiday_type" value="FH" formControlName="holiday_type">
                        <label class="form-check-label text-gray-700 text-nowrap"
                            for="kt_builder_header_content_menu">FH</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex flex-row m-6 flex-wrap">
            <div class="col-12 col-lg-4 col-md-6 col-sm-12 mt-2"><span class="font-bold">Remarks</span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <textarea type="text" rows="1"
                        class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 border-secondary bg-white custom-input"
                        placeholder="" formControlName="holiday_remarks" rows="3"></textarea>
        
                </div>
            </div>
        
            <div class="col-12 col-lg-6 col-md-6 col-sm-12 mt-2">
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-8 ">
                    <button type="button" class="btn-primary" (click)="Addholiday()" style="margin-left: 20px;">ADD</button>
                </div>
            </div>
        </div>
    </form>
    <div class="table-responsive">
        <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded">
            <table id="addproformainvoice" class="table table-striped table-row-bordered border-bottom gs-7">
                <thead>
                    <tr class="fw-bolder fs-7 text-nowrap bg-lightblue text-blue align-middle">
                        <th>Date</th>
                        <th>Holiday</th>
                        <th>Holiday Type</th>
                        <th>Remarks</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr *ngFor="let data of Holidaygradecode_list; let i=index;" class="align-middle">
                        <th >{{data.holiday_date}}</th>
                        <th >{{data.holiday_name}}</th>
                        <th >{{data.holiday_type}}</th>
                        <th >{{data.holiday_remarks}}</th>
                        <td title="Action">
                            <button title="Delete" type="button" class="btn btn-icon btn-sm bg-danger me-2"
                            data-bs-toggle="modal" data-bs-target="#myModaldelete"(click)="openModaldelete(data.holiday_gid)">
                            <span class="fa-solid fa-trash fs-6" style="color: #ffffff;"></span>
                        </button>    
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="text-center my-4">     
  
        <button class="btn-primary btn-sm text-white me-4" routerLink="/hrm/HrmMstHolidaygradeManagement">
          <i class="fas fa-arrow-left me-3"></i>Back
        </button>
    </div>

<div class="modal" id="myModaldelete" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog del_modal-dialog">
      <div class="modal-content del_modal-content">
        <div class="text-center my-4">
          <h2><b>Are you sure?</b></h2>
          <p style="display: block;">Do You Want To Delete the Record ?</p>
          <div class="text-center my-4">
            <button class="btn-danger btn-sm text-white me-4" (click)="ondelete()"  data-bs-dismiss="modal">
              <i class="bi bi-trash-fill text-white fs-5 me-2"></i>Delete
            </button>
            <button class="btn-primary btn-sm text-white me-2" data-bs-dismiss="modal">
              <i class="fas fa-close text-white me-2"></i>Close
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>