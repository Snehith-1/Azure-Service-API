
<div class="m-20" >
<div class="m-5"  *ngFor="let m of Viewcustomersummary_list">
   
      <div class="card shadow-lg rounded-top"    style="top:-50px;">
       <div class="card-title p-5 pb-6 pt-6 rounded-top bg-lightblue" >
           <h3 class="fw-bolder text-blue text-white"><i class="fas fa-eye fw-bolder fs-3"></i> &nbsp;&nbsp;&nbsp;View Customer </h3>
         </div>
         <div class="d-flex flex-row m-3 mt-6 flex-wrap border-bottom" >
          <div class="col-12 col-lg-3 col-md-6 col-sm-12 "><span class="fw-bold">Customer Code </span>
           <p class="mt-3">{{m.customer_id}}</p>
          </div>
          <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Customer Name </span>
           <p class="mt-3">{{m.customer_name}}</p>
          </div>
          <div class="col-12 col-lg-3 col-md-6 col-sm-12"> <span class="fw-bold">Company Website </span>
           <p class="mt-3">{{m.company_website}}</p>
           </div> 
          <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Branch Name </span>
           <p class="mt-3">{{m.customer_code}}</p>
          </div>
         </div>
         <div class="d-flex flex-row m-3 mt-6 flex-wrap border-bottom" >
          <div class="col-12 col-lg-3 col-md-6 col-sm-12 "><span class="fw-bold">Currency Code </span>
           <p class="mt-3">{{m.currency_code}}</p>
          </div>
          <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">GST Number </span>
           <p class="mt-3">{{m.gst_number}}</p>
          </div>
          <div class="col-12 col-lg-3 col-md-6 col-sm-12"> <span class="fw-bold">Contact Person Name </span>
           <p class="mt-3">{{m.customercontact_name}}</p>
           </div> 
          <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Designation </span>
           <p class="mt-3">{{m.designation}}</p>
          </div>
         </div>

         <div class="d-flex flex-row m-3 mt-6 flex-wrap border-bottom" >
          <div class="col-12 col-lg-3 col-md-6 col-sm-12 "><span class="fw-bold">Mobile Number</span>
           <p class="mt-3">{{m.mobile}}</p>
          </div>
          <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Email Address </span>
           <p class="mt-3">{{m.email}}</p>
          </div>
          <div class="col-12 col-lg-3 col-md-6 col-sm-12"> <span class="fw-bold">Address Line 1</span>
           <p class="mt-3">{{m.customer_address}}</p>
           </div> 
          <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Address Line 2 </span>
           <p class="mt-3">{{m.customer_address2}}</p>
          </div>
         </div>

         <div class="d-flex flex-row m-3 mt-6 flex-wrap border-bottom" >
          <div class="col-12 col-lg-3 col-md-6 col-sm-12 "><span class="fw-bold">City</span>
           <p class="mt-3">{{m.customer_city}}</p>
          </div>
          <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">State </span>
           <p class="mt-3">{{m.customer_state}}</p>
          </div>
          <div class="col-12 col-lg-3 col-md-6 col-sm-12"> <span class="fw-bold">Country</span>
           <p class="mt-3">{{m.country_name}}</p>
           </div> 
          <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Postal Code </span>
           <p class="mt-3">{{m.customer_pin}}</p>
          </div>
         </div>

         <div class="d-flex flex-row m-3 mt-6 flex-wrap border-bottom" >
          <div class="col-12 col-lg-3 col-md-6 col-sm-12 "><span class="fw-bold">Region</span>
           <p class="mt-3">{{m.region_name}}</p>
          </div>
          <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Telephone No </span>
           <p class="mt-3">{{m.phone}}</p>
          </div>
          <div class="col-12 col-lg-3 col-md-6 col-sm-12"> <span class="fw-bold">Fax</span>
           <p class="mt-3">{{m.fax}}</p>
           </div> 
         </div>
         

         <div class="text-center my-4">
            <button class="btn-primary btn-sm text-white me-4 mt-3" routerLink="/smr/SmrTrnCustomerSummary">
              <i class="fas fa-arrow-left"></i> &nbsp;Back
            </button>
            
             </div>
           
      </div>
    </div>
</div> 