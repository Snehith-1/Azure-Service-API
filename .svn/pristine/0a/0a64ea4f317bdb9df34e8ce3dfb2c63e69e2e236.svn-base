<div class="card shadow-sm">

    <div class="row ms-3 mt-3 d-flex align-items-center">
        <div class="col">
            <h3 class="card-title"> Team</h3>
        </div>

        <div class="col me-5">
            <button title="Add Team" class="btn-primary btn-sm text-white me-4 mb-2 mt-2 float-end"
                data-bs-toggle="modal" (click)="openteampopup()" data-bs-target="#addteammaster">
                <i class="fas fa-plus"></i> &nbsp;&nbsp;
                Add Team</button>
        </div>
    </div>


    <div class="card card-body m-3 shadow-lg p-3 p-md-3 mb-5 bg-white table-responsive rounded">
        <table id="Teamtable" class="table table-striped table-row-bordered gy-5 gs-7 ">
            <thead>
                <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                    <th>S.No</th>
                    <th>Team Name</th>
                    <th>Team Manager</th>
                    <th>Team Members</th>
                    <th>Created Date</th>
                    <th>Created By</th>
                    <th>Status</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr *ngFor="let data of  TeamMaster_list  let i=index;">
                    <td>{{i+1}}</td>
                    <td>{{data.team_name}}</td>
                    <td>{{data.teammanager_name}}</td>
                    <td class="text-center">
                        <label data-bs-toggle="modal" data-bs-target="#memberpopup" (click)="members(data.team_gid)"><i
                                class="fas fa-question-circle fa-5x text-primary fs-3"></i></label>
                    </td>
                    <td>{{data.created_date}}</td>
                    <td>{{data.created_by}}</td>
                    <td [ngSwitch]="data.status">
                        <label *ngSwitchCase="'Active'" class="badge bg-success text-white ">Active</label>
                        <label *ngSwitchCase="'Inactive'" class="badge bg-warning text-white ">Inactive</label>
                    </td>
                    <td [ngSwitch]="data.status" class="text-center text-nowrap"> <!--[ngSwitch]="data.status" -->
                        <button title="Edit" type="button" class="btn btn-icon btn-sm bg-info me-2"
                            [disabled]="data.status === 'Inactive'" data-bs-toggle="modal" data-bs-target="#editmodal"
                            (click)="editteam(data.team_gid)"><span
                                class="fa-solid fa-pencil text-white  fs-6"></span></button>
                        <!--(click)="editEntity(data.entity_gid)"-->
                        <button *ngSwitchCase="'Active'" title="Status" type="button"
                            (click)="Status_Click(data.team_gid)" class="btn btn-icon btn-sm bg-success me-2"
                            data-bs-target="#update_modal" data-bs-toggle="modal"><span
                                class="bi-hand-thumbs-up-fill text-white fs-6"></span></button>
                        <!--*ngSwitchCase="'Active'"--> <!--(click)="Status_update(data.entity_gid)"-->
                        <button *ngSwitchCase="'Inactive'" title="Status" type="button"
                            (click)="Status_Click(data.team_gid)" class="btn btn-icon btn-sm bg-warning me-2"
                            data-bs-target="#update_modal" data-bs-toggle="modal"><span
                                class="bi-hand-thumbs-down-fill text-white fs-6"></span></button>
                        <!--*ngSwitchCase="'Inactive'"--> <!--(click)="Status_update(data.entity_gid)"-->
                        <button title="Delete" type="button" class="btn btn-icon btn-sm bg-danger me-2"
                            (click)="delete(data.team_gid)" data-bs-toggle="modal"
                            data-bs-target="#Teammasterdelete"><span
                                class="fa-solid fa-trash text-white  fs-6"></span></button>
                        <!--(click)="delete(data.entity_gid)"-->
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Add popup -->

    <div class="modal fade" tabindex="-1" id="addteammaster" data-bs-backdrop='static'>
        <div class="modal-dialog modal-dialog-centered ">
            <div class="modal-content ">
                <div class=" bg-primary rounded-top">
                    <h3 class="p-4 pt-5 text-white "> Add Team</h3>

                </div>
                <form (ngSubmit)="addTeam()" [formGroup]="TeamAddForm">
                    <div class="modal-body">

                        <div class="mb-4">
                            <label for="exampleFormControlInput1" class="required fw-bold mb-1">Team Name</label>
                            <input type="text"
                                class="form-control form-control-lg form-control-solid borderc-secondary bg-white custom col-lg-12 col-12 col-md-11 col-sm-11 fv-row "
                                formControlName="txtteam_name" [(ngModel)]="addTeamFormData.txtteam_name"
                                pattern="^(?!\s*$).+"
                                [ngStyle]="{'border-color': TeamAddForm.invalid && TeamAddForm.touched ? 'red' : 'rgb(209, 209, 209)'}"
                                [class.is-invalid]="TeamAddForm.invalid && (TeamAddForm.dirty || TeamAddForm.touched)"
                                placeholder="Team Name" />
                            <div *ngIf="TeamAddForm.get('txtteam_name')?.hasError('required') && TeamAddForm.get('txtteam_name')?.touched || TeamAddForm.get('txtteam_name')?.hasError('pattern')"
                                class="invalid-feedback"
                                style="color: red; width: 200px; margin-top: 1px; margin-left: 8px; font-size: 11px;">*
                                Team Name is required</div>
                        </div>


                        <!-- Single dropdown -->
                        <div class="mb-4">
                            <label class="required fw-bold mb-1">Team Manager</label>
                            <ng-select bindLabel="employee_name" pattern="^(?!\s*$).+"
                                [(ngModel)]="addTeamFormData.dpteammanager" formControlName="dpteammanager"
                                [items]="managerlists" class="custom col-lg-12 col-12 col-md-11 col-sm-11 fv-row "
                                placeholder="Select an option">
                            </ng-select>
                            <div *ngIf="TeamAddForm.get('dpteammanager')?.hasError('required') && TeamAddForm.get('dpteammanager')?.touched || TeamAddForm.get('dpteammanager')?.hasError('pattern')"
                                class="text-red">
                                Team Manager is required.
                            </div>
                        </div>
                        <!-- Multiple dropdown -->
                        <div class="mb-4">
                            <label for="exampleFormControlInput1" class="required fw-bold mb-1">Team Member</label>
                            <ng-select bindLabel="employee_name" [items]="memberslists"
                                [(ngModel)]="addTeamFormData.dpteammember" formControlName="dpteammember"
                                [multiple]="true" class="custom col-lg-12 col-12 col-md-11 col-sm-11 fv-row "
                                placeholder="Select an option">
                            </ng-select>
                            <div *ngIf="TeamAddForm.get('dpteammember')?.hasError('required') && TeamAddForm.get('dpteammember')?.touched"
                                class="text-red">
                                Team Member is required.
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn-success text-white" data-bs-dismiss="modal"
                                [disabled]="TeamAddForm.invalid"><i class="fas fa-check text-white fs-5"></i>&nbsp;
                                Submit
                            </button> &nbsp;
                            <button type="button" class="btn-danger " data-bs-dismiss="modal"><i
                                    class="fa fa-close fs-5 text-center"></i>&nbsp;
                                Close
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <!-- Edit popup -->

    <div class="modal fade" tabindex="-1" id="editmodal" data-bs-backdrop='static'>
        <div class="modal-dialog modal-dialog-centered  ">
            <div class="modal-content ">
                <div class=" bg-primary rounded-top">
                    <h3 class="p-4 pt-5 text-white "> <i class="fas fa-plus fs-5"></i>&nbsp;&nbsp;&nbsp; Edit Team</h3>

                </div>

                <div class="modal-body">
                    <form (ngSubmit)="UpdateTeam()" [formGroup]="TeamEditForm">
                        <div class="mb-4">
                            <label for="teamname" class="required fw-bold mb-1">Team Name</label>
                            <input type="text" pattern="^(?!\s*$).+" formControlName="txteditteamname"
                                [(ngModel)]="editTeamFormData.txteditteamname"
                                class=" form-control form-control-solid borderc-secondary bg-white custom col-lg-6  col-md-11 col-sm-11 fv-row mt-2"
                                placeholder="Enter Team Name" />
                            <div *ngIf="TeamEditForm.get('txteditteamname')?.hasError('required') && TeamEditForm.get('txteditteamname')?.touched || TeamEditForm.get('txteditteamname')?.hasError('pattern') "
                                class="text-red">
                                Team Name is required.
                            </div>
                        </div>
                        <!-- Single dropdown -->
                        <div class="mb-4">
                            <label class="required fw-bold mb-1">Team Manager</label>
                            <!--[items]="managerlists"  bindLabel="employee_name"  bindValue="dpoptions"-->
                            <ng-select class="custom col-lg-12 col-12 col-md-11 col-sm-11 fv-row "
                                [items]="memberslists" bindLabel="employee_name" formControlName="cboediteammanager"
                                [(ngModel)]="editTeamFormData.cboediteammanager" placeholder="Select an option">
                            </ng-select>
                            <div *ngIf="TeamEditForm.get('cboediteammanager')?.hasError('required') && TeamEditForm.get('cboediteammanager')?.touched || TeamEditForm.get('cboediteammanager')?.hasError('pattern')"
                                class="text-red">
                                Team Manager is required.
                            </div>
                        </div>
                        <!-- Multiple dropdown -->
                        <div class="mb-4">
                            <label for="exampleFormControlInput1" class="required fw-bold mb-1">Team Member</label>
                            <!--bindLabel="employee_name" [items]="memberslists" bindValue="dpoptions"-->
                            <ng-select [multiple]="true" bindLabel="employee_name" formControlName="cboeditteammembers"
                                [items]="memberslists" [(ngModel)]="editTeamFormData.cboeditteammembers"
                                class="custom col-lg-12 col-12 col-md-11 col-sm-11 fv-row "
                                placeholder="Select options">
                            </ng-select>
                            <div *ngIf="TeamEditForm.get('cboeditteammembers')?.hasError('required') && TeamEditForm.get('cboeditteammembers')?.touched || TeamEditForm.get('cboeditteammembers')?.hasError('pattern')"
                                class="text-red">
                                Team Member is required.
                            </div>

                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn-success text-white" [disabled]="TeamEditForm.invalid"
                                data-bs-dismiss="modal"><i class="fas fa-check text-white fs-5"></i>&nbsp;
                                Update
                            </button> &nbsp;
                            <button type="button" class="btn-danger " data-bs-dismiss="modal"><i
                                    class="fa fa-close fs-5 text-center"></i>&nbsp;
                                Close
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!--Team Member Popup-->

    <div class="modal fade" id="memberpopup" tabindex="-1" data-bs-backdrop='static'
        aria-labelledby="editamlcategoryLabel" aria-hidden="true">

        <div class="modal-dialog modal-lg modal-dialog-centered">

            <div class="modal-content">
                <div class="modal-header bg-primary ">
                    <h4 class="modal-title text-white"> Team Members</h4>
                </div>

                <div class="modal-body">

                    <tbody>

                        <tr>
                            <td style="width:2%; text-align:left"><b> Members</b> <br /></td>
                        </tr>
                        <tr style="text-align: left;height:20px;">
                            <td data-title="Team Members">{{membernames}} </td>
                        </tr>
                    </tbody>

                </div>

                <div class="text-center contain">

                    <button type="button" class="btn-danger mb-5 " data-bs-dismiss="modal"><i
                            class="fa fa-close fs-5 text-center"></i>&nbsp;
                        Close
                    </button>

                </div>

            </div>

        </div>

    </div>


    <!-- Status Update -->
    <div class="modal fade" id="update_modal" data-bs-backdrop='static' tabindex="-1"
        aria-labelledby="statuschangeLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content ">
                <div class="modal-header bg-primary ">
                    <h4 class="modal-title text-white"><i class="bi bi-hand-thumbs-up-fill fs-3"></i>&nbsp;&nbsp; Status
                    </h4>
                </div>
                <form (ngSubmit)="update_status()" [formGroup]="TeamStatusForm">
                    <div class="modal-body">
                        <div class="mb-3 text-start">
                            <label>Team Name </label> &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;
                            {{statusTeamFormData.txtteam_name}}
                        </div>
                        <div class="d-flex justify-content-start mt-4">
                            <label>Status</label>
                            <div class="form-check ps-20 ms-10 ">
                                <input value="Y" type="radio" [(ngModel)]="statusTeamFormData.rbo_status"
                                    formControlName="rbo_status" data-toggle="toggle"> <!--[(ngModel)]="rbo_status"-->
                                <label class="ms-3" for="flexRadioDefault1">
                                    Active
                                </label>
                            </div>
                            <div class="form-check">
                                <input value="N" type="radio" [(ngModel)]="statusTeamFormData.rbo_status"
                                    formControlName="rbo_status" data-toggle="toggle" checked>
                                <!-- [(ngModel)]="rbo_status" -->
                                <label class="ms-3" for="flexRadioDefault2">
                                    Inactive
                                </label>
                            </div>
                        </div>
                        <br>
                        <div class="form-group text-start">
                        </div>
                        <label for="exampleFormControlTextarea2" class="required">Remarks </label> <br>
                        <textarea class="form-control rounded-0" [(ngModel)]="statusTeamFormData.txtremarks"
                            formControlName="txtremarks" ng-trim="true" id="exampleFormControlTextarea2" rows="3"
                            pattern="^(?!\s*$).+"></textarea> <!-- [(ngModel)]="txtremarks"-->
                    </div>
                    <div class="text-center contain">
                        <button type="submit" class=" btn-success" data-bs-dismiss="modal"
                            [disabled]="TeamStatusForm.invalid"> <i class="fas fa-check"></i>&nbsp;&nbsp;Update</button>
                        &nbsp; <!--(click)="update_status()" -->
                        <button type="button" class=" btn-danger" data-bs-dismiss="modal"><i
                                class="fa fa-close fs-5 text-center"></i> &nbsp;&nbsp;Close</button>
                        <br /><br>
                        <div class="table-responsive ms-5 me-5">
                            <div class="table">
                                <table class="table table-hover ">
                                    <thead>
                                        <tr class="tableheading fw-bold bg-lightblue">
                                            <th>S.No</th>
                                            <th>Status</th>
                                            <th>Updated By</th>
                                            <th>Updated Date</th>
                                            <th>Remarks</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr *ngFor="let data of Teaminactivelog_data ; let i=index;">
                                            <td>{{i+1}}</td>
                                            <td [ngSwitch]="data.status">
                                                <label *ngSwitchCase="'Active'">Active</label>
                                                <label *ngSwitchCase="'Inactive'">Inactive</label>
                                            </td>
                                            <td>{{data.updated_by}}</td>
                                            <td>{{data.updated_date}}</td>
                                            <td>{{data.remarks}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>

    </div>

</div>
<div class="modal mt-20" id="Teammasterdelete" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog del_modal-dialog">
        <div class="modal-content del_modal-content">
            <div class="text-center my-4">
                <h2><b>Are you sure?</b></h2>
                <p style="display: block;">Do You Want To Delete the Record ?</p>
                <div class="text-center my-4">
                    <button class="btn-danger btn-sm text-white me-4" (click)="ondelete()" data-bs-dismiss="modal">
                        <i class="bi bi-trash-fill text-white fs-5 me-2"></i>Delete
                    </button>
                    <button class="btn-primary btn-sm text-white me-2" data-bs-dismiss="modal">
                        <i class="fas fa-close text-white me-2"></i>Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>