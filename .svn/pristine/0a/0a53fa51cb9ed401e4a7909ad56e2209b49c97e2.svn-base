
<div class="card">
    <div class="row ms-3 mt-3 d-flex align-items-center">
        <div class="col">
          <h3 class="card-title">Open DC</h3>
        </div>
        <div class="col me-5">
          <button type="button" class="btn-primary btn-sm text-white me-4 float-end" data-bs-toggle="modal"
            data-bs-target="#myModaladd" routerLink="/ims/ImsTrnOpendcAddselect"><i class="fas fa-plus"></i>&nbsp;&nbsp;
            RAISE OPEN DC
          </button>
        </div>
      </div> 
    <div class="table-responsive">
        <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded">
          <table id="opndcsummary_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
            <thead>
              <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                <th>S.NO </th>
                <th>DO Date</th>
                <th>DO Reference .No</th>
                <th>Customer  </th>
                <th>Details </th>
                <th>Contact Details </th>
                <th>Created By</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <tr *ngFor="let data of opndcsummary_list; let i=index;" >
                <td>{{i+1}}</td>
                <td>{{data.directorder_date}}</td>
                <td>{{data.directorder_refno}}</td> 
                <td>{{data.customer_name}}</td>
                <td>{{data.delivery_details}}</td>  
                <td>{{data.contact}}</td>       
                <td>{{data.user_firstname}}</td>
                <td>{{data.delivery_status}}</td>
                <td class="text-center text-nowrap">
         
                  <button title="Pdf" type="button" data-bs-toggle="modal" data-bs-target="#myModalPdf"
                  class="btn btn-icon btn-sm bg-danger me-2"><span
                      class="fa-solid fa-file text-white  fs-6" (click)="PrintPDF(data.directorder_gid)"></span></button>


              </td>
    
           
                
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    
