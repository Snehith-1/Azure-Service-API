<div class="m-12 " *ngFor="let m of ViewVendorregister_list">

    <div class="m-12 " >
    <div class="card shadow-lg rounded-top"    style="top:-50px;">
     <div class="card-title p-5 pb-6 pt-6 rounded-top bg-lightblue" >
         <h3 class="fw-bolder text-blue text-white"><i class="fas fa-eye fw-bolder fs-3"></i> &nbsp;&nbsp;&nbsp;View Vendor </h3>
       </div>
    
  
    <div class="d-flex flex-row m-3 mt-6 flex-wrap border-bottom" >
     <div class="col-12 col-lg-3 col-md-6 col-sm-12 "><span class="fw-bold">Vendor Code </span>
      <p class="mt-3">{{m.vendor_code}}</p>
     </div>
     <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Vendor Company Name </span>
      <p class="mt-3">{{m.vendor_companyname}}</p>
     </div>
     <div class="col-12 col-lg-3 col-md-6 col-sm-12"> <span class="fw-bold">Contact Person Name </span>
      <p class="mt-3">{{m.contactperson_name}}</p>
      </div> 
     <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Contact Number </span>
      <p class="mt-3">{{m.contact_telephonenumber}}</p>
     </div>
    </div>
  
     <div class="d-flex flex-row m-3 mt-2 flex-wrap border-bottom">
       
        <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Address I </span>
          <p class="mt-3">{{m.address1}}</p>
        </div>
        <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Address II</span>
          <p class="mt-3">{{m.address2}}</p>
        </div>
        <div class="col-12 col-lg-3 col-md-6 col-sm-12 "><span class="fw-bold">City</span>
            <p class="mt-3">{{m.city}}</p>
     </div>
           <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Postal code</span>
            <p class="mt-3">{{m.postal_code}}</p>
           </div>
    
     </div>
     <div class="d-flex flex-row m-3 mt-2 flex-wrap border-bottom">
       
        <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Country </span>
          <p class="mt-3">{{m.country_name}}</p>
        </div>
        <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Currency</span>
          <p class="mt-3">{{m.currency_code}}</p>
        </div>
        <div class="col-12 col-lg-3 col-md-6 col-sm-12 "><span class="fw-bold">Tax</span>
            <p class="mt-3">{{m.tax_name}}</p>
     </div>
           <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Email</span>
            <p class="mt-3">{{m.email_id}}</p>
           </div>
    
     </div>
     <div class="d-flex flex-row m-3 mt-2 flex-wrap border-bottom">
       
        <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Fax </span>
          <p class="mt-3">{{m.fax}}</p>
        </div>
        <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">State</span>
          <p class="mt-3">{{m.state}}</p>
        </div>
     </div>
  
  
   
   
  <div class="text-center my-4">
  <button class="btn-primary btn-sm text-white me-4 mt-3" routerLink="/pmr/PmrMstVendorregister">
    <i class="fas fa-arrow-left"></i> &nbsp;Back
  </button>
  
   </div>
  </div>
  </div>
  </div>
 