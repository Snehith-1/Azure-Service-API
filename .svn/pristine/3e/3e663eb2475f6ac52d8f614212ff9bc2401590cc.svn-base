<div class="m-5">
    <div class="card card-body">
        <div class="card-header bg-lightblue card-height55" style="border-radius: 0px;">
            <div class="card-title m-0">
                <h5 class="fw-bolder text-blue">RAISE OPEN DC</h5>
            </div>
        </div>
        <form [formGroup]="combinedFormData" (ngSubmit)="OnDelDcSubmit()">
            <div class="d-flex flex-row m-6 flex-wrap" *ngFor="let data of opendcaddsel_list;">
                <div class="col-6 col-lg-4 col-md-6 col-sm-12"><b> DO Reference No</b>
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <p>{{data.directorder_refno}}</p>
                    </div>
                </div>
                <div class="col-12 col-lg-4 col-md-6 col-sm-12"><b>DO Date</b> <span class="ms-1 text-red">*</span>
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <p>{{data.directorder_date}}</p>
                    </div>
                </div>
                <div class="col-12 col-lg-4 col-md-6 col-sm-12"><b>Customer Name <span
                            class="ms-1 text-red">*</span></b>
                    <div class="col-lg-12 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <p>{{data.customercontact_name}}</p>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-row m-6 flex-wrap" *ngFor="let data of opendcaddsel_list;">
                <div class="col-12 col-lg-4 col-md-6 col-sm-12"><b>Customer Branch</b>
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <p>{{data.customer_code}}</p>
                    </div>
                </div>
                <div class="col-12 col-lg-4 col-md-6 col-sm-12"><b>Contact Person<span
                            class="ms-1 text-red">*</span></b>
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <p>{{data.customer_contact_person}}</p>
                    </div>
                </div>
                <div class="col-12 col-lg-4 col-md-6 col-sm-12"><b>Email Address</b>
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <p>{{data.customer_email}}</p>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-row m-6 flex-wrap" *ngFor="let data of opendcaddsel_list;">
                <div class="col-12 col-lg-4 col-md-6 col-sm-12"><b>Contact Number</b>
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <p>{{data.customer_mobile}}</p>
                    </div>
                </div>
                <div class="col-12 col-lg-4 col-md-6 col-sm-12"><b>SO Reference No<span
                            class="ms-1 text-red">*</span></b>
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <p>{{data.salesorder_gid}}</p>
                    </div>
                </div>
                <div class="col-12 col-lg-4 col-md-6 col-sm-12"><b>Customer Address</b>
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <textarea type="text" rows="1"
                            class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0  borderc-secondary bg-white custom-input"
                            formControlName="customer_address_so" class="form-control"></textarea>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-row m-6 flex-wrap">
                <div class="col-6 col-lg-4 col-md-6 col-sm-12"><b>Shipping To<span class="ms-1 text-red">*</span></b>
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <textarea type="text" rows="1"
                            class="form-control form-control-md form-control-solid custom-input mb-3 mb-lg-0  borderc-secondary bg-white custom-input"
                            formControlName="shipping_to" class="form-control"></textarea>
                    </div>
                </div>
                <div class="col-6 col-lg-4 col-md-6 col-sm-12"><b>DC No</b>
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <input type="text"
                            class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 borderc-secondary bg-white custom-input"
                            formControlName="dc_no" class="form-control" />

                    </div>
                </div>
                <div class="col-6 col-lg-4 col-md-6 col-sm-12"><b>Mode Of Despatch</b>
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <input type="text"
                            class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 borderc-secondary bg-white custom-input"
                            formControlName="despatch_mode" class="form-control" />

                    </div>
                </div>
            </div>
            <div class="d-flex flex-row m-6 flex-wrap">
                <div class="col-6 col-lg-8 col-md-6 col-sm-12"><b>Tracker ID<span class="ms-1 text-red">*</span></b>
                    <div class="col-lg-6 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <input type="text"
                            class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 borderc-secondary bg-white custom-input"
                            formControlName="tracker_id" class="form-control" />

                    </div>
                </div>
            </div>


            
                <div class="card-header bg-lightblue card-height55" style="border-radius: 0px;">
                    <div class="card-title m-0">
                        <h5 class="fw-bolder text-blue">Product Summary</h5>
                    </div>
                </div>
                <div class="table-responsive">
                    <div class="card card-body m-0 shadow-lg p-3 mb-5 bg-white rounded table-responsive">
                        <table id="product" class="table table-striped table-row-bordered gy-4 gs-2">
                            <thead class="table_head">
                                <tr class="text-white fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                                    <th>S.No</th>
                                    <th>Product Group</th>
                                    <th>Product & Description</th>
                                    <th>Unit</th>
                                    <th>Quantity Ordered</th>
                                    <th>Quantity Delivered</th>
                                    <th>Despatch Quantity</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr *ngFor="let data of opendcaddselprod_list; let i=index;">
                                    <td>{{i+1}}</td>
                                    <td>{{data.productgroup_name}}</td>
                                    <td>
                                        <div class="container">
                                            <div class="row">
                                                {{data.product_name}}
                                            </div>
                                            <div class="row">
                                                {{data.display_field}}
                                            </div>
                                        </div>
                                    </td>
                                    <td>{{data.uom_name}}</td>
                                    <td style="text-align:center;">{{data.qty_quoted}}</td>
                                    <td style="text-align: center;">{{data.available_quantity}}</td>
                                    <td>
                                        <input type="text"
                                            class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 borderc-secondary bg-white custom-input"
                                            formControlName="despatch_quantity" class="form-control" />

                                    </td>

                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
                <div class="card-header bg-lightblue card-height55">
                    <div class="card-title m-0">
                        <h5 class="fw-bolder text-blue">Terms and Conditions</h5>
                    </div>
                </div>
                <ng-select class="custom col-lg-5 m-12 col-12 fv-row mt-2" bindLabel="template_name"
                    formControlName="template_name" bindValue="template_gid" placeholder="Select an option"></ng-select>
                <div class="d-flex flex-row m-12 flex-wrap table-responsive">
                    <div class="col-12 col-lg-12 col-md-10  col-sm-10 fv-row">
                        <angular-editor [config]="config" formControlName="termsandconditions"></angular-editor>
                    </div>
                </div>

                <div class="text-center my-4">
                    <button type="submit" class="btn-success btn-sm text-white me-2">
                        <i class="bi bi-check-square fs-5"></i>
                        <span class="ms-3">Submit</span> </button>
                    <button class="btn-primary btn-sm text-white me-4">
                        <i class="fas fa-arrow-left"></i> &nbsp; Back
                    </button>
                </div>
            
        </form>
    </div>
</div>