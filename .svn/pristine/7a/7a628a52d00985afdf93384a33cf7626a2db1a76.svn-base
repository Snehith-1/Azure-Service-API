<!-- begin::Add Invoice -->
<div class="card m-3">
  <!-- begin::Heading -->
  <div class="card-header bg-lightblue card-height55">
    <div class="card-title m-0">
      <h5 class="fw-bolder text-blue">Invoice</h5>
    </div>
  </div>
  <!-- end::Heading -->

  <!-- begin:: Invoice Add Form-->
  <form [formGroup]="invoiceform" (ngSubmit)="onSubmit()">
    <!-- begin:: Invoice buyer form-->
    <!-- begin:: Invoice buyer heading-->
    <div class="header mt-4" style="border-radius: 0px; height: 30px; background-color: #ebebeb;">
      <div class="title">
        <h5 class="fw-bolder text-blue" style="padding: 7px; margin-left: 15px;"><u>Buyer Details</u></h5>
      </div>
    </div>
    <!-- end:: Invoice buyer heading-->

    <!-- begin:: Invoice buyer fields-->
    <div class="d-flex flex-row m-6 flex-wrap">
      <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Customer Name<span style="color: red"> *</span></b>
        <button type="button" style="background-color: #009ef7; color: white; border: none; border-radius: 4px; font-size: 10px; font-weight: bold; padding: 2px; margin-left: 13px; width: 50px; height: 18px;" [routerLink]="['/einvoice/CrmMstCustomerAdd']" routerLinkActive="router-link-active">Add</button>
        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
          <select class="form-select form-select-solid bg-white form-select-lg custom-input select2" formControlName="customergid" (change)="customerDetailsFetch()" [ngStyle]="{'border-color': cusnameControl.invalid && cusnameControl.touched ? 'red' : 'rgb(209, 209, 209)'}" pattern="^(?!\s*$).+" [class.is-invalid]="cusnameControl.invalid && (cusnameControl.dirty || cusnameControl.touched)">
            <option value="" disabled selected>Select Customer Name</option>
            <option *ngFor="let customername of customernamelist" [value]="customername.customergid">{{customername.customername}}</option>
          </select>
          <div *ngIf="cusnameControl.invalid && cusnameControl.touched" class="invalid-feedback">
            <div *ngIf="cusnameControl.hasError('required')" style="color: red; width: 200px; margin-top: 1px; margin-left: 8px; font-size: 11px;">* Customer name is required</div>
          </div>
        </div>
      </div>

      <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Customer Branch</b>
        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2 d-flex">
          <input type="text" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 borderc-secondary custom-input mt-1" readonly formControlName="customer_branch" style="background-color: #e9e7e7;" />
        </div>
      </div>

      <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Contact Person</b>
        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2 d-flex">
          <input type="text" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 borderc-secondary custom-input mt-1" readonly formControlName="customercontactperson" style="background-color: #e9e7e7;" />
        </div>
      </div>

      <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Contact Number</b>
        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2 d-flex">
          <input type="text" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 borderc-secondary custom-input mt-1" readonly formControlName="customercontactnumber" style="background-color: #e9e7e7;" />
        </div>
      </div>
    </div>

    <div class="d-flex flex-row m-6 flex-wrap">
      <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Email Address</b>
        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2 d-flex">
          <input type="text" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 borderc-secondary custom-input" readonly formControlName="customeremailaddress" style="background-color: #e9e7e7;" />
        </div>
      </div>

      <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Customer Address</b>
        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2 d-flex">
          <textarea type="text" rows="1" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 borderc-secondary custom-input" readonly formControlName="customeraddress" style="background-color: #e9e7e7;"></textarea>
        </div>
      </div>
    </div>
    <!-- end:: Invoice buyer fields-->    
    <!-- end:: Invoice buyer form-->

    <!-- begin:: Invoice Supplier form-->
    <!-- begin:: Invoice Supplier heading-->
    <div class="header mt-4" style="border-radius: 0px; height: 30px; background-color: #ebebeb;">
      <div class="card-title">
        <h5 class="fw-bolder text-blue" style="padding: 7px; margin-left: 15px;"><u>Supplier Details</u></h5>
      </div>
    </div>
    <!-- end:: Invoice Supplier heading-->

    <!-- begin:: Invoice Supplier fields-->
    <div class="d-flex flex-row m-6 flex-wrap">
      <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Branch<span style="color: red"> *</span></b>
        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
          <select class="form-select form-select-solid bg-white form-select-lg custom-input select2" formControlName="branchgid" (change)="OnChangeBranchGSt()" [ngStyle]="{'border-color': branchControl.invalid && branchControl.touched ? 'red' : 'rgb(209, 209, 209)'}" pattern="^(?!\s*$).+" [class.is-invalid]="branchControl.invalid && (branchControl.dirty || branchControl.touched)">
            <option value="" disabled selected>Select</option>
            <option *ngFor="let branch of branch_list" [value]="branch.branch_gid">{{branch.branch_name}}</option>
          </select>
          <div *ngIf="branchControl.invalid && branchControl.touched" class="invalid-feedback">
            <div *ngIf="branchControl.hasError('required')" style="color: red; width: 200px; margin-top: 1px; margin-left: 8px; font-size: 11px;">* Branch is required</div>
          </div>
        </div>
      </div>
    
      <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>GST No</b>
        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
          <input type="text" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 borderc-secondary bg-white custom-input" placeholder="" formControlName="gst" />
        </div>
      </div>
    
      <div class="col-12 col-lg-3 col-md-3 col-sm-12">
        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row">
          <div class="d-flex flex-row m-0 flex-wrap">
            <div class="col-lg-6 col-md-6 col-sm-6"><b>Currency<span style="color: red"> *</span></b>
              <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                <select class="form-select form-select-solid bg-white form-select-lg custom-input select2" formControlName="currencygid" (change)="OnChangeCurrency()" [ngStyle]="{'border-color': currencyControl.invalid && currencyControl.touched ? 'red' : 'rgb(209, 209, 209)'}" pattern="^(?!\s*$).+" [class.is-invalid]="currencyControl.invalid && (currencyControl.dirty || currencyControl.touched)">
                  <option value="" disabled selected>Select</option>
                  <option *ngFor="let currency of currency_list" [value]="currency.currencyexchange_gid">{{currency.currency_code}}</option>
                </select>
                <div *ngIf="currencyControl.invalid && currencyControl.touched" class="invalid-feedback">
                  <div *ngIf="currencyControl.hasError('required')" style="color: red; width: 200px; margin-top: 1px; margin-left: 8px; font-size: 11px;">* Currency is required</div>
                </div>
              </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6"><b>Exchange Rate</b>
              <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                <input type="text" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 borderc-secondary custom-input" formControlName="exchangerate" readonly style="text-align: right; background-color: #e9e7e7;" />
              </div>
            </div>
          </div>
        </div>
      </div>
    
      <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Sales Type<span style="color: red"> *</span></b>
        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
          <input type="text" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input" placeholder="" formControlName="salestype" [ngStyle]="{'border-color': salestypenameControl.invalid && salestypenameControl.touched ? 'red' : 'rgb(209, 209, 209)'}" pattern="^(?!\s*$).+" [class.is-invalid]="salestypenameControl.invalid && (salestypenameControl.dirty || salestypenameControl.touched)"/>
          <div *ngIf="salestypenameControl.invalid && salestypenameControl.touched" class="invalid-feedback">
            <div *ngIf="salestypenameControl.hasError('required')" style="color: red; width: 200px; margin-top: 1px; margin-left: 8px; font-size: 11px;">* Sales type is required</div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="d-flex flex-row m-6 flex-wrap">
      <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Mode of Dispatch</b>
        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
          <input type="text" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 borderc-secondary bg-white custom-input" placeholder="" formControlName="mode_of_dispatch" />
        </div>
      </div>
      <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Remarks</b>
        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
          <textarea type="text" rows="1" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0  borderc-secondary bg-white custom-input" placeholder="" formControlName="remarks"></textarea>
        </div>
      </div>
    </div>
    <!-- end:: Invoice Supplier fields-->      
    <!-- end:: Invoice Supplier form-->

    <!-- begin:: Invoice Payment form-->
    <!-- begin:: Invoice Payment heading-->
    <div class="header mt-4" style="border-radius: 0px; height: 30px; background-color: #ebebeb;">
      <div class="card-title m-0">
        <h5 class="fw-bolder text-blue" style="padding: 7px; margin-left: 15px;"><u>Payment Details</u></h5>
      </div>
    </div>
    <!-- end:: Invoice Payment heading-->

    <!-- begin:: Invoice Payment fields-->
    <div class="d-flex flex-row m-6 flex-wrap">
      <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Invoice Ref.No.</b>
        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
          <input type="text" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 borderc-secondary custom-input" placeholder="New Invoice Reference No" readonly formControlName="invoiceref_no" style="background-color: #e9e7e7;" />
        </div>
      </div>

      <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Invoice Date<span style="color: red"> *</span></b>
        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
          <input type="date" class="form-control form-control-lg form-control-solid date-picker mb-3 mb-lg-0 bg-white custom-input" placeholder="DD-MM-YYYY" formControlName="invoicedate" [ngStyle]="{'border-color': invoicedateControl.invalid && invoicedateControl.touched ? 'red' : 'rgb(209, 209, 209)'}" pattern="^(?!\s*$).+" [class.is-invalid]="invoicedateControl.invalid && (invoicedateControl.dirty || invoicedateControl.touched)"/>
          <div *ngIf="invoicedateControl.invalid && invoicedateControl.touched" class="invalid-feedback">
            <div *ngIf="invoicedateControl.hasError('required')" style="color: red; width: 200px; margin-top: 1px; margin-left: 8px; font-size: 11px;">* Invoice date is required</div>
          </div>
        </div>
      </div>

      <div class="col-12 col-lg-3 col-md-3 col-sm-12">
        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row">
          <div class="d-flex flex-row m-0 flex-wrap">
            <div class="col-lg-6 col-md-6 col-sm-6"><b>Payment Term<span style="color: red"> *</span></b>
              <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                <input type="text" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input" placeholder="" formControlName="paymentterm" [ngStyle]="{'border-color': paytermControl.invalid && paytermControl.touched ? 'red' : 'rgb(209, 209, 209)'}" pattern="^(?!\s*$).+" [class.is-invalid]="paytermControl.invalid && (paytermControl.dirty || paytermControl.touched)"/>
                <div *ngIf="paytermControl.invalid && paytermControl.touched" class="invalid-feedback">
                  <div *ngIf="paytermControl.hasError('required')" style="color: red; width: 200px; margin-top: 1px; margin-left: 8px; font-size: 11px;">* Term is required</div>
                </div>
              </div>
            </div>

            <div class="col-lg-6 col-md-6 col-sm-6"><b>Due Date<span style="color: red"> *</span></b>
              <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                <input type="date" class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 custom-input" placeholder="DD-MM-YYYY" formControlName="duedate" style="background-color: #e9e7e7; padding: 0 10px" [ngStyle]="{'border-color': duedateControl.invalid && duedateControl.touched ? 'red' : 'rgb(209, 209, 209)'}" pattern="^(?!\s*$).+" [class.is-invalid]="duedateControl.invalid && (duedateControl.dirty || duedateControl.touched)"/>
                <div *ngIf="duedateControl.invalid && duedateControl.touched" class="invalid-feedback">
                  <div *ngIf="duedateControl.hasError('required')" style="color: red; width: 200px; margin-top: 1px; margin-left: 8px; font-size: 11px;">* Due date is required</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Delivery Date<span style="color: red"> *</span></b>
        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
          <input type="date" class="form-control form-control-lg form-control-solid date-picker mb-3 mb-lg-0 bg-white custom-input" formControlName="deliverydate" placeholder="DD-MM-YYYY" [ngStyle]="{'border-color': deliverydateControl.invalid && deliverydateControl.touched ? 'red' : 'rgb(209, 209, 209)'}" pattern="^(?!\s*$).+" [class.is-invalid]="deliverydateControl.invalid && (deliverydateControl.dirty || deliverydateControl.touched)"/>
          <div *ngIf="deliverydateControl.invalid && deliverydateControl.touched" class="invalid-feedback">
            <div *ngIf="deliverydateControl.hasError('required')" style="color: red; width: 200px; margin-top: 1px; margin-left: 8px; font-size: 11px;">* Delivery date is required</div>
          </div>
        </div>
      </div>
    </div>
    <!-- end:: Invoice Payment fields-->    
    <!-- end:: Invoice Payment form-->
    <!-- end:: Invoice Add Form -->

    <!-- begin::Product Summary -->
    <div class="card shadow-sm">
      <!-- begin::Heading -->
      <div class="header mt-4" style="border-radius: 0px; height: 30px; background-color: #ebebeb;">
        <div class="card-title m-0">
          <h5 class="fw-bolder text-blue" style="padding: 7px; margin-left: 15px;"><b><u>Add Product</u></b></h5>
        </div>
      </div>
      <!-- end::Heading -->
      <!-- begin::Product Form -->
      <form [formGroup]="productform" (ngSubmit)="productSubmit()">
        <div class="d-flex flex-row m-6 flex-wrap" style="border-radius: 0px;">
          <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Product Name<span style="color: red"> *</span></b>
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
              <select class="form-select form-select-solid bg-white form-select-lg custom-input select2" formControlName="productgid" (change)="productDetailsFetch()" [ngStyle]="{'border-color': prodnameControl.invalid && prodnameControl.touched ? 'red' : 'rgb(209, 209, 209)'}" pattern="^(?!\s*$).+" [class.is-invalid]="prodnameControl.invalid && (prodnameControl.dirty || prodnameControl.touched)">
                <option value="" disabled selected>Select Product Name</option>
                <option *ngFor="let prod_name of productnamelist" [value]="prod_name.productgid">{{prod_name.productname}}</option>
              </select>
              <div *ngIf="prodnameControl.invalid && prodnameControl.touched" class="invalid-feedback">
                <div *ngIf="prodnameControl.hasError('required')" style="color: red; width: 200px; margin-top: 1px; margin-left: 8px; font-size: 11px;">* Product name is required</div>
              </div>
            </div>
          </div>

          <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Product Group</b>
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
              <input type="text" class="form-control" formControlName="productgroup_gid" readonly style="background-color: #e9e7e7">
            </div>
          </div>

          <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Product Code</b>
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
              <input type="text" class="form-control" formControlName="productcode" readonly style="background-color: #e9e7e7">
            </div>
          </div>

          <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>HSN Code</b>
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
              <input type="text" class="form-control" formControlName="hsncode" readonly style="background-color: #e9e7e7">
            </div>
          </div>
        </div>

        <div class="d-flex flex-row m-6 flex-wrap">
          <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>HSN Description</b>
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
              <textarea type="text" rows="1" type="text" class="form-control" formControlName="hsndescription" readonly style="background-color: #e9e7e7"></textarea>
            </div>
          </div>

          <div class="col-12 col-lg-3 col-md-3 col-sm-12">
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row">
              <div class="d-flex flex-row m-0 flex-wrap">
                <div class="col-lg-6 col-md-6 col-sm-6"><b>Unit</b>
                  <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="text" class="form-control" formControlName="productuom_gid" readonly style="background-color: #e9e7e7;">
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6"><b>MRP</b>
                  <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="text" class="form-control" style="background-color: #e9e7e7; text-align: right;" readonly formControlName="mrp">
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-12 col-lg-3 col-md-3 col-sm-12">
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row">
              <div class="d-flex flex-row m-0 flex-wrap">
                <div class="col-lg-6 col-md-6 col-sm-6"><b>Unit Price</b>
                  <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="text" class="form-control" placeholder="0.00" style="text-align: right;" formControlName="unitprice" [(ngModel)]="unitprice" (input)="prodtotalcal()">
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6"><b>Quantity</b>
                  <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="text" class="form-control" style="text-align: right;" formControlName="quantity" [(ngModel)]="quantity" (input)="prodtotalcal()">
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-12 col-lg-3 col-md-3 col-sm-12">
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row">
              <div class="d-flex flex-row m-0 flex-wrap">
                <div class="col-lg-6 col-md-6 col-sm-6"><b>Discount(%)</b>
                  <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="text" class="form-control" placeholder="0.00" style="text-align: right;" formControlName="discountpercentage" [(ngModel)]="discountpercentage" (input)="prodtotalcal()">
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                  <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-8">
                    <input type="text" class="form-control" placeholder="0.00" readonly style="background-color: #e9e7e7; text-align: right;" formControlName="discountamount" [value]="discountamount" [(ngModel)]="discountamount" (input)="prodtotalcal()">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="d-flex flex-row m-6 flex-wrap">
          <div class="col-12 col-lg-3 col-md-3 col-sm-12">
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row">
              <div class="d-flex flex-row m-0 flex-wrap">
                <div class="col-lg-6 col-md-6 col-sm-6"><b>Tax 1</b>
                  <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <select class="form-select form-select-solid bg-white form-select-lg borderc-secondary custom-input select2" formControlName="taxname1" (change)="taxAmount1()">
                      <option value="" disabled selected>Select Tax</option>
                      <option *ngFor="let taxname of tax_list" [value]="taxname.tax_gid">{{taxname.tax_name}}</option>
                    </select>
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                  <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-8">
                    <input type="text" class="form-control" placeholder="0.00" readonly style="text-align: right; background-color: #e9e7e7;" formControlName="taxamount1" [(ngModel)]="taxamount1" (input)="taxAmount1()">
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-12 col-lg-3 col-md-3 col-sm-12">
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row">
              <div class="d-flex flex-row m-0 flex-wrap">
                <div class="col-lg-6 col-md-6 col-sm-6"><b>Tax 2</b>
                  <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <select class="form-select form-select-solid bg-white form-select-lg borderc-secondary custom-input select2" formControlName="taxname2" (change)="taxAmount2()">
                      <option value="" disabled selected>Select Tax</option>
                      <option *ngFor="let taxname of tax_list" [value]="taxname.tax_gid">{{taxname.tax_name}}</option>
                    </select>
                  </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                  <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-8">
                    <input type="text" class="form-control" placeholder="0.00" readonly style="text-align: right; background-color: #e9e7e7;" formControlName="taxamount2" [(ngModel)]="taxamount2">
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-12 col-lg-6 col-md-6 col-sm-12">
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row">
              <div class="d-flex flex-row m-0 flex-wrap">
                <div class="col-lg-6 col-md-6 col-sm-6"><b>Total Amount</b>
                  <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="text" class="form-control" placeholder="0.00" style="background-color: #e9e7e7; text-align: right;" formControlName="totalamount" [(ngModel)]="totalamount" (input)="prodtotalcal()">
                  </div>
                </div>
                <div class="col-12 col-lg-6 col-md-6 col-sm-12">
                  <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-8">
                    <button type="button" class="btn-primary" style="margin-left: 20px;" (click)="productSubmit()">ADD</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
      <!-- end::Product Form -->
      <!-- begin::table -->

      <div class="header bg-lightblue" style="border-radius: 0px; height: 30px;">
        <div class="card-title m-0">
          <h5 class="fw-bolder text-blue" style="padding: 7px; margin-left: 15px;">Product Summary</h5>
        </div>
      </div>

      <div class="table-responsive">
        <div class="card card-body m-0 shadow-lg p-3 mb-5 bg-white rounded">
          <table id="product" class="table table-striped table-row-bordered gy-4 gs-2">
            <thead class="table_head">
              <tr class="text-white fw-bold fs-5 text-nowrap text-blue">
                <th>S.No</th>
                <th style="width: 80px;">Product Name</th>
                <th style="width: 80px;">Product Group</th>
                <th>Product Code</th>
                <th>HSN Code / Description</th>
                <th>Unit</th>
                <th style="text-align: right;">Unit Price</th>
                <th style="text-align: right;">MRP</th>
                <th style="text-align: center;">Quantity</th>
                <th style="text-align: right;">Discount (%)</th>
                <th style="text-align: right; width: 120px;">Tax</th>
                <th style="text-align: right;">Total Amount</th>
                <th class="text-center">Action</th>
              </tr>
            </thead>
            <tbody>
              <tr *ngFor="let data of invoiceproductlist; let i=index;">
                <td>{{i+1}}</td>
                <td>{{data.product_name}}</td>
                <td>{{data.productgroup_name}}</td>
                <td>{{data.product_code}}</td>
                <td>{{data.hsn}}</td>
                <td>{{data.uom_name}}</td>
                <td style="text-align: right;">{{data.product_price}}</td>
                <td style="text-align: right;">{{data.selling_price}}</td>
                <td style="text-align: center;">{{data.qty_invoice}}</td>
                <td style="text-align: right;">{{data.discount}}</td>
                <td style="text-align: right;">{{data.tax}}</td>
                <td style="text-align: right; font-weight: bold;">{{data.product_total}}</td>
                <td class="text-center text-nowrap">
                  <i class="bi bi-trash-fill bg-danger rounded p-2 me-2 fs-7" style="color: #ffffff;" data-bs-toggle="modal" data-bs-target="#myModaldelete" (click)="openModaldelete(data.invoicedtl_gid)"></i>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <!-- end::table -->
      <!-- begin::calculation part -->
      <div class="card">
        <div class="d-flex mt-4 me-15">
          <div>
            <label class="lab">Payment :</label>
            <input type="text" class="in" formControlName="payment">
            <span class="spn">Days</span>
          </div>
          <div>
            <label class="lab ms-20">Delivery Period :</label>
            <input type="text" class="in" formControlName="deliveryperiod">
            <span class="spn">Days</span>
          </div>
        </div>

        <div class="d-flex justify-content-end mt-4">
          <div class="col-md-4 bg-gray">
            <label class="tbl_lab"> Product Total :</label>
            <input type="text" class="tbl_tot_in" readonly formControlName="producttotalamount" [(ngModel)]="producttotalamount">
            <span class="tbl_spn">{{currency_name}}</span>
          </div>
        </div>

        <div class="d-flex justify-content-end mt-4">
          <div class="col-md-4">
            <label class="tbl_lab">Add On Charges :</label>
            <input type="text" class="tbl_in" placeholder="0.00" formControlName="addoncharges" [(ngModel)]="addoncharges" (input)="finaltotal()">
            <span class="tbl_spn">{{currency_name}}</span>
          </div>
        </div>

        <div class="d-flex justify-content-end mt-4">
          <div class="col-md-4">
            <label class="tbl_lab">Additional Discount :</label>
            <input type="text" class="tbl_in" placeholder="0.00" formControlName="invoicediscountamount" [(ngModel)]="invoicediscountamount" (input)="finaltotal()">
            <span class="tbl_spn">{{currency_name}}</span>
          </div>
        </div>

        <div class="d-flex justify-content-end mt-4">
          <div class="col-md-4">
            <label class="tbl_lab">Freight Charges :</label>
            <input type="text" class="tbl_in" placeholder="0.00" formControlName="frieghtcharges" [(ngModel)]="frieghtcharges" (input)="finaltotal()">
            <span class="tbl_spn">{{currency_name}}</span>
          </div>
        </div>

        <div class="d-flex justify-content-end mt-4">
          <div class="col-md-4">
            <label class="tbl_lab">Packing/Forwarding Charges :</label>
            <input type="text" class="tbl_in" placeholder="0.00" formControlName="forwardingCharges" [(ngModel)]="forwardingCharges" (input)="finaltotal()">
            <span class="tbl_spn">{{currency_name}}</span>
          </div>
        </div>

        <div class="d-flex justify-content-end mt-4">
          <div class="col-md-4">
            <label class="tbl_lab">Insurance Charges :</label>
            <input type="text" class="tbl_in" placeholder="0.00" formControlName="insurancecharges" [(ngModel)]="insurancecharges" (input)="finaltotal()">
            <span class="tbl_spn">{{currency_name}}</span>
          </div>
        </div>

        <div class="d-flex justify-content-end mt-4">
          <div class="col-md-4">
            <label class="tbl_lab">Round Off :</label>
            <input type="text" class="tbl_in" placeholder="0.00" formControlName="roundoff" [(ngModel)]="roundoff" (input)="finaltotal()">
            <span class="tbl_spn">{{currency_name}}</span>
          </div>
        </div>

        <div class="d-flex justify-content-end mt-4 mb-4">
          <div class="col-md-4 bg-gray">
            <label class="tbl_lab">Grand Total :</label>
            <input type="text" class="tbl_tot_in" placeholder="0.00" readonly formControlName="grandtotal" [(ngModel)]="grandtotal" (input)="finaltotal()">
            <span class="tbl_spn">{{currency_name}}</span>
          </div>
        </div>
      </div>
      <!-- end::calculation part -->
    </div>
    <!-- end::Product Summary -->
    <!-- begin::terms and condition -->
    <div>
      <div class="card-header bg-lightblue card-height55" style="border-radius: 0px;">
        <div class="card-title m-0">
          <h5 class="fw-bolder text-blue">Terms and Conditions</h5>
        </div>
      </div>
      <ng-select [items]="terms_list" class="custom col-lg-5 m-12 col-12 fv-row mt-2" bindLabel="template_name"
      [(ngModel)]="mdlTerms" formControlName="template_name" bindValue="template_gid"
      placeholder="Select an option" (change)="GetOnChangeTerms()"></ng-select>

      <div class="d-flex flex-row m-6 flex-wrap">
        <div class="col-12 col-lg-12 col-md-12 col-sm-12 fv-row mt-2">
          <angular-editor [config]="config" formControlName="termsandconditions"></angular-editor>
        </div>
      </div>
    </div>
    <!-- end::terms and condition -->
    <div class="text-center my-4">
      <!-- begin::Submit button -->
      <button type="submit" class="btn-success btn-sm text-white me-2" (click)="onSubmit()">
        <i class="bi bi-check-square fs-5"></i>
        <span class="ms-3">Submit</span>
      </button>
      <!-- end::Submit button -->

      <!-- begin::Back button -->
      <button type="back" class="btn-primary btn-sm text-white me-4" (click)="back()">
        <i class="bi bi-arrow-left-square fs-5 me-1"></i>
        <span class="ms-3">Back</span>
      </button>
      <!-- end::Back button -->
    </div>
  </form>
</div>
<!-- end::Add Invoice -->

<!-- begin::Delete Popup -->
<div class="modal" id="myModaldelete" data-bs-backdrop="static" data-bs-keyboard="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="text-center my-4">
        <h2><b>Are you sure?</b></h2>
        <p style="display: block;">Do You Want To Delete the Record?</p>
        <div class="text-center my-4">
          <button class="btn-danger btn-sm text-white me-4" (click)="ondelete()" data-bs-dismiss="modal">
            <i class="bi bi-trash-fill text-white fs-5 me-2"></i>Delete
          </button>
          <button class="btn-primary btn-sm text-white me-2" data-bs-dismiss="modal">
            <i class="fas fa-close text-white me-2"></i>Close
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- end::Delete Popup -->