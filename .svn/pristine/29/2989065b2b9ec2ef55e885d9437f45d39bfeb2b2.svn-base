<div class="card m-3">
    <div class="card-header bg-lightblue card-height55">
        <div class="card-title m-0">
            <h5 class="fw-bolder text-blue">Invoice View</h5>
        </div>
    </div>

     <div *ngFor="let data of invoice_lists;"> 
    <div class="d-flex flex-row m-3 mt-4 flex-wrap border-bottom">
        <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Branch</b>
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                 <p>{{data.branch_name}}</p> 
            </div>

        </div>
        <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Vendor Phone No</b>
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-1">
                 <p>{{data.contact_telephonenumber}}</p> 
            </div>
        </div>
        <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Invoice Date</b>
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
             <p>{{data.invoice_date}}</p> 
            </div>
        </div>

    </div>

    <div class="d-flex flex-row m-3 mt-6 flex-wrap border-bottom">
        <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Invoice Ref No</b>
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-1">
                 <p>{{data.invoice_refno}}</p> 
            </div>
        </div>
        <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Vendor Contact person</b>
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                <p>{{data.contactperson_name}}</p> 
            </div>
        </div>
        <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Exchange Rate</b>
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                <p>{{data.exchange_rate}}</p> 
            </div>
        </div>
    </div>
    <div class="d-flex flex-row m-3 mt-8 flex-wrap border-bottom">
        <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Vendor Name</b>
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-1">
            <p>{{data.vendor_companyname}}</p> 
            </div>
        </div>
        <br>
        <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Vendor Address</b>
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-1">
                 <p>{{data.vendor_address}}</p> 
            </div>
        </div>
        <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Currency</b>
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-1">
                <p>{{data.currency_code}}</p> 
            </div>
        </div>
    </div>
    <div class="d-flex flex-row m-3 mt-8 flex-wrap border-bottom">
        <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Fax Remarks</b>
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                <textarea type="text"
                    class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 borderc-secondary bg-white custom-input"
                    placeholder="" formControlName="invoice_refno" class="form-control"></textarea>

                 <p>{{data.invoice_remarks}}</p>  
            </div>
        </div>
    </div>
</div>

<div class="table-responsive"> <div class="card-title m-0"></div>
    <div *ngFor="let data of invoice_lists;let i=index;"> 
   
        <table id="invoice_lists" class="table table-striped table-row-bordered gy-5 gs-7">
            <thead>
                <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                    <th>S.No</th>
                    <th>Product Code</th>
                    <th>Product</th>
                    <th>Unit</th>
                    <th>Biled Qty</th>
                    <th>Unit Price</th>
                    <th>Net Price</th>
                    <th>Discount</th>
                    <th> Tax </th>
                    <th>Amount</th>
                    <th>Remarks</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{i+1}}</td>
                    <td>{{data.product_code }}</td>
                    <td>{{data.product_name }}</td>
                    <td> 
                        <label></label>
                        {{data.productuom_name }}</td>
                    <td>{{data.qty_invoice }}</td>
                    <td>{{data.product_price }}</td>    
                    <td>{{data.product_totalprice }}</td>
                    <td>{{data.discount_percentage }}
                        <br>{{data.discount_amount }}
                    </td>
                    <td>{{data.tax_name1}}&nbsp;&nbsp;:  {{data.tax_amount1}}
                        <br>{{data.tax_name2}}&nbsp;&nbsp;: {{data.tax_amount2}}
                        <br>{{data.tax_name3}}&nbsp;&nbsp;: {{data.tax_amount3}}
                    </td>
                    <td>{{data.product_totalprice}}</td>
                    <td>{{data.product_remarks }}</td>
                </tr>

            </tbody>

        </table>
    </div>
</div>


<div class="text-center my-4">
    <button class="btn-primary btn-sm text-white me-4 mt-3-center " routerLink="/payable/PmrTrnInvoice">
        <i class="fas fa-arrow-left"></i> &nbsp;Back
    </button>
</div>
</div>

