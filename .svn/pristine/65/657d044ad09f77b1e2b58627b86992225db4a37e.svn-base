        <div class="d-flex flex-row m-6 flex-wrap">
                 <div class="col-12 col-lg-4 col-md-6 col-sm-12"><b>Leave Grade</b>
                            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                                <select
                                    class="form-select form-select-solid bg-white form-select-lg borderc-secondary custom-input select2"
                                    formControlName="leavegrade_name" (change)="OnGetleavegradeSummary()">

                                    <option value="">Select</option>
                                    <option *ngFor="let leavegrade of leavegrade_list"
                                        [value]="leavegrade.leavegrade_gid">
                                        {{leavegrade.leavegrade_name}}</option>
                                </select>
                                <div *ngIf="leavegradecontrol.invalid && leavegradecontrol.touched">
                                    <div *ngIf="leavegradecontrol.hasError('required')" style="color:red;">Leave grade
                                        is required
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-4 col-md-6 col-sm-12"><b>Job Type</b>
                            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                                <select
                                    class="form-select form-select-solid bg-white form-select-lg borderc-secondary custom-input select2"
                                    formControlName="jobtype_name">

                                    <option value="">Select</option>
                                    <option *ngFor="let jobtype of jobtype_list" [value]="jobtype.jobtype_gid">
                                        {{jobtype.jobtype_name}}</option>
                                </select>
                                <div *ngIf="jobtypecontrol.invalid && jobtypecontrol.touched">
                                    <div *ngIf="jobtypecontrol.hasError('required')" style="color:red;">Job type is
                                        required
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-4 col-md-6 col-sm-12"><b>Confirmed Date</b>
                            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                                <input type="date"
                                    class="form-control form-control-lg form-control-solid date-picker mb-3 mb-lg-0 borderc-secondary bg-white custom-input"
                                    placeholder="DD-MM-YYYY" formControlName="confirmed_date" />
                            </div>
                        </div>

