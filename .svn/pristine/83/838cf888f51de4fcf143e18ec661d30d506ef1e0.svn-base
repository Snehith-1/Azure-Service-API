<div class="card">
    <div class="row ms-3 mt-3 d-flex align-items-center">
      <div class="col">
        <h3 class="card-title">Stock Report</h3>
        </div>
      </div>
      <br>
      <div class="col me-5 ">
        <div class="d-flex flex-row m-6 flex-wrap mt-4">
            <div class="col-12 col-lg-2 col-md-6 col-sm-10"><b>Branch <span class="ms-1 text-red">*</span></b>
              <div class="col-lg-12 col-12 col-md-11 col-sm-11 fv-row mt-2">
                <ng-select formControlName="branch_name" [items]="branch_list"
                class="custom col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2" bindLabel="branch_name"
                bindValue="branch_gid" placeholder="Select an option" [(ngModel)]="mdlBranchName" (change)="OnChangeBranch()">
              </ng-select>
                
              </div>
            </div>
            <button title="Import Excel" class="btn btn-icon btn-sm bg-success me-2  mt-9 "  
            data-bs-toggle="modal" data-bs-target="#myModalexcelimport"><span class="fas fa-file-excel text-white 
             fs-2"></span>  
            </button> 
        </div> 
      </div>
    
    
      <div class="table-responsive">
        <div class="card card-body m-3 p-3 mb-5 bg-white rounded table-responsive">
          <table id="stockreport_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
            <thead>
              <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue  align-middle">
                <th>S.No </th>
                 <th>Branch Name</th> 
                <!-- <th>Location</th>
                <th>Bin </th> -->
                <th>Product Code</th>
                <th>Product Name </th>
                <th class="text-center">Description </th>
                <th>Units</th>
                <th class="text-center">Stock Balance</th>
                <th class="text-end">Product Price</th>
                <th class="text-end">Stock Value</th>               
                <!-- <th>Transactions</th> -->
                <!-- <th class="text-center">Action</th> -->
              </tr>
            </thead>
            <tbody>
              <tr *ngFor="let data of stockreport_list; let i=index;">
                <td>{{i+1}}</td>
                <td>{{data.branch_name}}</td>
                <!-- <td>{{data.location_name}}</td>
                <td>{{data.bin_number}}</td>  -->
                <td>{{data.product_code}}</td> 
                <td>{{data.product_name}}</td> 

                <td class="text-end">
                  <textarea readonly>
                      {{data.display_field}}
                  </textarea>
              </td>        
                <td>{{data.productuom_name}}</td>
                <td class="text-center">{{data.stock_balance}}</td>
                <td class="text-end">{{data.product_price}}</td>
                <td class="text-end">{{data.stock_value }}</td>
                <!-- <td>{{data.Transactions}}</td> -->
    
                <!-- <td class="text-center text-nowrap">
  
                  <button title="View" type="button" (click)="openModaldelete()" data-bs-toggle="modal"
                  data-bs-target="#myModaldelete" class="btn btn-icon btn-sm bg-primary me-2"><span
                    class="fa-solid fa-eye text-white  fs-6"></span></button>
    
  
             
                    
                    
  
                </td> -->
    
                
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      </div>
    
    