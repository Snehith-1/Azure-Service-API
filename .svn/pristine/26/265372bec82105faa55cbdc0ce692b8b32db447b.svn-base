.card-header {
    background-image: linear-gradient(to right, #2429e0, #39ffff, #2429e0);
    border-radius: 0px;
}

.back-icon {
    text-align: right;
    margin: 10px 35px 0 0;

    i {
        font-size: 30px;
        color: #2c1a94;
        cursor: pointer;
    }
}

.tab_1 {
    height: 80px;

    .body-left {
        background-color: #2196f3;
        height: 80px;
        width: 200px;
        margin-left: -10px;
        border-top-left-radius: 6px;
        border-bottom-left-radius: 6px;
        
        i {
            font-size: 30px;
            margin-top: 23px;
            color: #ffffff;
        }
    }

    .panel-body{
        width: 200px;
        height: 80px;
        margin-left: -26px;
        border: #2196f3 5px solid;
        border-top-right-radius: 6px;
        border-bottom-right-radius: 6px;
        cursor: pointer;
        
        .count {
            text-align: center;
            margin-top: 12px;
            font-size: 18px;
            font-weight: bold;
        }

        .content {
            text-align: center;
            font-size: 14px;
            margin-top: -10px;
        }
    }
}

