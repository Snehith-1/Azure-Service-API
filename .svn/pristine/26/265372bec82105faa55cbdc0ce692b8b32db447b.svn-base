.panel1 {    
    .accordion-header {
        margin: 0 46px 0 20px;
        border-radius: 6px;        
    }

    .accordion-button {
        border: #2196f3 2px solid;
        font-weight: bold;
        color: #2196f3;

        i {
            font-size: 20px;
        }
    }

    .accordion-body {        
        border: #2196f3 2px solid;
        border-top: none;
        margin: 0 46px 0 20px;
        border-bottom-left-radius: 6px;
        border-bottom-right-radius: 6px;
    }

    .table-responsive {
        th, td {
            font-size: 12px;
        }        
    }
}

