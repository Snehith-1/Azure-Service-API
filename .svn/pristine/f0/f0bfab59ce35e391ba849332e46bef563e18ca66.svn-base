<div class="card card-bordered">
    <div class="card-header d-flex justify-content-center">
        <h1 class="card-title fw-bold fs-3">Office Calendar</h1>
    </div>

    <div class="back-icon">
        <i class="bi bi-arrow-left-square-fill" (click)="back()"></i>
    </div>

    <div class="d-flex flex-row m-6 flex-wrap row">
        <div class="submit-button">
            <button type="button" class="btn-primary btn-text" data-bs-toggle="modal" data-bs-target="#officecalendar">
                <i class="fa fa-hand-point-right"></i>
                <span class="btn-text ms-3">Create Event</span>
            </button>
        </div>
    </div>
    



