              <div ng-view class="view-container"></div>
            </md-content>
            </body>
    </div> -->
    <div class="container">
        <full-calendar [options]="calendarOptions"></full-calendar>
  </div>

    <div class="d-flex flex-row table-responsive">
        <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
            <table id="office-calendar" class="table table-striped table-row-bordered gy-5 gs-7">
                <thead class="table_head">
                    <tr class="text-white fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                        <th>S.No</th>
                        <th>Holiday Date</th>
                        <th>Holiday Name</th>
                        <th>Day</th>
                    </tr>
                </thead>
                <tbody class="table_body">
                    <tr>
                        <td title="S.No" style="width: 5%;"></td>
                        <td title="Holiday Date"></td>
                        <td title="Holiday Name"></td>
                        <td title="Day"></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>



<div class="modal fade" id="officecalendar" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered officecalendarpopup">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Create Event</h4>
                <i class="bi bi-x-square fs-1 me-2" data-bs-dismiss="modal"></i>
            </div>

            <div class="modal-body officecalendarpopupbody">                
                <div class="d-flex flex-row flex-wrap">
                    <form action="">
                        <div class="col-12 col-lg-12 col-md-12 col-sm-12">
                            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                                <div class="d-flex flex-row flex-wrap mt-4">
                                    <div class="col-12 col-lg-6 col-md-6 col-sm-12"><b>Event Date</b>
                                        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                                            <input type="date" class="form-control form-control-lg form-control-solid date-picker mb-3 mb-lg-0 borderc-secondary bg-white custom-input" placeholder="DD-MM-YYYY" />
                                        </div>
                                    </div>
                
                                    <div class="col-12 col-lg-6 col-md-6 col-sm-12"><b>Event Time</b>
                                        <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2 d-flex">
                                            <input type="time" class="form-control form-control-lg form-control-solid date-picker mb-3 mb-lg-0 borderc-secondary bg-white custom-input"/>
                                        </div>
                                    </div>
                
                                    <div class="d-flex flex-row flex-wrap mt-4">
                                        <div class="col-12 col-lg-12 col-md-12 col-sm-12"><b>Event Title</b>                                                                             
                                                <textarea type="text" rows="2" cols="50" type="text" class="form-control mt-2"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-center contain mt-6">
                                    <button type="button" class="btn-success">
                                        <i class="bi bi-check-square fs-8 me-2"></i>Submit
                                    </button>
                                    <button type="button" class="btn-danger ms-4" data-bs-dismiss="modal">
                                        <i class="bi bi-x-square fs-8 me-2"></i>Close
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>