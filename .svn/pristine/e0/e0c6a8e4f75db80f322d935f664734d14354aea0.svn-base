<div class="card">
    <div class="row ms-3 mt-3 d-flex align-items-center">
        <div class="col">
            <h3 class="card-title">

                <i class="bi bi-arrow-left-square-fill float-end fs-1 me-6" (click)="back()"></i>
            </h3>
        </div>
    </div>

    <div class="card m-3">
        <form [formGroup]="quotationhistoryform">
            <div class="card_heading">
                <h6><b>Quotation History</b></h6>
            </div>

            <div class="d-flex flex-row flex-wrap m-6">

                <div class="col-12 col-lg-2 col-md-2 col-sm-12"><b>Quotation Ref. No.</b>
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <input type="text" readonly
                            class="form-control form-control-lg form-control-solid mb-3 mb-lg-0 bg-secondary border-secondary custom-input text-red "
                            formControlName="quotation_gid" placeholder="">
                    </div>
                </div>

                <div class="col-12 col-lg-2 col-md-2 col-sm-12"><b>Quotation Date</b>
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <input type="text"
                            class="form-control form-control-lg form-control-solid mb-3 mb-lg-0 bg-white border-secondary custom-input"
                            formControlName="quotation_date">
                    </div>
                </div>

                <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Company Name</b>
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <input type="text" readonly
                            class="form-control form-control-lg form-control-solid mb-3 mb-lg-0 bg-secondary border-secondary custom-input text-red "
                            formControlName="customer_name" placeholder="">
                    </div>
                </div>

                <div class="col-12 col-lg-2 col-md-2 col-sm-12"><b>Quotation Remarks</b>
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <input type="text" readonly
                            class="form-control form-control-lg form-control-solid mb-3 mb-lg-0 border-secondary custom-input"
                            formControlName="quotation_remarks" placeholder="">
                    </div>
                </div>

                <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Your Enquiry Reference</b>
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                        <input type="text" readonly
                            class="form-control form-control-lg form-control-solid mb-3 mb-lg-0 bg-secondary border-secondary custom-input text-red"
                            formControlName="quotation_referenceno1" placeholder="">
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <div class="card card-body m-0 shadow-lg p-3 mb-5 bg-white rounded mt-7">
                    <table id="quotationhistorylist" class="table table-striped table-row-bordered gy-4 gs-2">
                        <thead class="table_head">
                            <tr class="text-white fw-bold fs-5 text-nowrap text-blue">
                                <th>S.No</th>
                                <th>Quotation Date</th>
                                <th>Quotation Ref. No.</th>
                                <th>Customer Name</th>
                                <th>Contact Details</th>
                                <th>Details</th>
                                <th style="text-align: right;">Created By</th>
                                <th style="text-align: right;">Quoted Amount</th>
                                <th style="text-align: center;">Quotation Status</th>
                                <th style="text-align: center;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr *ngFor="let data of quotationhistorylist; let i=index;">
                                <td>{{i+1}}</td>
                                <td>{{data.quotation_date}}</td>
                                <td>{{data.quotation_referenceno1}}</td>
                                <td>{{data.customer_name}}</td>
                                <td>{{data.customer_contact_person}}</td>
                                <td class="text-center">
                                    <label title="Product Details" data-bs-toggle="modal"
                                        data-bs-target="#myModalUpdateimage9"
                                        (click)="Details(data.parameter,data.quotation_gid)">
                                        <i class="fas fa-question-circle fa-5x text-primary fs-2"></i>
                                    </label>
                                </td>
                                <td style="text-align: center;">{{data.user_firstname}}</td>
                                <td style="text-align: right;">{{data.Grandtotal}}</td>
                                <td style="text-align: center;">{{data.quotation_status}}</td>
                                <td style="text-align: center;"> <button title="View" type="button" (click)="onview(data.quotation_gid)"
                                        class="btn btn-icon btn-sm bg-primary me-2">
                                        <span class="fa-solid fa-eye fs-6" style="color: #ffffff;  "></span>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="myModalUpdateimage9" tabindex="-1" data-bs-backdrop='static'
    aria-labelledby="editamlcategoryLabel" aria-hidden="true" data-bs-keyboard="false">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content  d-flex justify-content-center">
            <div class="card-header p-1 pb-1 pt-1 rounded-top bg-primary"
                style="display: flex; align-items: center; height: 40px;">
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded">
                        <table class="table table-striped table-row-bordered gy-5 gs-7 ">
                            <thead>
                                <tr class="fw-bold fs-7 text-nowrap bg-lightblue text-blue align-middle">
                                    <th>S.No </th>
                                    <th>Product Name </th>
                                    <th>Qty Requested</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr *ngFor="let data of quotationproduct_list; let i=index;"
                                    style="white-space: nowrap;">
                                    <td>{{i+1}}</td>
                                    <td>{{data.product_name}}</td>
                                    <td>{{data.qty_quoted}}</td>

                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="text-center my-4">
                    <button class="btn-primary btn-sm text-white me-2" data-bs-dismiss="modal"
                        style="background-color: red;">
                        <i class="fas fa-arrow-left text-white"></i> &nbsp;Back
                    </button>&nbsp;
                </div>
            </div>
        </div>
    </div>
</div>