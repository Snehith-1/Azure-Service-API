<div class="card">

    <div class="row ms-3 mt-3 d-flex align-items-center">
        <div class="col">
            <h3 class="card-title">Salary Component</h3>
        </div>

        <div class="col me-5">
            <button title="Add Salary Component" class="btn-primary btn-sm text-white me-4 mb-2 mt-2 float-end"
                (click)="addsalary()">
                <i class="fas fa-plus"></i> &nbsp;&nbsp;Add Salary Component</button>
        </div>
    </div>
    <br>
    <div class="table-responsive">
        <div class="card card-body table-responsive m-3 shadow-lg p-3 mb-5 bg-white rounded">
            <table id="salarycompoent_list" class="table table-striped table-row-bordered border-bottom gs-7">
                <thead>
                    <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue align-middle ">
                        <th>S.No </th>
                        <th>Component Group </th>
                        <th>Component Code</th>
                        <th>Component Name</th>
                        <th>Employee Contribution</th>
                        <th>Employer Contribution</th>
                        <th>Contribution Type</th>
                        <th>Component Type</th>
                        <th>Affecting In</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr *ngFor="let data of salarycompoent_list; let i=index;" class="align-middle">
                        <td>{{i+1}}</td>
                        <td>{{ data.componentgroup_name }}</td>
                        <td>{{ data.component_code }}</td>
                        <td>{{ data.component_name}}</td>
                        <td>{{ data.component }}</td>
                        <td>{{ data.employer_component }}</td>
                        <td>{{ data.contribution_type }}</td>
                        <td>{{ data.component_type }}</td>
                        <td>{{ data.affecting_in }}</td>
                        <td class="text-center text-nowrap">

                          <button title="Edit" type="button" class="btn btn-icon btn-sm bg-etdark
                           me-2" (click)="openedit(data.salarycomponent_gid)">
                            <span class="fa-solid fa-pencil text-white fs-6"></span></button>

                            <button title="Delete" type="button" data-bs-toggle="modal" data-bs-target="#myModaldelete" (click)="openModaldelete(data.salarycomponent_gid)" class="btn btn-icon btn-sm bg-danger me-2">
                            <span  class="fa fa-trash fs-6" style="color: #ffffff;"></span>
                          </button> 

                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>

    
<!-- The Modal Delete -->


<div id="myModaldelete" class="modal fade">
  <div class="modal-dialog modal-confirm">
      <div class="modal-content">
          <div class="modal-body text-center">
              <h4 class="w-100  fw-bolder fs-1 mt-5">Are you sure?</h4>
              <p class="fw-bold fs-5 mt-4">Do You Want To Delete The Record ?</p>
          </div>
          <div class="modal-footer justify-content-center">
              <button type="button" class="btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="button" class="btn-danger" data-bs-dismiss="modal"  (click)="ondelete()"
                  >Delete</button>
          </div>
      </div>
  </div>
</div>

</div>