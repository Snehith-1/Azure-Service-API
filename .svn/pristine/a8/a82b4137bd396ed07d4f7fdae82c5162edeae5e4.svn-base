<div class="table-responsive">
    <div class="card card-body m-0 shadow-lg p-3 mb-5 bg-white rounded table-responsive">
      <table  class="table table-striped table-row-bordered gy-4 gs-2">
        <thead class="table_head">
          <tr class="text-white fw-bold fs-5 text-nowrap bg-lightblue text-blue">
            <th>S.No</th>
            <th>Product </th>
            <th>Product Group</th>
            <th>Product Code</th>
            <!-- <th>Customer Product Group</th> -->
            <th>Unit</th>
            <th>Unit Price</th>
            <!-- <th style="text-align: right;">MRP</th> -->
            <th>Quantity</th>
            <th>Discount (%)</th>
            <th>Tax</th>
            <th>Amount</th>
            <!-- <th style="text-align: right;">Need By Date</th> -->
          </tr>
        </thead>
        <tbody>
          <tr *ngFor="let m of quotationsummary_list; let i=index;">
            <td>{{i+1}}</td>
            <td>{{m.product_name}}</td>
            <td>{{m.productgroup_name}}</td>
            <td>{{m.product_code}}</td>
            <!-- <td>{{m.customerproduct_code}}</td> -->
            <td>{{m.productuom_name}}</td>
            <td>{{m.product_price}}</td>
            <!-- <td style="text-align: right;">{{m.selling_price}}</td> -->
            <td>{{m.quantity}}</td>
            <td>
              <div class="container">
                <div class="row">
                  {{m.discount_percentage}}
                </div>
                <div class="row">
                  {{m.discountamount}}
                </div>
              </div>
            </td>
            <td>
              <div class="row">
                <div class="col">
                  {{m.tax_name}}&nbsp;
                  {{m.tax_amount}}
                </div>
              </div>
              <!-- <div class="row">
                <div class="col">
                  {{m.tax_name2}}&nbsp;
                  {{m.tax_amount2}}
                </div>
              </div>
              <div class="row">
                <div class="col">
                  {{m.tax_name3}}&nbsp;
                  {{m.tax_amount3}}
                </div>
              </div> -->
            </td>
            <td>
              {{m.price}}
            </td>
            <!-- <td>
              <div class="container">
                <div class="row">
                  {{m.product_requireddate}}
                </div><br>
                <div class="row">
                  {{m.product_requireddateremarks}}
                </div>
              </div>
            </td> -->
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="card">
    <div class="d-flex flex-row m-6 flex-wrap">
      <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Payment Days</span>
        <p class="mt-3">{{m.payment_days}}</p>
      </div>

      <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Delivery Days</span>
        <p class="mt-3">{{m.delivery_days}}</p>
      </div>
    </div>
  </div>
  <div class="card">
  <div class="me-10">
    <div class="d-flex justify-content-end mt-4">
      <div class="col-md-3 d-flex justify-content-between mt-4 ">
        <label class="tbl_lab ">Net Amount :</label>
        <p class="tbl_spn">{{m.total_price}}</p><span class="tbl_spn ms-12">{{m.currency_code}}</span>
      </div>
    </div>

    <div class="d-flex row justify-content-end mt-2">
      <div class="col-md-3 d-flex align-items-center">
        <label class="tbl_lab">Tax :</label>
        <p class="tbl_spn">{{m.tax_name}}</p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="tbl_spn ms-12">{{m.currency_code}}</span>
      </div>
    </div>

    <div class="d-flex row justify-content-end mt-2">
      <div class="col-md-3 d-flex align-items-center">
        <label class="tbl_lab">Total with Tax :</label>
        <span class="tbl_spn">{{m.total_amount}}</span><span class="tbl_spn ms-12">{{m.currency_code}}</span>
      </div>
    </div>

    <div class="d-flex row justify-content-end mt-2">
      <div class="col-md-3 d-flex align-items-center">
        <label class="tbl_lab">Add On Charges :</label>
        <span class="tbl_spn">{{m.addon_charge}}</span>&nbsp;&nbsp;<span class="tbl_spn ms-12">{{m.currency_code}}</span>
      </div>
    </div>

    <div class="d-flex row justify-content-end mt-2">
      <div class="col-md-3 d-flex align-items-center">
        <label class="tbl_lab">Additional Discount :</label>
        <span class="tbl_spn">{{m.additional_discount}}</span>&nbsp;&nbsp;<span class="tbl_spn ms-12">{{m.currency_code}}</span>
      </div>
    </div>

    <div class="d-flex row justify-content-end mt-2">
      <div class="col-md-3 d-flex align-items-center">
        <label class="tbl_lab">Freight Charges :</label>
        <span class="tbl_spn">{{m.freight_charges}}</span>&nbsp;&nbsp;<span class="tbl_spn ms-12">{{m.currency_code}}</span>
      </div>
    </div>
    <div class="d-flex row justify-content-end mt-2">
      <div class="col-md-3 d-flex align-items-center">
        <label class="tbl_lab">Buy/Back Charges :</label>
        <span class="tbl_spn">{{m.buyback_charges}}</span>&nbsp;&nbsp;<span class="tbl_spn ms-12">{{m.currency_code}}</span>
      </div>
    </div>

    <div class="d-flex row justify-content-end mt-2">
      <div class="col-md-3 d-flex align-items-center">
        <label class="tbl_lab">Packing Charges:</label>
        <span class="tbl_spn">{{m.packing_charges}}</span>&nbsp;&nbsp;<span class="tbl_spn ms-12">{{m.currency_code}}</span>
      </div>
    </div>

    <div class="d-flex row justify-content-end mt-2">
      <div class="col-md-3 d-flex align-items-center">
        <label class="tbl_lab">Insurance Charges :</label>
        <span class="tbl_spn">{{m.insurance_charges}}</span>&nbsp;&nbsp;<span class="tbl_spn ms-12">{{m.currency_code}}</span>
      </div>
    </div>

    <div class="d-flex row justify-content-end mt-2">
      <div class="col-md-3 d-flex align-items-center">
        <label class="tbl_lab">Round Off :</label>
        <span class="tbl_spn">{{m.roundoff}}</span>&nbsp;&nbsp;<span class="tbl_spn ms-12">{{m.currency_code}}</span>
      </div>
    </div>

    <div class="d-flex row justify-content-end mt-2">
      <div class="col-md-3 d-flex align-items-center">
        <label class="tbl_lab">Grand Total :</label>
        <span class="tbl_spn">{{m.Grandtotal}}</span><span class="tbl_spn ms-12">{{m.currency_code}}</span>
      </div>
    </div>
    </div>
        </div>
    <div class="text-center my-4">
    <button class="btn-primary btn-sm text-white me-4" (click)="onback()">
        <i class="fas fa-arrow-left"></i> &nbsp; Back
      </button>
      </div>
</div>
</div>
</div>