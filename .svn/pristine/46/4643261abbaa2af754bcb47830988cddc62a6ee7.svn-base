<div class="card">
    <div class="card-header bg-mail" style="color: white;">
        <h3 class="card-title"><i class="bi bi-envelope" style="font-size: 20px;"></i>&nbsp;&nbsp;Mail</h3>
        <div style="margin: 13px">
          
            <button title="Create Template"  class="btn-secondary btn-sm text-black me-4 " (click)="onadd()"> <i class="bi bi-plus-circle-fill fs-3"></i>&nbsp;
                Create New Campaign</button>
                <button title="Mail Box"  class="btn-secondary btn-sm text-black me-4 " (click)="onopen()"> <i class="bi bi-envelope fs-3"></i>&nbsp;
                    Mail Box</button>
              
                
        </div>
  
    </div>
    
    <br>
    <div class="row">
        <div class=" col-md-3 col-sm-3" >
            <div class="cardHeadLeads radius-10 border-start border-0 border-3 border-violet"
                >
                <div class="card-body12">
                    <div class="d-flex align-items-center">
                        <div>
                            <h5 class="mb-0 text-secondary">Campaign Count</h5>
                            
                                <h4 class="my-1 text-info">{{template_count}}</h4>
                          
                        </div>
                        <div class="widgets-icons-2 rounded-circle bg-gradient-darkgreens text-white ms-auto"><i
                                class="bi bi-calendar3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-3">
            <div class="cardHeadLeads radius-10 border-start border-0 border-3 border-violet">
                <div class="card-body12">
                    <div class="d-flex align-items-center">
                        <div>
                            <h5 class="mb-0 text-secondary"> Sent </h5>
                           
                                <h4 class="my-1 text-info">{{mailsendtotal_count}}</h4>
                        
                        </div>
                        <div class="widgets-icons-2 rounded-circle bg-gradient-brown text-white ms-auto"><i
                                class="bi bi-envelope-check-fill"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class=" col-md-3 col-sm-3">
            <div class="cardHeadLeads radius-10 border-start border-0 border-3 border-violet">
                <div class="card-body12">
                    <div class="d-flex align-items-center">
                        <div>
                            <h5 class="mb-0 text-secondary">Delivered</h5>
                            
                                <h4 class="my-1 text-info">{{deliverytotal_count}}</h4>
                         
                        </div>
                        <div class="widgets-icons-2 rounded-circle bg-gradient-darkblue text-white ms-auto"><i
                                class="bi bi-reply-fill"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class=" col-md-3 col-sm-3">
            <div class="cardHeadLeads radius-10 border-start border-0 border-3 border-violet">
                <div class="card-body12">
                    <div class="d-flex align-items-center">
                        <div>
                            <h5 class="mb-0 text-secondary">Viewed</h5>
                            
                                <h4 class="my-1 text-info">{{opentotal_count}}</h4>
                           
                        </div>
                        <div class="widgets-icons-2 rounded-circle bg-gradient-violet text-white ms-auto"><i
                                class="fa-solid fa-eye "></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <div class="card card-body m-3 shadow-xl p-3 mb-5 bg-white rounded">
        <table id="mailtemplate_list" class="table table-striped table-row-bordered border-bottom gs-7">
            <thead>
                <tr class="fw-bolder fs-5 text-nowrap bg-mail text-white align-middle" >

                    <th>S.No</th>
                    <th>Date</th>
                    <th>Campaign</th>
                    <th class="text-center">Delivered</th>
                    <th class="text-center">Viewed</th>
                    <th class="text-center">Clicked</th>
                    
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr *ngFor="let data of mailtemplate_list; let i=index;" class="align-middle">

                    <td>{{i+1}}</td>
                    <td>{{data.created_date}}</td>
                    <td>{{data.template_name}}</td>
                    <td class="text-center text-nowrap"><span  class="badge badge-circle badge-primary text-white ">{{data.send_mail}}</span></td>
                    <td class="text-center text-nowrap"> <span  class="badge badge-circle badge-success text-white">{{data.read_mail}}</span></td>
                    <td class="text-center text-nowrap"> <span  class="badge badge-circle badge-dark text-white">{{data.click_mail}}</span></td>
                    
                    <td class="text-center text-nowrap">
                        <button title="Send" type="button" (click)="onsend(data)" data-bs-toggle="modal"
                            class="btn btn-icon btn-sm  paperplane-button"><span
                                class="fa-solid fa-paper-plane text-white fs-6"></span></button>&nbsp;
                        <button title="View" (click)="ontemplateview(data)"type="button" data-bs-toggle="modal"
                            class="btn  btn-icon btn-sm eye-button"><span
                                class="fa-solid fa-eye text-white fs-6"></span></button>&nbsp;
                        <button title="Mail Status"   (click)="mailstatus(data)"type="button"  data-bs-toggle="modal"
                            class="btn  btn-icon btn-sm calendarcheck-button"><span
                                class="bi bi-envelope-paper-fill text-white fs-6"></span></button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>