<!-- begin::Product Table -->
<div class="table-responsive">
    <div class="card card-body m-0 p-3 mb-5 bg-white rounded table-responsive">
    <div *ngFor="let data of Viewsalesordersummary_list;">
        <table id="employee_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
            <thead>
                <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                    <th>Product</th>
                    <!-- <th>Product Group</th> -->
                    <th>Product Code</th>                    
                    <th>Unit</th>
                    <th>Qty Ordered</th>
                    <!-- <th>MRP</th> -->
                    <th>Discount(%)</th>
                    <th>Unit Price</th>
                    <th>Tax</th>
                    <th>Total Amount</th>
                    <!-- <th>Need By Date</th> -->
                    
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{data.product_name}}</td>
                    <!-- <td>{{data.productgroup_name}}</td> -->
                    <td>{{data.product_code}}</td>                    
                    <td>{{data.uom_name}}</td>
                    <td>{{data.qty_quoted}}</td>
                    <!-- <td>{{data.selling_price}}</td> -->
                    <td>
                        <div class="container">
                            <div class="row">
                                {{data.margin_amount}}
                            </div>
                            <div class="row">
                                {{data.margin_percentage}}
                            </div>
                        </div>
                        

                    </td>
                    <td>{{data.product_price}}</td>

                    <td>
                        <div class="container">
                            <div class="row">
                                {{data.tax_name}}
                            </div>
                            <div class="row">
                                {{data.tax_amount}}
                            </div>
                        </div> 
                   
                        <!-- <br>{{data.tax_name2}}&nbsp;&nbsp;: {{data.tax_amount2}}
                        <br>{{data.tax_name3}}&nbsp;&nbsp;: {{data.tax_amount3}} -->
                    </td>

                    <td>{{data.price}}</td>
                    <!-- <td>{{data.product_requireddate}}</td> -->
                    
                </tr>
            </tbody>
        </table>
    </div>
</div>
<!-- end::table -->
