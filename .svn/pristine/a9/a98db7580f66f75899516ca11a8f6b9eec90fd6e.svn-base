<div class="m-5">
    <div class="card card-body">
        <div class="card-header bg-lightblue card-height55" style="border-radius: 0px;">
            <div class="card-title m-0">
                <h5 class="fw-bolder text-blue">DELIVERY ORDER ADD</h5>
            </div>
        </div>

        <div class="d-flex flex-row m-6 flex-wrap" *ngFor="let data of deliverycus_list;">
            <div class="col-6 col-lg-4 col-md-6 col-sm-12"><b> DO Reference No</b>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <p>{{data.directorder_refno}}</p>
                </div>
            </div>
            <div class="col-12 col-lg-4 col-md-6 col-sm-12"><b>DO Date</b> <span class="ms-1 text-red">*</span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <p>{{data.directorder_date}}</p>
                </div>
            </div>
            <div class="col-12 col-lg-4 col-md-6 col-sm-12"><b>Customer Name <span class="ms-1 text-red">*</span></b>
                <div class="col-lg-12 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <p>{{data.customer_name}}</p>
                </div>
            </div>
        </div>
        <div class="d-flex flex-row m-6 flex-wrap" *ngFor="let data of deliverycus_list;">
            <div class="col-12 col-lg-4 col-md-6 col-sm-12"><b>Contact Number</b>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <p>{{data.customer_contactnumber}}</p>
                </div>
            </div>
            <div class="col-12 col-lg-4 col-md-6 col-sm-12"><b>Contact Person<span class="ms-1 text-red">*</span></b>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <p>{{data.customer_contactperson}}</p>
                </div>
            </div>
            <div class="col-12 col-lg-4 col-md-6 col-sm-12"><b>Email Address</b>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <p>{{data.customer_emailid}}</p>
                </div>
            </div>
        </div>
        <div class="d-flex flex-row m-6 flex-wrap" *ngFor="let data of deliverycus_list;">
            <div class="col-6 col-lg-8 col-md-6 col-sm-12"><b>Customer Address<span class="ms-1 text-red">*</span></b>
                <div class="col-lg-12 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <p>{{data.customer_address}}</p>
                </div>
            </div>
            <div class="col-6 col-lg-4 col-md-6 col-sm-12"><b>Remarks</b>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <p>{{data.directorder_remarks}}</p>
                </div>
            </div>
            </div>


        <div class="card shadow-sm">
            <div class="card-header bg-lightblue card-height55" style="border-radius: 0px;">
                <div class="card-title m-0">
                    <h5 class="fw-bolder text-blue">Product Summary</h5>
                </div>
            </div>
            <div class="table-responsive">
                <div class="card card-body m-0 shadow-lg p-3 mb-5 bg-white rounded table-responsive">
                    <table id="product" class="table table-striped table-row-bordered gy-4 gs-2">
                        <thead class="table_head">
                            <tr class="text-white fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                                <th>S.No</th>
                                <th>Product </th>
                                <th>Product Group</th>
                                <th>Product Code</th>
                                <th>Unit</th>
                                <th style="text-align: right;">Unit Price</th>
                                <th style="text-align: center;">Quantity Ordered</th>
                                <th style="text-align: right;">Quantity Delivered</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr *ngFor="let data of deliverycusprod_list; let i=index;">
                                <td>{{i+1}}</td>
                                <td>{{data.product_name}}</td>
                                <td>{{data.productgroup_name}}</td>
                                <td>{{data.product_code}}</td>
                                <td>{{data.productuom_name}}</td>
                                <td>{{data.product_total}}</td>
                                <td>{{data.product_qty}}</td>
                                <td>{{data.product_qtydelivered}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>

            <div class="card p-3">
                <div class="card-header bg-lightblue card-height55">
                    <div class="card-title m-0">
                        <h5 class="fw-bolder text-blue">DELIVERY DETAILS</h5>
                    </div>
                </div>
                <form [formGroup]="combinedFormData" (ngSubmit)="OnDelSubmit()">
                    <div class="d-flex flex-row m-2 flex-wrap table-responsive">
                        <div class="d-flex flex-row col-lg-6 flex-wrap">
                            <div class="col-12 col-lg-7 col-md-6 col-sm-12"><b>Delivery Date</b>
                                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                                    <input type="date" class="form-control form-control-lg form-control-solid custom-input
                    mb-3 mb-lg-0  borderc-secondary bg-white custom-input" formControlName="delivery_date"
                                        class="form-control"  />
                                        <input type="date" class="form-control form-control-lg form-control-solid custom-input
                    mb-3 mb-lg-0  borderc-secondary bg-white custom-input" formControlName="directorder_gid"
                                        class="form-control"  hidden/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-9 col-md-6 col-sm-12"><b>Delivered To</b>
                                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                                    <input type="text" class="form-control form-control-lg form-control-solid custom-input
                    mb-3 mb-lg-0  borderc-secondary bg-white custom-input" formControlName="delivery_to"
                                        class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="d-flex flex-row col-lg-6 flex-wrap">
                            <div class="col-12 col-lg-9 col-md-6 col-sm-12"><b>Delivery By</b>
                                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                                    <input type="text" class="form-control form-control-lg form-control-solid custom-input
                    mb-3 mb-lg-0  borderc-secondary bg-white custom-input" formControlName="delivery_by"
                                        class="form-control" />
                                </div>
                            </div>
                            <div class="col-12 col-lg-9 col-md-6 col-sm-12"><b>Remarks</b>
                                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                                    <textarea type="text" class="form-control form-control-lg form-control-solid custom-input
                    mb-3 mb-lg-0  borderc-secondary bg-white custom-input" formControlName="remarks"
                                        class="form-control"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center my-4">
                        <button type="submit" class="btn-success btn-sm text-white me-2">
                            <i class="bi bi-check-square fs-5"></i>
                            <span class="ms-3">Submit</span> </button>
                        <button class="btn-primary btn-sm text-white me-4">
                            <i class="fas fa-arrow-left"></i> &nbsp; Back
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>