<div class="card">
    <div class="row ms-3 mt-3 d-flex align-items-center">
        <div class="col">
          <h3 class="card-title">Rate Contract</h3>
        </div>
    
        <div class="col me-5">
          <button type="button" class="btn-primary btn-sm text-white me-4 float-end" data-bs-toggle="modal"
            data-bs-target="#myModaladd">
             Add Rate Contract
          </button>
        </div>
      </div>
    <div class="table-responsive">
        <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded" >
            <table id="pricesegment_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
                <thead>
                    <tr class="fw-bold fs-7 text-nowrap bg-lightblue text-blue align-middle">
                        <th></th>
                        <th></th>
                        <th>S.no </th>
                        <th>Rate Contract Code </th>
                        <th>Rate Contract Name</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr *ngFor="let data of pricesegment_list; let i=index;">
                        <td (click)="ondetail(data.pricesegment_gid)" (click)="data.isExpand = !data.isExpand">
                            <i *ngIf="!data.isExpand" class="bi-chevron-right"></i>
                            <i *ngIf="data.isExpand" class="bi-chevron-up"></i>
                        </td>
                        <td></td>
                        <td>{{i+1}}</td>
                        <td>{{data.pricesegment_code}}</td>
                        <td>{{data.pricesegment_name}}</td>
                        <td class="text-center text-nowrap">
                            <!-- <button title="Add" type="button" class="btn btn-icon btn-sm bg-primary me-2"
                                data-bs-toggle="modal" data-bs-target="#myModaladdproduct"><span
                                    class="fa-solid fa-plus text-white  fs-6"></span></button> -->

                            <button title="Edit" type="button" class="btn btn-icon btn-sm bg-success me-2"
                                (click)="openModaledit(data)" data-bs-toggle="modal" data-bs-target="#myModaledit"><span
                                    class="fa-solid fa-pencil text-white  fs-6"></span></button>

                                    <button title="Assign" type="button" class="btn btn-icon btn-sm bg-success me-2"(click)="openModalemployee(data)"
                                data-bs-toggle="modal" data-bs-target="#myModalassigncustomer"><span
                                    class="fa-solid fa-plus text-white  fs-6"></span></button>

                                    <button title="Assign Product" type="button" class="btn btn-icon btn-sm bg-primary me-2"
                                    (click)="onadd(data.pricesegment_gid)"><span
                                        class="fa-solid fa-first-order text-white  fs-6"></span></button>

                            <button title="Delete" type="button" (click)="openModaldelete(data.pricesegment_gid)"
                                data-bs-toggle="modal" data-bs-target="#myModaldelete"
                                class="btn btn-icon btn-sm bg-danger me-2"><span
                                    class="fa-solid fa-trash text-white  fs-6"></span></button>

                        </td>
                        <br>
                        <td *ngIf="data.isExpand">
                            <br> <br> <br>
                            <div class="table-responsive" style="margin-left:-1750px;">
                                <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
                                    <table id="pricesegment_list1" 
                                        class="table table-striped table-row-bordered gy-5 gs-7 ">
                                        <thead>
                                            <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                                                <th>S.No</th>
                                                <th>Customer ID</th>
                                                <th>Customer Name</th>
                                                <th>Contract Details</th>
                                                <th>Region</th>
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr *ngFor="let data1 of pricesegmentgrid_list; let i=index;">
                                                <td>{{i+1}}</td>
                                                <td>{{data1.customer_id}}</td>
                                                <td>{{data1.customer_name}}</td>
                                                <td>{{data1.contact_details}}</td>
                                                <td>{{data1.region_name}}</td>
                                                
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- The Modal ADD UNIT CLASS DETAILS-->
<form [formGroup]="reactiveForm" #form="ngForm">
    <div class="modal" id="myModaladd" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->

                <div class="card-header p-1 pb-2 pt-1 rounded-top bg-primary">
                    <h2 style="margin-top:10px;color:white;font-weight: bold;">&nbsp;&nbsp;<i
                            class="fas fa-plus fw-bolder fs-3"></i> &nbsp;&nbsp;Add Rate Contract</h2>

                </div>
                <!-- Modal body -->
                <div class="modal-body">



                    <div class="row"><span class="font-bold"><b>Rate Contract Code</b><span
                                class="ms-1 text-red">*</span></span>
                        <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2 d-flex ">

                            <!-- <input class="form-control form-control-lg" formControlName="entity_name" pattern="^(?!\s*$).+" type="text" placeholder="Enter Entity" aria-label=".form-control-lg example" autocomplete="off" required  [class.is-invalid]="entity_name.invalid && (entity_name.dirty || entity_name.touched)">
                 -->
                            <input formControlName="pricesegment_code" type="text" class="
                 form-control form-control-lg form-control-solid
                 custom-input
                 mb-3 mb-lg-0
                 bg-white
                 custom-input
               " [ngStyle]="{
                 'border-color':
                 pricesegment_code.invalid && pricesegment_code.touched
                     ? 'red'
                     : 'rgb(209, 209, 209)'
               }" placeholder="Enter Rate Contract Code" pattern="^(?!\s*$).+"  name="productuomclass_code" required maxlength="7"/>
                        </div>

                    </div>
                    <div
                        *ngIf="pricesegment_code.invalid && (pricesegment_code.dirty || pricesegment_code.touched)">
                        <div *ngIf="pricesegment_code.errors?.['required']">
                            <span style="color:red;">Rate Contract Code is required.</span>
                        </div>
                        <!-- <div *ngIf="pricesegment_code.errors?.['pattern']">
                            <span style="color:red;">Rate Contract Code Like "PUC0000".</span>
                        </div> -->
                    </div>
                    <br>


                    <div class="row"><span class="font-bold"><b>Rate Contract Name</b><span
                                class="ms-1 text-red">*</span></span>
                        <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2 d-flex ">

                            <!-- <input class="form-control form-control-lg" formControlName="entity_name" pattern="^(?!\s*$).+" type="text" placeholder="Enter Entity" aria-label=".form-control-lg example" autocomplete="off" required  [class.is-invalid]="entity_name.invalid && (entity_name.dirty || entity_name.touched)">
                         -->
                            <input formControlName="pricesegment_name" type="text" class="
                         form-control form-control-lg form-control-solid
                         custom-input
                         mb-3 mb-lg-0
                         bg-white
                         custom-input
                       " [ngStyle]="{
                         'border-color':
                         pricesegment_name.invalid && pricesegment_name.touched
                             ? 'red'
                             : 'rgb(209, 209, 209)'
                       }" placeholder="Enter Rate Contract Name" pattern="^(?!\s*$).+" name="pricesegment_name"
                                required/>
                        </div>

                    </div>
                    <div
                        *ngIf="pricesegment_name.invalid && (pricesegment_name.dirty || pricesegment_name.touched)">
                        <div *ngIf="pricesegment_name.errors?.['required']">
                            <span style="color:red;">Rate Contract Name is required.</span>
                        </div>
                        <!-- <div *ngIf="pricesegment_name.errors?.['pattern']">
                            <span style="color:red;">Rate Contract Name is required.</span>
                        </div> -->
                    </div>
                    <br>

                </div>

                <!-- Modal footer -->
                <div class="text-center my-4">
                    <button (click)="onsubmit()" [disabled]="reactiveForm.invalid" [ngClass]="{
                        'primary-button': !reactiveForm.invalid,
                        'secondary-button': reactiveForm.invalid
                      }" data-bs-dismiss="modal">
                        <i class="fas fa-check text-white fs-5 "></i> &nbsp;Submit
                    </button> &nbsp;&nbsp;
                    <button class="btn-danger btn-sm text-white me-4" data-bs-dismiss="modal" (click)="onclose()">
                        <i class="fas fa-close text-white" ></i> &nbsp;Close
                    </button>
                </div>

            </div>
        </div>
    </div>
</form>
<!-- The Modal EDIT UNIT CLASS DETAILS-->
<form [formGroup]="reactiveFormEdit" #form="ngForm">
    <div class="modal" id="myModaledit" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->

                <div class="card-header p-1 pb-2 pt-1 rounded-top bg-primary">
                    <h2 style="margin-top:10px;color:white;font-weight: bold;">&nbsp;&nbsp;<i
                            class="fas fa-pencil fw-bolder fs-3"></i> &nbsp;&nbsp;Edit Rate Contract</h2>

                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    <input class="form-control form-control-lg" formControlName="pricesegment_gid" hidden
                        pattern="^(?!\s*$).+" type="text" placeholder="Enter Entity"
                        aria-label=".form-control-lg example" autocomplete="off" required>



                    <div class="row"><span class="font-bold"><b>Rate Contract Code</b><span
                                class="ms-1 text-red">*</span></span>
                        <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2 d-flex ">

                            <!-- <input class="form-control form-control-lg" formControlName="entity_name" pattern="^(?!\s*$).+" type="text" placeholder="Enter Entity" aria-label=".form-control-lg example" autocomplete="off" required  [class.is-invalid]="entity_name.invalid && (entity_name.dirty || entity_name.touched)">
                 -->
                            <input formControlName="pricesegmentedit_code" type="text" class="
                 form-control form-control-lg form-control-solid
                 custom-input
                 mb-3 mb-lg-0
                 bg-white
                 custom-input
               " [ngStyle]="{
                 'border-color':
                 pricesegmentedit_code.invalid && pricesegmentedit_code.touched
                     ? 'red'
                     : 'rgb(209, 209, 209)'
               }" placeholder="Enter Rate Contract Code" pattern="^(?!\s*$).+" name="pricesegmentedit_code" required />
                        </div>

                    </div>
                    <div
                        *ngIf="pricesegmentedit_code.invalid && (pricesegmentedit_code.dirty || pricesegmentedit_code.touched)">
                        <div *ngIf="pricesegmentedit_code.errors?.['required']">
                            <span style="color:red;">Rate Contract Code is required.</span>
                        </div>
                    </div>
                    <br>


                    <div class="row"><span class="font-bold"><b>Rate Contract Name</b><span
                                class="ms-1 text-red">*</span></span>
                        <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2 d-flex ">

                            <!-- <input class="form-control form-control-lg" formControlName="entity_name" pattern="^(?!\s*$).+" type="text" placeholder="Enter Entity" aria-label=".form-control-lg example" autocomplete="off" required  [class.is-invalid]="entity_name.invalid && (entity_name.dirty || entity_name.touched)">
                         -->
                            <input formControlName="pricesegmentedit_name" type="text" class="
                         form-control form-control-lg form-control-solid
                         custom-input
                         mb-3 mb-lg-0
                         bg-white
                         custom-input
                       " [ngStyle]="{
                         'border-color':
                         pricesegmentedit_name.invalid && pricesegmentedit_name.touched
                             ? 'red'
                             : 'rgb(209, 209, 209)'
                       }" placeholder="Enter Rate Contract Name" pattern="^(?!\s*$).+" name="pricesegmentedit_name"
                                required />
                        </div>

                    </div>
                    <div
                        *ngIf="pricesegmentedit_name.invalid && (pricesegmentedit_name.dirty || pricesegmentedit_name.touched)">
                        <div *ngIf="pricesegmentedit_name.errors?.['required']">
                            <span style="color:red;">Rate Contract Name is required.</span>
                        </div>
                    </div>
                    <br>

                </div>

                <!-- Modal footer -->
                <div class="text-center my-4">
                    <button (click)="onupdate()" [disabled]="reactiveFormEdit.invalid" [ngClass]="{
                        'primary-button': !reactiveFormEdit.invalid,
                        'secondary-button': reactiveFormEdit.invalid
                      }" data-bs-dismiss="modal">
                        <i class="fas fa-check text-white fs-5 "></i> &nbsp;Update
                    </button> &nbsp;&nbsp;
                    <button class="btn-danger btn-sm text-white me-4" data-bs-dismiss="modal">
                        <i class="fas fa-close text-white"></i> &nbsp;Close
                    </button>
                </div>

            </div>
        </div>
    </div>
</form>
<!-- The Modal Delete -->
<div class="modal" id="myModaldelete" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="text-center my-4">
                <h2><b>Are you sure?</b></h2>
                <br>
                <p style="display: block;">Do You Want To Delete the Record ?</p>
                <div class="text-center my-4">
                    <button class="btn-primary btn-sm text-white me-2" data-bs-dismiss="modal">
                        <i class="fas fa-close text-white"></i> &nbsp;Close
                    </button>&nbsp;
                    <button class="btn-danger btn-sm text-white me-4" (click)="ondelete()" data-bs-dismiss="modal">
                        <i class="fas fa-trash text-white fs-5 "></i> &nbsp;Delete
                    </button>


                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal modal-lg" id="myModalassigncustomer" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->

            <div class="card-header p-1 pb-2 pt-1 rounded-top bg-primary">
                <h2 style="margin-top:10px;color:white;font-weight: bold;">&nbsp;&nbsp;<i class="bi bi-people"
                        style="font-size:20px;"></i> &nbsp;&nbsp;Assign Customer to Team</h2>

            </div>
           
            <div class="text-center my-4">
                <span> <span style="font-weight:bolder;font-size:13px;">Rate Contract Code </span><span
                        style="color:red;">&nbsp;&nbsp;{{teamname}}</span></span>
                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span style="font-weight:bolder;font-size:13px;">Rate Contract Name</span><span
                        style="color:red;">&nbsp;&nbsp;{{branch_name}}</span></span>
            </div>
            <div class="container-fluid">
	
                <dual-list [sort]="keepSorted" [source]="source"  [key]="key" [key1]="key1" [display]="display" [filter]="filter"
