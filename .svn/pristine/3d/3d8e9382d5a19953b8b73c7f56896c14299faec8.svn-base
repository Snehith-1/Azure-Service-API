<div class="m-20" >
    <div class="m-5" >
       
          <div class="card shadow-lg rounded-top"  style="top:-50px;">
           <div class="card-title p-5 pb-6 pt-6 rounded-top bg-lightblue" >
               <h3 class="fw-bolder text-blue text-white"><i class="fas fa-eye fw-bolder fs-3"></i> &nbsp;&nbsp;&nbsp;View Enquiry </h3>
             </div>
             <div class="d-flex flex-row m-3 mt-6 flex-wrap border-bottom" >
              <div class="col-12 col-lg-3 col-md-6 col-sm-12 "><span class="fw-bold">Enquiry Ref.No </span>
                <p class="mt-3">{{this.enquiry_gid}}</p>
              </div>
              <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Enquiry Date </span>
               <p class="mt-3">{{this.enquiry_date}}</p>
              </div>
              <div class="col-12 col-lg-3 col-md-6 col-sm-12"> <span class="fw-bold">Branch</span>
               <p class="mt-3">{{this.branch_name}}</p>
               </div> 
              <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Vendor Enquiry Ref.No </span>
               <p class="mt-3">{{this.enquiry_referencenumber}}</p>
              </div>
             </div>
             <div class="d-flex flex-row m-3 mt-6 flex-wrap border-bottom" >
              <div class="col-12 col-lg-3 col-md-6 col-sm-12 "><span class="fw-bold">Vendor Company</span>
               <p class="mt-3">{{this.vendor_companyname}}</p>
              </div>
              <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Contact Number </span>
               <p class="mt-3">{{this.contact_number}}</p>
              </div>
              <div class="col-12 col-lg-3 col-md-6 col-sm-12"> <span class="fw-bold">Contact Person</span>
               <p class="mt-3">{{this.vendor_contact_person}}</p>
               </div> 
              <div class="col-12 col-lg-3 col-md-6 col-sm-12"><span class="fw-bold">Email Address</span>
               <p class="mt-3">{{this.contact_email}}</p>
              </div>
             </div>
    
             <div class="d-flex flex-row m-3 mt-6 flex-wrap border-bottom" >
              <div class="col-12 col-lg-3 col-md-6 col-sm-12 "><span class="fw-bold">Address</span>
               <p class="mt-3">{{this.vendor_address}}</p>
              </div>
              
              <div class="col-12 col-lg-3 col-md-6 col-sm-12"> <span class="fw-bold">Expected Closure Date</span>
               <p class="mt-3">{{this.closure_date}}</p>
               </div> 
             </div>
               
          </div>
    </div>
    <div class="table-responsive">
      <div class="card card-body table-responsive m-3 shadow-lg p-3 mb-5 bg-white rounded">
          <table id="POproductlist" class="table table-striped table-row-bordered gy-5 gs-7 ">
              <thead>
                  <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                    <th>Vendor Product Code</th>
                    <th>Product</th>
                    <th>Product Group</th>
                    <th>Product Code</th>
                    <th>Unit</th>
                    <th>Qty Requested</th>
                    <th>Potential value</th>
                    <th>Need By Date</th>
                  </tr>
              </thead>
              <tbody>
    
                
                  <tr *ngFor="let m of viewvendorenquiry_list">
                      <!--Product Group Dropdown-->
                      <td>{{m.vendorproduct_code}}</td>
                      <td>{{m.product_name}}</td>
                       <td>{{m.productgroup_name}}</td>
                      <td>{{m.product_code}}</td>
                      <td>{{m.productuom_name}}</td>
                      <td>{{m.qty_enquired}}</td>
                      <td>{{m.potential_value}}</td>
                      <td>{{m.product_requireddate}}</td>
                      
                  </tr>
              </tbody>
          </table>
      </div>
    </div>
    <div class="text-center my-4">
      <button class="btn-primary btn-sm text-white me-4 mt-3" routerLink="/pmr/PmrTrnRaiseEnquiry">
        <i class="fas fa-arrow-left"></i> &nbsp;Back
      </button>
      
    </div>
</div> 


    

  
