<div class="card">
    <div class="row ms-3 mt-3 d-flex align-items-center">
        <div class="col">
            <h3 class="card-title">Purchase Order</h3>
        </div>

        <div class="col me-5">
            <button type="button" class="btn-primary btn-sm text-white me-4 float-end" data-bs-toggle="modal"
                data-bs-target="#myModaladd" (click)="onadd()">
                Raise PO
            </button>
        </div>
    </div>

    <div class="table-responsive">
        <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded">

            <table id="purchaseorder_list" class="table table-striped table-row-bordered gy-5 gs-7">
                <thead>
                    <tr class="fw-bold fs-7 text-nowrap bg-lightblue text-blue align-middle">
                        <th>PO.Date</th>
                        <th>Expected PO<br>Delivery Date </th>
                        <th>PO Ref.No</th>
                        <th>Branch</th>
                        <th>Vendor/<br>Currency</th>
                        <th>PO Status</th>
                         <th>PO Amount</th>
                        <th>Remarks</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr *ngFor="let data of purchaseorder_list;">
                        <td>{{data.purchaseorder_date}}</td>
                        <td>{{data.purchaseorder_date}}</td>
                        <td>{{data.purchaseorder_gid}}</td>
                        <td>{{data.branch_name}}</td>
                        <td>{{data.vendor_companyname}}</td>
                        <td>{{data.purchaseorder_status}}</td>
                        <td>{{data.paymentamount}}</td>
                        <td>{{data.remarks}}</td>
                        <td class="text-center text-nowrap">
                            <button title="View" type="button" class="btn btn-icon btn-sm bg-primary me-2"
                                (click)="onview(data.purchaseorder_gid)"><span
                                    class="fa-solid fa-eye text-white  fs-6"></span></button>
                            <button title="Edit" type="button" class="btn btn-icon btn-sm bg-success me-2"
                                data-bs-toggle="modal" data-bs-target="#myModaledit"><span
                                    class="fa-solid fa-pencil text-white  fs-6"></span></button>
                            <button title="Pdf" type="button" data-bs-toggle="modal" data-bs-target="#myModalPdf"
                                class="btn btn-icon btn-sm bg-danger me-2"><span
                                    class="fa-solid fa-file text-white  fs-6" (click)="PrintPDF(data.purchaseorder_gid)"></span></button>

                                    <button title="Mail" type="button"  (click)="Mail(data.purchaseorder_gid)"
                                                class="btn btn-icon btn-sm background-color3  me-2"><span
                                             class="fa fa-envelope" aria-hidden="true"></span></button>

                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>

</div>