<div class="card">
    <div class="row ms-3 mt-3 d-flex align-items-center">
        <div class="col">
            <h3 class="card-title">Role Master</h3>
        </div>

        <div class="col me-5">
            <button title="Add Role" class="btn-primary btn-sm text-white me-4 mb-2 mt-2 float-end" routerLink="/hrm/HrmMstRoleAdd">Add Role</button>
        </div>
    </div>

    <div class="table-responsive">
        <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded">
            <table id="roleManagement" class="table table-striped table-row-bordered border-bottom gs-7">
                <thead>
                    <tr class="fw-bolder fs-5 text-nowrap bg-lightblue text-blue align-middle">
                        <th>S.No</th>
                        <th>Role Code</th>
                        <th>Role Title</th>
                        <th>Reporting To Role</th>
                        <th>Probation Period</th>
                        <th>Job Description</th>
                        <th>Role Responsible</th>
                        <th style="text-align: center;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr *ngFor="let data of roleMasterData; let i=index;" class="align-middle">
                        <td>{{i+1}}</td>
                        <td>{{data.role_code}}</td>
                        <td>{{data.role_name}}</td>
                        <td>{{data.reporting_to}}</td>
                        <td>{{data.probation_period}}</td>
                        <td>{{data.job_description}}</td>
                        <td>{{data.role_responsible}}</td>
                        <td class="text-center text-nowrap">
                            <button title="Edit" type="button" class="btn btn-icon btn-sm bg-success me-2" (click)="role_edit(data.role_gid)">
                                <span class="fa-solid fa-pencil fs-6" style="color: #ffffff;"></span>
                            </button>
                            <button title="Delete" type="button" class="btn btn-icon btn-sm bg-danger me-2" data-bs-target="#roledelete" data-bs-toggle="modal" (click)="delete(data.role_gid)">
                                <span class="fa-solid fa-trash fs-6" style="color: #ffffff;"></span>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


<div class="modal" id="roledelete" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog del_modal-dialog">
        <div class="modal-content del_modal-content">
            <div class="text-center my-4">
                <h2><b>Are you sure?</b></h2>
                <p style="display: block;">Do You Want To Delete the Record ?</p>
                <div class="text-center my-4">
                    <button class="btn-danger btn-sm text-white me-4" (click)="ondelete()" data-bs-dismiss="modal">
                        <i class="bi bi-trash-fill text-white fs-5 me-2"></i>Delete
                    </button>
                    <button class="btn-primary btn-sm text-white me-2" data-bs-dismiss="modal">
                        <i class="fas fa-close text-white me-2"></i>Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>