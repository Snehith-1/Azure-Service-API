<div class="card">
    <div class="row ms-3 mt-3 d-flex align-items-center">
        <div class="col">
            <h3 class="card-title">Bank Book</h3>
        </div>



        <div class="col-2 ">
            <b>Financial Year<span></span></b>&nbsp;

            <select name="year">
                <option value="2023">2023</option>
                <option value="2022">2022</option>
                <option value="2021">2021</option>
                <!-- ... add more years as needed ... -->
                <option value="2020">2020</option>
            </select>
        </div>
        <div class="col-5">
            <b class="tbl_lab">Year End:</b>&nbsp;<span>2024</span>
        </div>
        <div class="col me-5">
            <button type="button" class="btn-primary btn-sm text-white me-4 float-end" data-bs-toggle="modal"
                data-bs-target="#myModaladd">
             Add Entry
            </button>
        </div>
    </div>
    <br>

</div>
<div class="table-responsive">
    <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded">

        <table id="Getsubbankbook_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
            <thead>
                <tr class="fw-bold fs-7 text-nowrap bg-lightblue text-blue align-middle">
                    <th>Transaction Date</th>
                    <th>Ref No</th>
                    <th>Bank/Branch Name</th>
                    <th>Account Number</th>
                    <th>Account Name</th>
                    <th>Remarks</th>
                    <th>Credit Amount</th>
                    <th>Debit Amount</th>
                    <th>Closing Amount</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr *ngFor="let data of Getsubbankbook_list; let i=index;">
                    <td>{{data.transaction_date}}</td>
                    <td>{{data.journal_refno}}</td>
                    <td>{{data.bank_name}}</td>
                    <td>{{data.account_no}}</td>
                    <td>{{data.account_desc}}</td>
                    <td>{{data.remarks}}</td>
                    <td>{{data.credit_amount}}</td>
                    <td>{{data.debit_amount}}</td>
                    <td>{{data.closing_amount}}</td>
                    <td class="text-center text-nowrap">
                        <button title="Delete" type="button" (click)="delete()" data-bs-toggle="modal"
                            data-bs-target="#myModaldelete" class="btn btn-icon btn-sm bg-danger me-2"><span
                                class="fa-solid fa-trash text-white  fs-6"></span></button>
                    </td>
                <tr style="color: #9B0600;">
                    <td colspan="5"></td>
                    <td><strong>Total</strong></td>
                    <td><strong>{{ calculateTotal() }}</strong></td>
                    <!-- <td><strong>Total Paid:</td> -->
                    <td><strong>{{ calculateTotal1() }}</strong></td>
                    <td colspan="4"></td>

                </tr>
            </tbody>

        </table>
