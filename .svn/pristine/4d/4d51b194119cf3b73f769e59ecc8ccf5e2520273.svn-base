<div class="card shadow-sm">

    <div class="card-title p-5 pb-6 pt-6 rounded-top bg-primary mt-10">
        <h3 class="fw-bolder" style="color: #ffffff;">
            Edit Component
        </h3>
      </div>

    <div class="mt-1">
        <!-- EDIT Function -->
        <form [formGroup]="reactiveFormEdit" #form="ngForm">

             <div class="d-flex flex-row fv-row flex-wrap m-6">
                <!-- Component Group -->
                <div class="col-12 col-lg-4 col-md-4 col-sm-12">
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-1">
                        <span class="ms-1"><b>Component Group</b></span>
                        <span style="color:red"> *</span>

                        <ng-select class="custom col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2"
                    formControlName="componentgroup_name" bindLabel="componentgroup_name" bindValue="componentgroup_name"
                    [items]="componentgrouplist" [class.is-invalid]="reactiveFormEdit.get('componentgroup_name')?.invalid
                    && (reactiveFormEdit.get('componentgroup_name')?.dirty || reactiveFormEdit.get('componentgroup_name')?.touched)"
                        [ngClass]="{'invalid-border': reactiveFormEdit.get('componentgroup_name')?.invalid &&
                        reactiveFormEdit.get('componentgroup_name')?.touched}" placeholder="Select an option"
                        required></ng-select>
                        
                        <div *ngIf="componentgroup_name.invalid && (componentgroup_name.dirty || componentgroup_name.touched)">
                            <div *ngIf="componentgroup_name.errors?.['required']">
                                <span style="color:red;">Component Group is Required</span>
                            </div>
                        </div>
                    </div>
                </div>
            
                <!-- Component Code -->
                <div class="col-12 col-lg-4 col-md-4 col-sm-12">
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-1">
                        <span class="ms-2"><b>Component Code</b></span>
                        <span style="color:red"> *</span>

                        <input type="text" formControlName="component_code" [ngStyle]=
                "{ 'border-color': reactiveFormEdit.get('component_code')?.hasError('required')
                 && reactiveFormEdit.get('component_code')?.touched ? 'red' : 'rgb(209, 209, 209)' }"
                 class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 
            bg-white mt-2" placeholder="Enter Component Code" required  />
                <div *ngIf="reactiveFormEdit.get('component_code')?.hasError('required') &&
                 reactiveFormEdit.get('component_code')?.touched " 
                 class="text-red">Component Code is Required.</div>
  
                    </div>
                </div>
            
                <!-- Component Name -->
                <div class="col-12 col-lg-4 col-md-4 col-sm-12">
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-1">
                        <span class="ms-2"><b>Component Name</b></span>
                        <span style="color:red"> *</span>
                        <input type="text" formControlName="component_name" [ngStyle]=
                        "{ 'border-color': reactiveFormEdit.get('component_name')?.hasError('required')
                         && reactiveFormEdit.get('component_name')?.touched ? 'red' : 'rgb(209, 209, 209)' }"
                         class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 
                         bg-white mt-2" placeholder="Enter Component Name" required  />

                        <div *ngIf="component_name.invalid && (component_name.dirty || component_name.touched)">
                            <div *ngIf="component_name.errors?.['required']">
                                <span style="color:red;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Component Name is Required</span>
                            </div>
                        </div>
                    </div>
                </div>
            
                <!-- Contribution Type -->
                
            </div>
<br>

            <div class="d-flex flex-row fv-row flex-wrap">


                <div class="col-12 col-lg-4 col-md-4 col-sm-12">
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-1">
                        <span class="ms-5"><b>Contribution Type</b></span>
                        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2 d-flex flex-row">
                            <input type="radio" class="form-control-input ms-4 me-2" formControlName="contribution_type" value="EMPLOYEE ONLY" [(ngModel)]="contribution_type"  (change)="showTextBox0($event)" (change)="showTextBox1($event)" (change)="showTextBox($event)">
                            <label><b>Employee</b></label>
                        
                            <input type="radio" class="form-control-input ms-4 me-2" formControlName="contribution_type" value="EMPLOYER ONLY" [(ngModel)]="contribution_type" (change)="showTextBox0($event)" (change)="showTextBox1($event)" (change)="showTextBox($event)">
                            <label><b>Employer</b></label>
                        
                            <input type="radio" class="form-control-input ms-4 me-2" formControlName="contribution_type" value="BOTH"  [(ngModel)]="contribution_type" (change)="showTextBox0($event)" (change)="showTextBox1($event)" (change)="showTextBox($event)">
                            <label><b>Both</b></label>
                        </div>
                        
                    </div>
                </div>
            
                <div class="col-12 col-lg-4 col-md-4 col-sm-12"><span class="ms-6"><b>Component Type</b></span>
                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2 ms-1 d-flex flex-row">
                        <input type="radio" class="form-control-input ms-4 me-2" formControlName="component_type" value="Addition" (change)="showTextBox2($event)" >
                        <label><b>Addition</b></label>            
                        <input type="radio" class="form-control-input ms-4 me-2" formControlName="component_type" value="Deduction" (change)="showTextBox2($event)" >
                        <label><b>Deduction</b></label>            
                        <input type="radio" class="form-control-input ms-4 me-2" formControlName="component_type" value="Other" (change)="showTextBox2($event)">
                        <label><b>Other</b></label>
                    </div>
                </div>
            
                <div class="col-12 col-lg-4 col-md-4 col-sm-12"><span class="ms-7"><b>Affecting In</b></span>

                    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2 ms-2">
                        <input type="radio" class="form-control-input ms-4 me-2" formControlName="affect_in" value="Basic">
                        <label><b>Basic</b></label>
                        <input type="radio" class="form-control-input ms-4 me-2" formControlName="affect_in" value="Gross">
                        <label><b>Gross</b></label> 
                    </div>
                </div>
           
              
           
           
           

   </div>

   <div class="d-flex flex-row flex-wrap mt-10">
    <div class="col-12 col-lg-4 col-md-4 col-sm-12"><span class="ms-3"><b>Lop Deduction</b></span>
        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2 ms-0">
            <input type="radio" class="form-control-input ms-4 me-2" formControlName="lop_deduction"
                value="Y">
            <label><b>Yes</b></label>
            <input type="radio" class="form-control-input ms-4 me-2" formControlName="lop_deduction"
                value="N">
            <label><b>No</b></label>
        </div>
    </div>

    <div class="col-12 col-lg-4 col-md-4 col-sm-12 "  *ngIf="showInputs"><span class="ms-2"><b>Statutory Payment</b></span>
        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2 ms-0">
            <input type="radio" class="form-control-input ms-4 me-2" formControlName="statutory_pay"
                value="Y">
            <label><b>Yes</b></label>
            <input type="radio" class="form-control-input ms-4 me-2" formControlName="statutory_pay"
                value="N">
            <label><b>No</b></label>

        </div>
    </div>


</div>
   
      
   <br>

    <div *ngIf="showInput2">
    <div class="col-12 col-lg-3 col-md-3 col-sm-12"><span class="ms-6"><b>Other Allowance</b></span>
    <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2 ms-1">
        <input type="radio" class="form-control-input ms-4 me-2" formControlName="other_allowance" value="Addition">
        <label><b>Addition</b></label>
        <input type="radio" class="form-control-input ms-4 me-2" formControlName="other_allowance" value="Deduction">
        <label><b>Deduction</b></label>

   </div>
   </div>
   </div>

<br>
           <div *ngIf="contribution_type === 'EMPLOYEE ONLY' ">
           <div class="card-header bg-lightblue">
           <h3 class="card-title"><b>Employee Contribution</b></h3>
           </div>

        <div class="d-flex flex-row fv-row flex-wrap mt-4">

            
            <div class="col-12 col-lg-3 col-md-3 col-sm-12"><span class="ms-6"><b>Is Percentage</b></span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2 ms-1">
                    <input type="radio" class="form-control-input ms-4 me-2" formControlName="is_percent" value='Y'>
                    <label><b>Yes</b></label>
                    <input type="radio" class="form-control-input ms-4 me-2" formControlName="is_percent" value='N'>
                    <label><b>No</b></label>

                </div>
            </div>
        
            <div class="col-12 col-lg-3 col-md-3 col-sm-12"><span class="ms-4"><b>Percentage</b></span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input formControlName="employee_percent" type="text" style="width:70%;"
                            class="form-control form-control-lg form-control-solid  borderc-secondary custom-input mb-3 mb-lg-0 bg-white custom-input"
                            placeholder=" Enter Percentage" name="employee_percent" />
                            
                </div>
            </div>

           
            <div class="col-12 col-lg-3 col-md-3 col-sm-12"><span class="ms-4"><b>Amount</b></span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input formControlName="employee_amount" type="text" style="width:70%;"
                            class="form-control form-control-lg form-control-solid  borderc-secondary custom-input mb-3 mb-lg-0 bg-white custom-input"
                            placeholder=" Enter Amount" name="employee_amount" />

                </div>
            </div>
            
        
        
        
        </div>
        </div>
        <br>
        <div *ngIf="contribution_type === 'BOTH' ">

