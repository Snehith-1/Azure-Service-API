<div class="card">
  <div class="row ms-3 mt-3 d-flex align-items-center">
    <div class="col">
      <h3 class="card-title">Loan Summary</h3>
    </div>

    <div class="col me-5">
      <button title="Add Loan" class="btn-primary btn-sm text-white me-4 mb-2 mt-2 float-end" (click)="addloan()">
        <i class="fas fa-plus"></i> &nbsp;&nbsp;Add Loan</button>
    </div>
  </div>

  <div class="table-responsive">
    <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
      <table id="loan_list" class="table table-striped table-row-bordered gy-5 gs-7">
        <thead>
          <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue align-middle">
            <th>S.No</th>
            <th>Loan Ref. No </th>
            <th>Loan Date</th>
            <th>Loan To</th>
            <th>Loan Amount</th>
            <th>Paid</th>
            <th>Balance</th>
            <th>Created By</th>
            <th class="text-center">Action</th>
          </tr>
        </thead>
        <tbody>
          <tr *ngFor="let data of loan_list; let i=index;" class="fs-8 align-middle">
            <td>{{i+1}}</td>
            <td>{{data.loan_refno}}</td>
            <td>{{data.created_date}}</td>
            <td>{{data.employee_name}}</td>
            <td>{{data.loanamount}}</td>
            <td>{{data.paid_amount}}</td>
            <td>{{data.balance_amount}}</td>
            <td>{{data.created_by}}</td>
            <td class="text-center text-nowrap">
              <button title="View" type="button" (click)="openModalview(data.loan_gid)"
                class="btn btn-icon btn-sm bg-primary me-2">
                <span class="fas fa-eye fw-bolder fs-3"></span>
              </button>
              <button title="Edit" type="button" (click)="openModaledit(data.loan_gid)"
                class="btn btn-icon btn-sm bg-success me-2">
                <span class="fa-solid fa-pencil text-white  fs-6" style="color: #ffffff;"></span>
              </button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>