<div class="card">
  <div class="row ms-3 mt-3 d-flex align-items-center">
    <div class="col">
      <h3 class="card-title">Quotation Summary</h3>
    </div>

    <div class="col me-5">
      <button type="button" title="Raise Quotation" class="btn-primary btn-sm text-white me-4 float-end"
        data-bs-toggle="modal" data-bs-target="#myModaladd" routerLink="/smr/SmrTrnQuotationadd">
        Raise Quotation
      </button>
    </div>
  </div>
  <div class="table-responsive">
    <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded">
      <table id="quotation_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
        <thead>
          <tr class="fw-bold fs-7 text-nowrap bg-lightblue text-blue align-middle">
            <th>S.NO </th>
            <th>Quotation Date</th>
            <th>Quotation Ref.No</th>
            <th>Enquiry Ref.No</th>
            <!-- <th>Customer Enquiry Ref.No</th> -->
            <th>Customer</th>
            <!-- <th>Contact</th> -->
            <th>Details</th>
            <!-- <th>Mail Details</th> -->
            <th>Quotation Type</th>
            <th>Created By</th>
            <th class="text-end">Quotation Amount </th>
            <th>Quotation Status</th>
            <th class="text-center">Action</th>
          </tr>
        </thead>
        <tbody>
          <tr *ngFor="let data of quotation_list; let i=index;" style="white-space: nowrap;">
            <td>{{i+1}}</td>
            <td>{{data.quotation_date}}</td>
            <td>{{data.quotation_referenceno1}}</td>
            <td>{{data.enquiry_gid}}</td>
            <!-- <td>{{data.enquiry_referencenumber}}</td>  -->
            <td>{{data.customer_name}}</td>
            <!-- <td>{{data.contact}}</td> -->
            <td class="text-center text-nowrap">
              <label title="Product Details" data-bs-toggle="modal" data-bs-target="#myModalUpdateimage9"
                (click)="Details(data.parameter,data.quotation_gid)">
                <i class="fas fa-question-circle fa-5x text-primary fs-2"></i>
              </label>
            </td>
            <!-- <td class="text-center text-nowrap">
              <label title="Mail Details" data-bs-toggle="modal" data-bs-target="#myModalUpdateimage9"
                  (click)="Mail()">
                  <i class="fas fa-question-circle fa-5x text-primary fs-2"></i>
              </label>
          </td> -->
            <td>{{data.quotation_type}}</td>
            <td>{{data.user_firstname}}</td>
            <td class="text-end">{{data.Grandtotal}}</td>
            <td>{{data.quotation_status}}</td>
            <td class="text-center text-nowrap">

              <button title="View" type="button" (click)="onview(data.quotation_gid)" data-bs-toggle="modal"
                data-bs-target="#myModaldelete" class="btn btn-icon btn-sm background-color1 me-2"><span
                  class="fa-solid fa-eye text-white  fs-6"></span></button>

              <button title="History" type="button" (click)="onhistory(data.quotation_gid)" data-bs-toggle="modal"
                data-bs-target="#myModaldelete" class="btn btn-icon btn-sm bg-info me-2"><span
                  class="fa-solid fa-book text-white fs-6 fs-6"></span></button>


              <!-- <button title="Edit" type="button" class="btn btn-icon btn-sm bg-success me-2"
                (click)="openModaledit()" data-bs-toggle="modal" data-bs-target="#myModaledit"><span
                  class="fa-solid fa-pencil text-white  fs-6"></span></button> -->

              <!-- <button title="Amend" type="button" (click)="openModalamend(data.quotation_gid)" data-bs-toggle="modal"
                  data-bs-target="#myModaldelete" class="btn btn-icon btn-sm bg-danger me-2"><span
                    class="fa-solid fa-xmark text-white  fs-6"></span></button> -->

              <!-- <button title="Additional Information" type="button" 
                  class="btn btn-icon btn-sm bg-warning me-2" (click)="onaddinfo()" >
                  <span class="fa-solid fa-book text-white  fs-6"></span></button> -->



                  
              <!-- <button title="Raise Order" type="button" 
                  class="btn btn-icon btn-sm bg-success me-2" (click)="onadd(data.quotation_gid)">
                  <span class="fa-solid fa-arrow-up text-white  fs-6"></span></button>  -->


              <!-- <button title="Mail" type="button" class="btn btn-icon btn-sm bg-warning me-2 mt-2"
                  (click)="Mail(data.quotation_gid)" >
                 <span class="fa-solid fa-envelope fs-4" style="color: #ffffff;"></span>
             </button> -->


              <button title="Mail" type="button" (click)="Mail(data.quotation_gid)"
                class="btn btn-icon btn-sm background-color3  me-2"><span class="fa fa-envelope"
                  aria-hidden="true"></span></button>

              <button title="Print" type="button" class="btn btn-icon btn-sm background-color2 me-2"
                (click)="PrintPDF(data.quotation_gid)">
                <span class="fa-solid fa-print fs-6" style="color: #ffffff;"></span>
              </button>

              <!-- <button title="Delete" type="button" data-bs-toggle="modal" data-bs-target="#myModaldelete"
                (click)="openModaldelete(data.quotation_gid)" class="btn btn-icon btn-sm background-color me-2">
                <span class="fa fa-trash fs-6" style="color: #ffffff;"></span>
              </button> -->

              <!-- <button title="Quotation Ref.No" type="button" class="btn btn-icon btn-sm background-color4 me-2"
                data-bs-target="#myModalQrefNo" data-bs-toggle="modal" (click)="QuotRefNopopup()">
                <span class="fa-solid fa-book fs-6" style="color: #ffffff;"></span>
              </button> -->



            </td>


          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- details popup -->
<div class="modal fade" id="myModalUpdateimage9" tabindex="-1" data-bs-backdrop='static'
  aria-labelledby="editamlcategoryLabel" aria-hidden="true" data-bs-keyboard="false">
  <div class="modal-dialog modal-md modal-dialog-centered">
    <div class="modal-content  d-flex justify-content-center">
      <div class="card-header p-1 pb-1 pt-1 rounded-top bg-primary"
        style="display: flex; align-items: center; height: 40px;">
      </div>
      <div class="modal-body">
        <div class="table-responsive">
          <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded">
            <table class="table table-striped table-row-bordered gy-5 gs-7 ">
              <thead>
                <tr class="fw-bold fs-7 text-nowrap bg-lightblue text-blue align-middle">
                  <th>S.No </th>
                  <th>Product Code </th>
                  <th>Product Name </th>
                  <th>Qty Requested </th>
                </tr>
              </thead>
              <tbody>
                <tr *ngFor="let data of product_list; let i=index;" style="white-space: nowrap;">
                  <td>{{i+1}}</td>
                  <td>{{data.product_code}}</td>
                  <td>{{data.product_name}}</td>
                  <td>{{data.qty_quoted}}</td>

                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <div class="text-center my-4">
          <button class="btn-primary btn-sm text-white me-2" data-bs-dismiss="modal" style="background-color: red;">
            <i class="fas fa-arrow-left text-white"></i> &nbsp;Back
          </button>&nbsp;
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Quotation ref.no popup -->
<form [formGroup]="quoteform">

  <div class="modal fade" id="myModalQrefNo" tabindex="-1" data-bs-backdrop='static'
    aria-labelledby="editamlcategoryLabel" aria-hidden="true" data-bs-keyboard="false">

    <div class="modal-dialog w-200  modal-dialog-centered">
      <div class="modal-content">
        <div class="card-header p-1 pb-2 pt-1 rounded-top bg-primary">
          <h2 style="margin-top:10px;color:white;font-weight: bold;">&nbsp;&nbsp;<i class=""></i>Change Quotation Ref.No
          </h2>

        </div>

        <div *ngFor="let data of quotrefnolist; let i=index;">
          <div class="modal-body p-10">
            <div class="row"><span class="font-bold"><b>Quotation Date</b><span class="ms-1 text-red">:</span></span>
              <div class="col-lg-11 col-md-12 col-sm-12 fv-row mt-2 d-flex ">
                <p>{{data.quotation_date}}</p>



                <!-- <input formControlName="team_name" type="text" class="
                   form-control form-control-lg form-control-solid borderc-secondary
                   custom-input
                   mb-3 mb-lg-0
                   bg-white
                   custom-input
                 "  placeholder="Enter Team " name="team_name" /> -->
              </div>

            </div>

            <br>
            <div class="col-12 col-lg-12 col-md-6 col-sm-12"><b>Customer</b> <span class="ms-1 text-red">:</span>
              <p>{{data.customer_name}}</p>
              <br>
            </div>
            <br>
            <div class="col-12 col-lg-12 col-md-6 col-sm-12"><b>Quotation Ref.No</b> <span
                class="ms-1 text-red">:</span>

              <input formControlName="quotation_referenceno1" type="text" class="
              form-control form-control-lg form-control-solid
              borderc-secondary
              bg-white
              custom-input
              mb-3 mb-lg-0
            " required />

              <br>
            </div>


            <br>
            <div class="text-center my-4">
              <button (click)="onupdate()" class="btn-success btn-sm text-white me-4" data-bs-dismiss="modal">
                <i class="fas fa-check text-white fs-5 "></i> &nbsp;Update
              </button> &nbsp;&nbsp;
              <button (click)="onclose()" class="btn-danger btn-sm text-white me-4" data-bs-dismiss="modal">
                <i class="fas fa-close text-white"></i> &nbsp;Close
              </button>
            </div>

          </div>
        </div>
      </div>
    </div>

  </div>
</form>