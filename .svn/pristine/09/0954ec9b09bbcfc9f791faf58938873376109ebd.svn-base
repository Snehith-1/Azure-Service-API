<form [formGroup]="reactiveForm" novalidate="novalidate">
    <div class="card rounded-top">
        <div class="card-title p-5 pb-6 pt-6 rounded-top bg-primary" style="height:50px;">
            <h3 class="fw-bolder text-white"><i class="fas fa-plus fw-bolder fs-3"></i> &nbsp;&nbsp;&nbsp;GRN QC Checker
            </h3>
        </div>

        <div class="d-flex flex-row m-6  flex-wrap row">
            <div class="col-lg-4 col-md-12 col-sm-12 ">
                <span class="font-bold">GRN Ref No</span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="text" [ngStyle]="{ 'border-color': 'rgb(209, 209, 209)','height': '42px'}"
                        formControlName="grn_gid"
                        class="form-control form-control-lg form-control-solid inputfield custom-input mb-3 bg-secondary mb-lg-0 bg-white custom-input mt-2"
                        readonly />
                </div>
            </div>
           
            <div class="col-lg-4 col-md-12 col-sm-12">
                <span class="font-bold">GRN Date</span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="text" [ngStyle]="{ 'border-color': 'rgb(209, 209, 209)','height': '42px'}"
                        formControlName="grn_date"
                        class="form-control form-control-lg form-control-solid inputfield custom-input mb-3 bg-secondary mb-lg-0 bg-white custom-input mt-2"
                        readonly />
                </div>
            </div>
            <div class="col-lg-4 col-md-12 col-sm-12">
                <span class="font-bold">PO Ref No</span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="text" [ngStyle]="{ 'border-color': 'rgb(209, 209, 209)','height': '42px'}"
                        formControlName="purchaseorder_gid"
                        class="form-control form-control-lg form-control-solid inputfield custom-input mb-3 bg-secondary mb-lg-0 bg-white custom-input mt-2"
                        readonly />
                </div>
            </div>

        </div>
        <div class="d-flex flex-row m-6  flex-wrap row">
            <div class="col-lg-4 col-md-12 col-sm-12 ">
                <span class="font-bold">Vendor Name</span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="text" [ngStyle]="{ 'border-color': 'rgb(209, 209, 209)','height': '42px'}"
                        formControlName="vendor_companyname" readonly
                        class="form-control form-control-lg form-control-solid inputfield custom-input mb-3 mb-lg-0 bg-white  bg-secondary custom-input mt-2" />
                </div>
            </div>
            <div class="col-lg-4 col-md-12 col-sm-12 ">
                <span class="font-bold">Vendor Contact Person</span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="text" [ngStyle]="{ 'border-color': 'rgb(209, 209, 209)','height': '42px'}"
                        formControlName="vendor_contact_person" readonly
                        class="form-control form-control-lg form-control-solid inputfield custom-input mb-3 mb-lg-0 bg-secondary custom-input mt-2" />
                </div>
            </div>
            <div class="col-lg-4 col-md-12 col-sm-12 ">
                <span class="font-bold">Vendor Contact Number</span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="text" [ngStyle]="{ 'border-color': 'rgb(209, 209, 209)','height': '42px'}"
                        formControlName="contact_telephonenumber" readonly
                        class="form-control form-control-lg form-control-solid inputfield custom-input mb-3 mb-lg-0   bg-secondary custom-input mt-2" />
                </div>
            </div>

        </div>
        <div class="d-flex flex-row m-6  flex-wrap row">
            <div class="col-lg-4 col-md-12 col-sm-12 ">
                <span class="font-bold">Email Address</span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="text" [ngStyle]="{ 'border-color': 'rgb(209, 209, 209)','height': '42px'}"
                        formControlName="email_id" readonly
                        class="form-control form-control-lg form-control-solid inputfield custom-input mb-3 mb-lg-0   bg-secondary custom-input mt-2" />
                </div>
            </div>
            <div class="col-lg-4 col-md-12 col-sm-12 ">
                <span class="font-bold">Contact Address</span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">

                    <textarea type="text"
                        [ngStyle]="{ 'border-color': reactiveForm.get('address')?.hasError('required') && reactiveForm.get('address')?.touched ? 'red' : 'rgb(209, 209, 209)' }"
                        pattern="^(?!\s*$).+" formControlName="address"
                        class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input mt-2"
                        rows="3" readonly></textarea>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 col-sm-12 ">
                <span class="font-bold">Raised By</span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="text" [ngStyle]="{ 'border-color': 'rgb(209, 209, 209)','height': '42px'}"
                        formControlName="user_firstname" readonly
                        class="form-control form-control-lg form-control-solid inputfield custom-input mb-3 mb-lg-0   bg-secondary custom-input mt-2" />
                </div>
            </div>


        </div>
        <div class="d-flex flex-row m-6  flex-wrap row">
            <div class="col-lg-4 col-md-12 col-sm-12 ">
                <span class="font-bold">DC NO</span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="text"  [ngStyle]="{ 'border-color': 'rgb(209, 209, 209)','height': '42px'}"   formControlName="dc_no" 
                        class="form-control form-control-lg form-control-solid inputfield custom-input mb-3 mb-lg-0   bg-secondary custom-input mt-2"  readonly/>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 col-sm-12 ">
                <span class="font-bold">Check By User</span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="text"  [ngStyle]="{ 'border-color': 'rgb(209, 209, 209)','height': '42px'}"   formControlName="user_checkername" 
                        class="form-control form-control-lg form-control-solid inputfield custom-input mb-3 mb-lg-0   bg-secondary custom-input mt-2" readonly/>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 col-sm-12 ">
                <span class="font-bold">File Upload</span>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="file"
                        class="form-control form-control-lg form-control-solid custom-input mb-6 mb-lg-0 borderc-secondary bg-white custom-input"
                        (change)="onChange2($event)" accept=".xlsx , .xls" #fileinput class="form-control" [ngStyle]="{ 'height': '42px'}" />
                </div>
            </div>

        </div>
        <div class="d-flex flex-row m-6  flex-wrap row">
            <div class="col-lg-4 col-md-12 col-sm-12 ">
            <span class="font-bold">GRN Remarks</span>
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <textarea type="text"  [ngStyle]="{ 'border-color': reactiveForm.get('grn_remarks')?.hasError('required') && reactiveForm.get('grn_remarks')?.touched ? 'red' : 'rgb(209, 209, 209)' }"
                    pattern="^(?!\s*$).+"  formControlName="grn_remarks" 
                    class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input mt-2" rows="3" readonly
                    ></textarea>
            </div>
        </div>
        <div class="col-lg-4 col-md-12 col-sm-12 ">
            <span class="font-bold">GRN Ref</span>
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <textarea type="text"  [ngStyle]="{ 'border-color': reactiveForm.get('grn_reference')?.hasError('required') && reactiveForm.get('grn_reference')?.touched ? 'red' : 'rgb(209, 209, 209)' }"
                    pattern="^(?!\s*$).+"  formControlName="grn_reference" 
                    class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 bg-white custom-input mt-2" rows="3" readonly
                    ></textarea>
            </div>
        </div>

        </div>
        <div class="table-responsive">
            <table id="GetGrnQcChecker_lists" class="table table-striped table-row-bordered gy-5 gs-7">
                <thead>
                    <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                    <th>Product Group</th>
                    <th>Product Code</th>
                    <th>Product</th>
                    <th>Unit</th>
                    <th>Qty Inward</th>
                    <th>Qty Shortage</th>
                    <th>Qty Delivered</th>
                    <th>Qty Rejected</th>
                    <th>QC Remarks</th>
                    <!-- <th>Location</th>
                    <th>Bin</th> -->
                </tr>
                </thead>
                <tbody>
                    <tr *ngFor="let data of GetGrnQcChecker_lists; let i=index;" class="fs-6 align-middle">
                   
                    <td>{{data.productgroup_name}}</td>
                    <td>{{data.product_code}}</td>
                    <td>{{data.product_name}}</td>
                    <td>{{data.productuom_name}}</td>
                    <td>{{data.qty_delivered}}</td>
                    <td style="text-align: center;">
                       
                            <input type="text" [(ngModel)]="data.qty_shortage" placeholder="0.00" formControlName="qty_shortage_{{i}}" class="form-control" />
                    </td>
                      <td>
                        <input type="text" [(ngModel)]="data.qty_delivered" placeholder="0.00" formControlName="qty_delivered_{{i}}" class="form-control" />
                      </td>
                      <td>
                         <input type="text" [(ngModel)]="data.rejected_qty"  [(ngModel)]="rejected_qty"  formControlName="rejected_qty_{{i}}" class="form-control"  />
                      </td>
                      <td>
                                                       
                        <textarea formControlName="display_field_{{i}}" [(ngModel)]="data.display_field" class="form-control"></textarea>
                      </td>
                    <!-- <td>{{data.location_name}}</td>
                    <td>{{data.bin_number}}</td> -->
                    </tr>
                
                </tbody>
            </table>
        </div>
    

    <div class="text-center my-4">

       
        <button class="btn-sm text-white me-2" [disabled]="reactiveForm.invalid" [ngClass]="{
            'primary-button': !reactiveForm.invalid,
            'secondary-button': reactiveForm.invalid
          }" (click)="validate()">
          <i class="fas fa-check text-white fs-5"></i> &nbsp; Submit
        </button>
        <button class="btn-primary btn-sm text-white me-4 mt-3-center " routerLink="/pmr/PmrTrnGrncheckerSummary">
            &nbsp; <i class="fas fa-arrow-left white fs-5"></i>  &nbsp;Back
        </button>
   

</div> 

    </div>
</form>