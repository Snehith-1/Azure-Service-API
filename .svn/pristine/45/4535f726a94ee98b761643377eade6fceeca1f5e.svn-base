<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title" style="font-size:15px;">Employee Report Summary</h3> 
    </div>
    <form  [formGroup]="reactiveForm" #form="ngForm">
        
        <div class="d-flex flex-row fv-row flex-wrap" >
        <div class="col-12 col-lg-3 col-md-3 col-sm-12" style="margin-left:500px;">
            <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-8 ms-8" ><b>Branch</b>
              <ng-select formControlName="branch_name" style="width:80%;" 
            [items]="branchlist"  
             bindLabel="branch_name" bindValue="branch_gid" placeholder="Select an Option">
            </ng-select>
            </div>
          </div>

          <div class="col-12 col-lg-1 col-md-1 col-sm-12">
            <button type="button" title="Search" class="btn-primary btn-sm text-white me-4 mb-2 mt-12 float-end" (click)="GetPaymentSummary()">
              <i class="fas fa-search me-2"></i> Search</button>
          
          
            </div> 
         
            <div class="col-12 col-lg-1 col-md-1 col-sm-12">
          <button title="Export to Excel" type="button" class="btn-success btn-sm bg-export me-8" style="width: 3%; margin-left:23px; margin-top: 30px;"  (click)="openexportExcel()">
            <i class="bi bi-file-earmark-arrow-up "></i>
            </button>
            </div>
            
        </div>
     </form>
     
     <br>
     
    
    
    <div class="scroll">
    <div class="table-responsive">
        <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded d-flex">
            <table id="employeereportlist" class="table table-striped table-row-bordered gy-5 gs-7">
                <thead>
                    <tr class="fw-bold fs-5 bg-lightblue text-blue">
                        <th>S.No</th>
                        <th>Employee Code</th>
                        <th>Employee Name</th>
                        <th>Branch</th>
                        <th>Department</th>
                        <th>Designation </th>
                        <th>Gender</th>
                        <th>Joining Date</th>
                        <th>Work Permit No</th>
                        <th>Work Permit Exp Date</th>
                        <th>Passport No</th>
                        <th>Passport Exp Date</th>
                        <th>FIN No</th>
                        <th>Per Hour/Per Day</th>
                        <th>Per Month</th>
                        </tr>
                </thead>
                <tbody> 
                    <tr *ngFor="let data of employeereportlist; let i=index;"> 
                        <td >{{i+1}}</td>
                        <td>{{data.user_code}}</td>
                        <td>{{data.user_name}}</td>
                        <td>{{data.branch_name}}</td>
                        <td>{{data.department_name}}</td>
                        <td>{{data.designation_name}}</td>
                        <td>{{data.employee_gender}}</td>
                        <td>{{data.employee_joiningdate}}</td>
                        <td>{{data.workpermit_no}}</td>
                        <td>{{data.workpermit_expiredate}}</td>
                        <td>{{data.passport_no}}</td>
                        <td>{{data.passport_expiredate}}</td>
                        <td>{{data.fin_no}}</td>
                        <td>{{data.salary}}</td>
                        <td>{{data.permonth_rate}}</td>
                      
                    </tr>
                </tbody> 
            </table>
        </div> 
      </div> 
     </div>
    </div>

