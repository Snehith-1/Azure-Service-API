<form [formGroup]="reactiveForm" #form="ngForm">
    <div class="card shadow-sm">
      <div class="card-header">
        <h3 class="card-title">MANAGE EMPLOYEE </h3>
      </div>
      <br>
      <div class="card shadow-sm mt-5">
        <div class="align">
            <div class="col-12 col-lg-4 col-md-6 col-sm-12">
              <div class="d-flex align-items-center">
               <span class="font-bold" style="margin-left: 10px;"><b>Month</b></span>
              <b><p class="mt-4" style="color: rgb(11, 69, 241); margin-left: 15px;">{{this.month}}</p></b>
              </div>
            </div>
            <div class="col-12 col-lg-4 col-md-6 col-sm-12">
              <div class="d-flex align-items-center">
                <span class="font-bold" style="margin-left: 10px;"><b>Year</b></span>
                 <b><p class="mt-4" style="color: rgb(11, 69, 241); margin-left: 15px;">{{this.year}}</p></b>
              </div>
            </div>
            <div class="col-12 col-lg-4 col-md-6 col-sm-12">
              <div class="d-flex align-items-center">
                <span class="font-bold" style="margin-left: 10px;"><b>Working Days</b></span>
              <b><p class="mt-4" style="color: rgb(11, 69, 241); margin-left: 15px;">{{this.working_days}}</p></b>
              </div>
            </div>
            
          </div>
    </div>
      <br>  
      <div class="table-responsive">
        <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
          <table id="employeeselect_list" class="table table-striped table-row-bordered gy-5 gs-7">
            <thead>
              <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                <th>
                    <input type="checkbox" id="checkAll" (change)="$event ? masterToggle() : null"
                        [checked]="selection.hasValue() && isAllSelected()"
                        [indeterminate]="selection.hasValue() && !isAllSelected()" />
                    Check All
                </th>
                <th>S.No</th>
                <th>Employee Code</th>
                <th>Employee Name</th>
                <th>Branch</th>
                <th>Department</th>
                <th>Designation</th>
              </tr>
            </thead>
            <tbody>
              <tr *ngFor="let data of employeeselect_list; let i = index;">
                <td> <input type="checkbox" (click)="$event.stopPropagation()"
                    (change)="$event ? selection.toggle(data) : null"
                    [checked]="selection.isSelected(data)" /></td>
                <td>{{i + 1}}</td>
                <td>{{data.user_code}}</td>
                <td>{{data.employee_name}}</td>
                <td>{{data.branch_name}}</td>
                <td>{{data.department_name}}</td>
                <td>{{data.designation_name}}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="text-center my-4">
      <button class="btn-success text-white"  (click)="submit()">
        <i class="fas fa-check text-white fs-5"></i> &nbsp; submit
      </button>
      <button style="margin-left: 10px;"  class="btn-primary btn-sm text-white me-4" routerLink="/payroll/PayTrnSalaryManagement">
        <i class="fas fa-arrow-left"></i> &nbsp; Back
      </button>
    </div>
</form>