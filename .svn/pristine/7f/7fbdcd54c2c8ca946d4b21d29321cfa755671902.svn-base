<div class="card">
  <div class="row ms-3 mt-3 d-flex align-items-center">
    <div class="col">
      <h3 class="card-title">Shift Type Management</h3>
    </div>

    <div class="col me-5">
      <button title="Add Shift" class="btn-primary btn-sm text-white me-4 mb-2 mt-2 float-end"
        (click)="Shifttypeadd()">
        <i class="fas fa-plus"></i> &nbsp;&nbsp;
        Add Shift</button>
    </div>
  </div>

  <div class="table-responsive">
    <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded">
      <table id="shift_list" class="table table-striped table-row-bordered border-bottom gs-7">
        <thead>
          <tr class="fw-bolder fs-5 text-nowrap bg-lightblue text-blue align-middle">
            <th>S.No</th>
            <th>Shift Name</th>
            <th>Shift Time</th>
             <th>Status</th>
            <th class="text-center">Action</th>
          </tr>
        </thead>
        <tbody>
          <tr *ngFor="let data of shift_list; let i=index;" class="align-middle">
            <td>{{i+1}}</td>
            <td>{{data.shifttype_name}}</td>
            <td class="text-align: right">
              <button title="Additional Component" type="button" (click)="ShiftTimepopup(data)" data-bs-toggle="modal"
                data-bs-target="#myadditional" class="btn btn-icon btn-sm bg-primary me-2"><span
                  class="fa fa-question-circle fs-6"></span></button>
            </td>
            <td [ngSwitch]="data.status">
              <label *ngSwitchCase="'Y'" class="badge bg-success text-white ">Active</label>
              <label *ngSwitchCase="'N'" class="badge bg-danger text-white ">Inactive</label>
            </td>                        
            <td class="text-center text-nowrap">          
              <button title="Delete" type="button" class="btn btn-icon btn-sm bg-danger me-2" data-bs-toggle="modal" data-bs-target="#myModaldelete" (click)="openModaldelete(data.shifttype_gid)">
                <span class="fa-solid fa-trash fs-6" style="color: #ffffff;"></span>
              </button>              
               <button title="Active" type="button"
               class="btn btn-icon btn-sm bg-success me-2" data-bs-toggle="modal"
               data-bs-target="#myModalactive" (click)="openModalactive(data.shifttype_gid)">
               <span class="bi-hand-thumbs-up-fill text-white fs-6"></span>
           </button>
           <button title="Inactive" type="button"
           (click)="openModalinactive(data.shifttype_gid)" class="btn btn-icon btn-sm bg-warning me-2"
               data-bs-toggle="modal" data-bs-target="#myModalinactive"><span
                   class="bi-hand-thumbs-down-fill text-white fs-6"></span>
           </button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="modal" id="myadditional" data-bs-backdrop="static" data-bs-keyboard="false" style="margin-top: 150px;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="table-responsive">
        <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded d-flex">
          <table id="" class="table table-striped table-row-bordered gy-5 gs-7">
            <thead>
              <tr class="fw-bold fs-8 bg-lightblue text-blue">
                <th>Day</th>
                <th>From Time</th>
                <th>To Time</th>
              </tr>
            </thead>
            <tbody>
              <tr *ngFor="let data of Shifttime_list; let i=index;">
                <td>{{data.shifttypedtl_name}}</td>
                <td>{{data.start_time}}</td>
                <td>{{data.end_time}}</td>
              </tr>
            </tbody>
          </table>
          <div class="text-center">
            <button class="btn-danger btn-sm text-white me-4" data-bs-dismiss="modal">
              <i class="fa fa-arrow-left"></i> &nbsp;Back
            </button>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<!-- The Modal Delete -->
<div class="modal" id="myModaldelete" data-bs-backdrop="static" data-bs-keyboard="false">
  <div class="modal-dialog del_modal-dialog">
    <div class="modal-content del_modal-content">
      <div class="text-center my-4">
        <h2><b>Are you sure?</b></h2>
        <p style="display: block;">Do You Want To Delete the Record ?</p>
        <div class="text-center my-4">
          <button class="btn-danger btn-sm text-white me-4" (click)="ondelete()"  data-bs-dismiss="modal">
            <i class="bi bi-trash-fill text-white fs-5 me-2"></i>Delete
          </button>
          <button class="btn-primary btn-sm text-white me-2" data-bs-dismiss="modal">
            <i class="fas fa-close text-white me-2"></i>Close
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

  <!-- The Modal Active -->

  <div class="modal" id="myModalactive" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog del_modal-dialog">
      <div class="modal-content del_modal-content">
        <div class="text-center my-4">
          <h2><b>Are you sure?</b></h2>
          <p style="display: block;">Do You Want To Active the shift Type?</p>
          <div class="text-center my-4">
            <button class="btn-success btn-sm text-white me-4" (click)="onactive()" data-bs-dismiss="modal">
              <i class="fa fa-toggle-on fs-5 me-2"></i>Active
            </button>
            <button class="btn-primary btn-sm text-white me-2" data-bs-dismiss="modal">
              <i class="fas fa-close text-white me-2"></i>Close
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- The Modal Inactive -->
  
  <div class="modal" id="myModalinactive" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog del_modal-dialog">
      <div class="modal-content del_modal-content">
        <div class="text-center my-4">
          <h2><b>Are you sure?</b></h2>
          <p style="display: block;">Do You Want To Inactive the shift Type?</p>
          <div class="text-center my-4">
            <button class="btn-danger btn-sm text-white me-4" (click)="oninactive()" data-bs-dismiss="modal">
              <i class="fa fa-toggle-off fs-5 me-2"></i>Inactive
            </button>
            <button class="btn-primary btn-sm text-white me-2" data-bs-dismiss="modal">
              <i class="fas fa-close text-white me-2"></i>Close
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  