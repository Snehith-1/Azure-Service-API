<div class="card shadow-sm">
    <!-- <div class="card-header">
        <h3 class="card-title">Add Template</h3> 
    </div> -->
    <div class="card-title p-5 pb-6 pt-6 rounded-top bg-primary">
      <h3 class="fw-bolder text-white"><i class="fas fa-plus fw-bolder fs-3"></i> &nbsp;&nbsp;&nbsp;Add Template
      </h3>
  </div>
    <br>

    <form  [formGroup]="reactiveForm" #form="ngForm">
            
                
                  <div class="d-flex flex-row flex-wrap mt-6 ms-3">
         
                    <div class="col-12 col-lg-4 col-md-6 col-sm-12"><span class="font-bold required" >Template Name</span>
                        <div class="col-12 col-lg-4 col-md-6 col-sm-12">
                             <input formControlName="template_name" type="text" class="
                             form-control
                             mb-3 mb-lg-0 col-12
                             bg-white
                           "  placeholder="Template Name"   name="template_name" style="width:340px; height: 40px;" 
                           [ngClass]="{'invalid-border': template_name.invalid && template_name.touched}" oninput="this.value = this.value.replace(/[^a-zA-Z0-9]/g, '')" required  />
                        </div>
                        <div *ngIf="template_name.invalid && (template_name.dirty || template_name.touched)">
                          <div *ngIf="template_name.errors?.['required']">
                                      <span style="color:red;">Template Name Required </span>
                          </div>
                        </div> 
                    </div>
                  
                    <div class="col-12 col-lg-4 col-md-6 col-sm-12"><span class="font-bold required" >Template Type</span>
                  <div class="col-12 col-lg-4 col-md-3 col-sm-12">
                    <ng-select formControlName="payment_terms"
                         [(ngModel)]="mdlBranchName" 
                            bindLabel="payment_terms"  placeholder="Select an option" style="width: 340px; height: 40px;" 
                            [ngClass]="{'invalid-border': payment_terms.invalid && payment_terms.touched}">
                            <ng-option value="General">General</ng-option>
                            <ng-option value="Payment Terms">Payment Terms</ng-option>
                            <ng-option value="Delivery Details">Delivery Details</ng-option>
                            </ng-select>       
                </div>
                <div *ngIf="payment_terms.invalid && (payment_terms.dirty || payment_terms.touched)">
                  <div *ngIf="payment_terms.errors?.['required']">
                              <span style="color:red;">Template Type Required </span>
                  </div>
                  </div>
                </div>  
                </div>
                <br>
                <div >
                  <div class="card-header bg-lightblue card-height35 table-responsive">
                    <div class="card-title m-0">
                      <h5 class="fw-bolder text-blue">Template</h5>
                    </div>
                  </div>
                  <div class="d-flex flex-row flex-wrap mt-6 ms-3 table-responsive">
                    <div class="col-12 col-lg-12 col-md-12 col-sm-12">
                      <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                      <angular-editor [config]="config" formControlName="template_content">
                      </angular-editor>
                    </div>
                  </div>
                </div>
              </div>
            
               
                <!-- <div class="m-3 col-8 col-lg-4 col-md-5 col-sm-10">
                  <b>Template</b>
                  <div class="col-8 col-lg-5 col-md-8 col-sm-10 fv-row mt-2">
                    <div class="container">
                      <angular-editor [config]="config" formControlName="template_content"></angular-editor>
                    </div>
                  </div>
                </div> -->
          
          
                <!-- Modal footer -->
                <div class="text-center my-3">
                    <button  (click)="onsubmit()" [disabled]="reactiveForm.invalid" [ngClass]="{
                        'primary-button': !reactiveForm.invalid,
                        'secondary-button': reactiveForm.invalid
                      }" data-bs-dismiss="modal">          
                        <i class="fas fa-check text-white fs-5" ></i> &nbsp;Submit
                    </button> &nbsp;&nbsp;
                    <button class="btn-primary btn-sm text-white me-4" routerLink="/pmr/PmrMstTermsconditionssummary">
                        <i class="fas fa-arrow-left"></i> &nbsp; Back
                      </button>
                </div>
        
          
        </form></div>

