<div class="card">
    <div class="row ms-3 mt-3 d-flex align-items-center">
        <div class="col">
            <h3 class="card-title">Employee Probation Management</h3>
        </div>
    </div>

    <div class="table-responsive">
        <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded">
            <table id="employee" class="table table-striped table-row-bordered border-bottom gs-7">
                <thead>
                    <tr class="fw-bolder fs-5 text-nowrap bg-lightblue text-blue align-middle">
                        <th>S.No</th>
                        <th>Branch</th>
                        <th>Department </th>
                        <th>Designation </th>
                        <th>Employee Code</th>
                        <th>Employee Name</th>
                        <th>Gender</th>
                        <th>Joining Date</th>
                        <th>Probationary Until</th>
                        <th>Probation Status</th>
                        <th style="text-align: center;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr *ngFor="let data of employees; let i=index;" class="align-middle">
                        <td>{{i+1}}</td>
                        <td>{{data.branch_name}}</td>
                        <td>{{data.department_name}}</td>
                        <td>{{data.designation_name}}</td>
                        <td>{{data.user_code}}</td>
                        <td>{{data.user_name}}</td>
                        <td>{{data.employee_gender}}</td>
                        <td>{{data.employee_joiningdate}}</td>
                        <td>{{data.probationary_until}}</td>
                        <td>{{data.probation_status}}</td>
                        <td class="text-center text-nowrap">
                            <button title="History" type="button" class="btn btn-icon btn-sm bg-success me-2" (click)="onhistory(data.employee_gid)">
                                <span class="fas fa-book fs-6" style="color: #ffffff;"></span>
                            </button>
                            <button title="Leave Update" type="button" class="btn btn-icon btn-sm bg-danger me-2" (click)="onleaveupdate(data.employee_gid)">
                                <span class="fa-solid bi bi-arrow-clockwise fs-6" style="color: #ffffff;"></span>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>