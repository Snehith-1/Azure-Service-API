<div class="card shadow-sm">
    <div class="row ms-3 mt-3 d-flex align-items-center">
      <div class="col">
          <h3 class="card-title" style="font-size:15px;">Payrun Report Summary</h3>
         
      
        </div>
       
        <form  [formGroup]="reactiveForm" #form="ngForm">
      
            <div class="d-flex flex-row fv-row flex-wrap" >
              <div class="col-12 col-lg-3 col-md-3 col-sm-12">
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-5"> <span class="ms-1"><b>Branch</b></span>
                  <ng-select formControlName="branch_name" style="width:80%;" 
                  [items]="branchlist"  
                  bindLabel="branch_name" bindValue="branch_gid" placeholder="Select an Option">
                </ng-select>
                </div>
              </div>
              <div class="col-12 col-lg-3 col-md-3 col-sm-12">
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-5"><span class="ms-1"><b>Department</b></span>
                  <ng-select formControlName="department_name" style="width:80%;" 
                  [items]="departmentlist"  
                  bindLabel="department_name" bindValue="department_gid" placeholder="Select an Option">
                </ng-select>
                </div>
              </div>        
                <div class="col-12 col-lg-3 col-md-3 col-sm-12">
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-5"><span class="ms-1"><b>Salary Month</b></span>
                <select formControlName="month" style="width:70%;" class="form-select form-select-solid bg-white form-select-lg borderc-secondary custom-input select2">
                 <option value="">--Select an option--</option>
                 <option value="January">January</option>
                 <option value="February">February</option>
                 <option value="March">March</option>
                 <option value="April">April</option>
                 <option value="May">May</option>
                 <option value="June">June</option>
                 <option value="July">July</option>
                 <option value="August">August</option>
                 <option value="September">September</option>
                 <option value="October">October</option>
                 <option value="November">November</option>
                 <option value="December">December</option>
                </select>
              </div>                
            </div>
            <div class="col-12 col-lg-2 col-md-2 col-sm-12">
              <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-5"><span class="ms-1"><b style="margin-left:-50px;">Year</b></span>
                    <input formControlName="year" type="text" style="width:80%; margin-left:-50px;" class="form-control form-control-lg form-control-solid  borderc-secondary custom-input mb-3 mb-lg-0 bg-white custom-input"
                    placeholder="Enter Year"  name="year"/>
                  </div>                 
                </div>

                <div class="col-12 col-lg-1 col-md-1 col-sm-12">
                  <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row">
                  <button type="button" title="Search" class="btn-primary btn-sm text-white mt-12" style="margin-left:-65px;" (click)="GetpayrunSummary()">
                    <i class="fas fa-search me-2"></i>Search</button>
                    </div>
                </div>  
                      
                
                  </div>
        </form>
<br><br>
        <div class="col mt-7">
          <h3 class="card-title" style="font-size:15px;">Payrun Report</h3>
    
      </div>
      <button title="Export Excel" type="button" class=" btn-success btn-sm bg-export me-13" style="width: 3%;" (click)="exportExcel()">
        <i class="bi bi-file-earmark-arrow-up "></i>
      </button>

     <div class="scroll">
    <div class="table-responsive">
      <div class="mx-3 p-3 pt-0 p mt-4 bg-white rounded" >       
        <table id="payrun_list" class="table table-striped table-row-bordered gy-5 gs-7">
          <thead>
            <tr class="fw-bolder fs-5 text-nowrap bg-lightblue text-blue align-middle">              
              <th style="font-size:11px;">S.No</th>
              <th style="font-size:11px;">Branch</th>
              <th style="font-size:11px;">Department</th>            
              <th style="font-size:11px;">Employee Code</th>
              <th style="font-size:11px;">Employee Name</th>
              <th style="font-size:11px;">Leave Taken</th>
              <th style="font-size:11px;">LOP Days</th>
              <th style="font-size:11px;">Total Days</th>
              <th style="font-size:11px;">Working Days</th>
              <th style="font-size:11px;">Public Holidays</th>
              <th style="font-size:11px;">Basic Salary</th>
              <th style="font-size:11px;">Earned Basic Salary</th>
              <th style="font-size:11px;">Addtional Component</th>
              <th style="font-size:11px;">Gross Salary</th>
              <th style="font-size:11px;">Deduction Component</th>
              <th style="font-size:11px;">Other Component</th>
              <th style="font-size:11px;">Earned Gross Salary</th>
              <th style="font-size:11px;">Net Salary</th>
              <th style="font-size:11px;">Earned Net Salary</th>
              <th class="text-center" style="font-size:11px;">Action</th>            
            </tr>
          </thead>
          <tbody>
            <tr *ngFor="let data of payrun_list; let i=index;" class="align-middle">
              <td style="font-size:11px;">{{i+1}}</td>
              <td style="font-size:11px;">{{data.branch_name}}</td>
              <td style="font-size:11px;">{{data.department}}</td>            
              <td style="font-size:11px;">{{data.user_code}}</td>
              <td style="font-size:11px;">{{data.employee_name}}</td>
              <td style="font-size:11px;">{{data.leave_taken}}</td>
              <td style="font-size:11px;">{{data.lop}}</td>
              <td style="font-size:11px;">{{data.month_workingdays}}</td>
              <td style="font-size:11px;">{{data.actual_month_workingdays}}</td>
              <td style="font-size:11px;">{{data.public_holidays}}</td>
              <td style="font-size:11px;">{{data.basic_salary}}</td>
              <td style="font-size:11px;">{{data.earned_basic_salary}}</td>
              <td style="font-size:11px;">
                  <table class="table table-striped table-row-bordered gy-5 gs-7 ">
                    <thead>
                        <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-black">
                            <th>Additional Component Name</th>
                            <th>Additional Earned Amount</th>
                        </tr>
                    </thead>
                    <tbody> 
                      <tr *ngFor="let data of addtionOptions[i]; let i=index;"> 
                            <td >{{data.salarycomponent_name}}</td>
                            <td>{{data.earned_amount}}</td>                                          
                          </tr>
                    </tbody> 
                </table>
              </td>
              <td style="font-size:11px;">{{data.gross_salary}}</td>
              <td style="font-size:11px;">
                <table class="table table-striped table-row-bordered gy-5 gs-7 ">
                  <thead>
                      <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-black">
                          <th>Deduction Component Name</th>
                          <th>Deductional Earned Amount</th>

                      </tr>
                  </thead>
                  <tbody> 
                      <tr *ngFor="let data of deductionOptions[i]; let i=index;"> 
                          <td >{{data.salarycomponent_name}}</td>
                          <td>{{data.earned_amount}}</td>                                          
                       </tr>
                  </tbody> 
              </table>
            </td>
            <td style="font-size:11px;">
              <table class="table table-striped table-row-bordered gy-5 gs-7 ">
                <thead>
                    <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-black">
                        <th>Name</th>
                        <th>Earned Amount</th>
                    </tr>
                </thead>
                <tbody> 
                    <tr *ngFor="let data of payrunother_list[i]; let i=index;"> 
                      <td >{{data.salarycomponent_name}}</td>
                          <td>{{data.earned_amount}}</td>                                                 
                     </tr>
                </tbody> 
            </table>
          </td>
              <td style="font-size:11px;">{{data.earned_gross_salary}}</td>
              <td style="font-size:11px;">{{data.net_salary}}</td>
              <td style="font-size:11px;">{{data.earned_net_salary}}</td>
              <td class="text-center text-nowrap">
                <button title="Print" type="button" class="btn btn-icon btn-sm bg-warning me-2" (click)="PrintPDF(data.salary_gid,data.month,data.year)">
                  <span class="fa-solid fa-print fs-6" style="color: #ffffff;"></span>
              </button>                
              </td>
            </tr>

          </tbody>
        </table>
      
      </div>
    </div>
   </div>
  </div>