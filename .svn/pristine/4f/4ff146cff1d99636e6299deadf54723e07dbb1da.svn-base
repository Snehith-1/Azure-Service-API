<div class="card shadow-sm">
  <div class="row ms-3 mt-3 d-flex align-items-center">
    <div class="col mt-10">
        <h3 class="card-title" style="font-size:15px;">Payrun Report Summary</h3>
      </div>
      <div class="card shadow-sm mt-5">
        <div class="align">
            <div class="col-12 col-lg-4 col-md-6 col-sm-12">
              <div class="d-flex align-items-center">
                <span class="font-bold" style="margin-left: 10px;">Month :</span>
                <p class="mt-4" style=" margin-left: 15px;">{{this.month}}</p>
              </div>
            </div>
            <div class="col-12 col-lg-4 col-md-6 col-sm-12">
              <div class="d-flex align-items-center">
                <span class="font-bold" style="margin-left: 10px;">Year :</span>
                 <p class="mt-4" style=" margin-left: 15px;">{{this.year}}</p>
              </div>
            </div>
            <div class="col-12 col-lg-4 col-md-6 col-sm-12">
              <div class="d-flex align-items-center">
                <span class="font-bold" style="margin-left: 10px;">Working Days :</span>
                 <p class="mt-4" style=" margin-left: 15px;">{{this.working_days}}</p>
              </div>
            </div>
            
          </div>
    </div>
     
 
 
    <br><br> <br><br>
   <div class="scroll">
  <div class="table-responsive">

    <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded" >       
      <table id="payrun_list" class="table table-striped table-row-bordered gy-5 gs-7">
        <thead>
          <tr class="fw-bolder fs-5 text-nowrap bg-lightblue text-blue align-middle"> 
            <th>
              <input type="checkbox" id="checkAll" (change)="$event ? masterToggle() : null"
                  [checked]="selection.hasValue() && isAllSelected()"
                  [indeterminate]="selection.hasValue() && !isAllSelected()" />
              Check All
          </th>            
            <th>S.No</th>
            <th>Branch Name</th>
            <th>Department</th>            
            <th>Employee Code</th>
            <th>Employee Name</th>
            <th>Leave Taken</th>
            <th>LOP Days</th>
            <th>Total Days</th>
            <th>Working Days</th>
            <th>Public Holidays</th>
            <th>Basic Salary</th>
            <th>Earned Basic Salary</th>
            <th>Addtional Component</th>
            <th>Gross Salary</th>
            <th>Deduction Component</th>
            <th>Other Component</th>
            <th>Earned Gross Salary</th>
            <th>Net Salary</th>
            <th>Earned Net Salary</th>
            <!-- <th class="text-center" >Action</th>             -->
          </tr>
        </thead>
        <tbody>
          <tr *ngFor="let data of payrun_list; let i=index;" class="align-middle">
            <td> <input type="checkbox" (click)="$event.stopPropagation()"
              (change)="$event ? selection.toggle(data) : null"
              [checked]="selection.isSelected(data)" /></td>
            <td>{{i+1}}</td>
            <td>{{data.branch_name}}</td>
            <td>{{data.department}}</td>            
            <td>{{data.user_code}}</td>
            <td>{{data.employee_name}}</td>
            <td>{{data.leave_taken}}</td>
            <td>{{data.lop}}</td>
            <td>{{data.month_workingdays}}</td>
            <td>{{data.actual_month_workingdays}}</td>
            <td>{{data.public_holidays}}</td>
            <td>{{data.basic_salary}}</td>
            <td>{{data.earned_basic_salary}}</td>
            <td>
                <table class="table table-striped table-row-bordered gy-5 gs-7 ">
                  <thead>
                      <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-black">
                          <th>Name</th>
                          <th>Earned Amount</th>
                      </tr>
                  </thead>
                  <tbody> 
                    <tr *ngFor="let data of addtionOptions[i]; let i=index;"> 
                          <td>{{data.salarycomponent_name}}</td>
                          <td>{{data.earned_amount}}</td>                                          
                        </tr>
                  </tbody> 
              </table>
            </td>
            <td>{{data.gross_salary}}</td>
            <td>
              <table class="table table-striped table-row-bordered gy-5 gs-7 ">
                <thead>
                    <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-black">
                        <th>Name</th>
                        <th>Earned Amount</th>

                    </tr>
                </thead>
                <tbody> 
                    <tr *ngFor="let data of deductionOptions[i]; let i=index;"> 
                        <td>{{data.salarycomponent_name}}</td>
                        <td>{{data.earned_amount}}</td>                                          
                     </tr>
                </tbody> 
            </table>
          </td>
          <td>
            <table class="table table-striped table-row-bordered gy-5 gs-7 ">
              <thead>
                  <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-black">
                      <th>Name</th>
                      <th>Earned Amount</th>
                  </tr>
              </thead>
              <tbody> 
                  <tr *ngFor="let data of payrunother_list[i]; let i=index;"> 
                    <td>{{data.salarycomponent_name}}</td>
                        <td>{{data.earned_amount}}</td>                                                 
                   </tr>
              </tbody> 
          </table>
        </td>
            <td>{{data.earned_gross_salary}}</td>
            <td>{{data.net_salary}}</td>
            <td>{{data.earned_net_salary}}</td>
            <!-- <td class="text-center text-nowrap">
              <button title="Edit" type="button" class="btn btn-icon btn-sm bg-success me-2" 
             ><span class="fa-solid fa-pencil text-white  fs-6"></span></button>
                                           
            </td> -->
          </tr>

        </tbody>
      </table>
    
    </div>
    <div class="text-center my-4">
     
      <button style="margin-left: 10px;"  class="btn-primary btn-sm text-white me-4" routerLink="/payroll/PayTrnSalaryManagement">
        <i class="fas fa-arrow-left"></i> &nbsp; Back
      </button>
    </div>
  </div>
</div>
</div>