.card-header {
    background-image: linear-gradient(to right, #2429e0, #39ffff, #2429e0);
    border-radius: 0px;
}

.back-icon {
    text-align: right;
    margin: 10px 35px 0 0;

    i {
        font-size: 30px;
        color: #2c1a94;
        cursor: pointer;
    }
}

.table-responsive {
    width: 60%;
    align-self: center;
    th, td {
        font-size: 13px;
    }
    

}

.officecalendarpopup {

    .modal-header {
        background-color: #009ef7;
        height: 50px;

        .modal-title {
            color: #ffffff;
        }

        i {
            cursor: pointer;
            color: #ffffff;
        }
    }

    .officecalendarpopupbody {
        font-size: 12px;
    }

    .contain {
        margin: 0 0 15px 0;
    }
}