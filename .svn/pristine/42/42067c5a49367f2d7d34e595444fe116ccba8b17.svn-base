<form [formGroup]="reactiveFormadd" #form="ngForm">
    <div class=" card rounded-top">
        <div class="card-title p-5 pb-6 pt-6 rounded-top bg-primary">
            <h3 class="fw-bolder text-white"><i class="fas fa-plus fw-bolder fs-3 me-4"></i>Shift Type Add </h3>  
        </div>

        <div class="d-flex flex-row m-6 flex-wrap" style="width: 80%;">
            <div class="col-12 col-lg-3 col-md-3 col-sm-12">
                <b>Shift Name<span style="color:red">*</span></b>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="text"
                        class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 border-secondary bg-white custom-input"
                        placeholder="Enter Shift Name" formControlName="shift_name" class="form-control" required />
                </div>
            </div>

            <div class="col-12 col-lg-3 col-md-3 col-sm-12" style="margin-left: 50px;">
                <b>E-mail List</b>
                <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                    <input type="text"
                        class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 border-secondary bg-white custom-input"
                        placeholder="Enter Email ID" formControlName="email_list" />
                </div>
            </div>

            <div class="col-12 col-lg-3 col-md-3 col-sm-12" style="margin-left: 50px;">
                <b>Grace Time<span style="color:red">*</span></b>

                <div class="col-lg-3 col-5 col-md-9 col-sm-9 fv-row mt-2">
                    <input type="text"
                        class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 border-secondary bg-white custom-input"
                        formControlName="grace_time" />
                </div>                
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded">
            <table id="" class="table border-bottom gs-7">
                <thead>
                    <tr class="fw-bolder fs-5 text-nowrap bg-lightblue text-blue align-middle">
                        <th rowspan="2">Week Days</th>
                        <th rowspan="2">Login Time</th>
                        <th rowspan="2">Logout Time</th>
                        <th rowspan="2">OT Cutoff</th>
                    </tr>
                </thead>
                <tbody>
                    <tr *ngFor="let data of weekdays_list; let i=index;" class="align-middle">

                        <td>{{data.weekday}}</td>
                        <td>
                            <input type="time"  [(ngModel)]="data.logintime"
                                class="form-control form-control-lg form-control-solid custom-input mb-5 mb-lg-0 border-secondary bg-white custom-input"
                                formControlName="logintime" style="width: 100px;" />
                        </td>
                        <td>
                            <input type="time"  [(ngModel)]="data.logouttime"
                                class="form-control form-control-lg form-control-solid custom-input mb-5 mb-lg-0 border-secondary bg-white custom-input"
                                formControlName="logouttime" style="width: 100px;" />
                        </td>
                        <td>
                            <input type="time"  [(ngModel)]="data.Ot_cutoff"
                                class="form-control form-control-lg form-control-solid custom-input mb-3 mb-lg-0 border-secondary bg-white custom-input"
                                formControlName="Ot_cutoff" style="width: 100px;" />
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>



    <div class="d-flex flex-row m-3 mt-5 flex-wrap ">
        <div class="col-12 col-lg-6 col-md-6 col-sm-12">
            <div class="card me-lg-3 me-0 ">
                <div class="card-header bg-lightblue card-height55">
                    <div class="card-title m-0 ">
                        <h5 class="fw-bolder text-blue">Login</h5>
                    </div>
                </div>
                <div class="d-flex flex-row m-6 flex-wrap">
                    <div class="col-12 col-lg-2 col-md-2 col-sm-12"><b>Login Scheduler</b>
                        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                            <input type="time"
                                class="form-control form-control-lg form-control-solid bg-white custom-input  borderc-secondary"
                                formControlName="login_scheduler" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-2 col-md-2 col-sm-12"><b>Entry CutOff Time</b>
                        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                            <input type="time"
                                class="form-control form-control-lg form-control-solid bg-white custom-input  borderc-secondary"
                                formControlName="entrycutoff_time" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-2 col-md-2 col-sm-12"><b>Overnight Flag</b>
                        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                            <div class="d-flex justify-content-start mt-7">
                                <div
                                    class="form-check form-check-custom form-check-primary form-check-solid form-check-sm">
                                    <input type="radio" name="overnight_flag" checked="checked" value="Y"
                                        formControlName="overnight_flag">
                                    <label class="form-check-label text-gray-700 text-nowrap"
                                        for="empAccessYes">Yes</label>
                                </div>
                                <div
                                    class="form-check form-check-custom form-check-primary form-check-solid form-check-sm ms-6">
                                    <input type="radio" name="overnight_flag" checked="checked" value="N"
                                        formControlName="overnight_flag">
                                    <label class="form-check-label text-gray-700 text-nowrap"
                                        for="empAccessNo">No</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>In Overnight Flag</b>
                        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                            <div class="d-flex justify-content-start mt-7">
                                <div
                                    class="form-check form-check-custom form-check-primary form-check-solid form-check-sm">
                                    <input type="radio" name="inovernight_flag" checked="checked" value="Y"
                                        formControlName="inovernight_flag">
                                    <label class="form-check-label text-gray-700 text-nowrap"
                                        for="empAccessYes">Yes</label>
                                </div>
                                <div
                                    class="form-check form-check-custom form-check-primary form-check-solid form-check-sm ms-6">
                                    <input type="radio" name="inovernight_flag" checked="checked" value="N"
                                        formControlName="inovernight_flag">
                                    <label class="form-check-label text-gray-700 text-nowrap"
                                        for="empAccessNo">No</label>
                                </div>
                                <div
                                    class="form-check form-check-custom form-check-primary form-check-solid form-check-sm ms-6">
                                    <input type="radio" name="inovernight_flag" checked="checked" value="M"
                                        formControlName="inovernight_flag">
                                    <label class="form-check-label text-gray-700 text-nowrap"
                                        for="empAccessNo">M</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Out Overnight Flag</b>
                        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                            <div class="d-flex justify-content-start mt-7">
                                <div
                                    class="form-check form-check-custom form-check-primary form-check-solid form-check-sm">
                                    <input type="radio" name="outovernight_flag" checked="checked" value="Y"
                                        formControlName="outovernight_flag">
                                    <label class="form-check-label text-gray-700 text-nowrap"
                                        for="empAccessYes">Yes</label>
                                </div>
                                <div
                                    class="form-check form-check-custom form-check-primary form-check-solid form-check-sm ms-6">
                                    <input type="radio" name="outovernight_flag" checked="checked" value="N"
                                        formControlName="outovernight_flag">
                                    <label class="form-check-label text-gray-700 text-nowrap"
                                        for="empAccessNo">No</label>
                                </div>
                                <div
                                    class="form-check form-check-custom form-check-primary form-check-solid form-check-sm ms-6">
                                    <input type="radio" name="outovernight_flag" checked="checked" value="M"
                                        formControlName="outovernight_flag">
                                    <label class="form-check-label text-gray-700 text-nowrap"
                                        for="empAccessNo">M</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-6 col-md-6 col-sm-12">
            <div class="card me-lg-3 me-0 ">
                <div class="card-header bg-lightblue card-height55">
                    <div class="card-title m-0 ">
                        <h5 class="fw-bolder text-blue">Logout</h5>
                    </div>
                </div>

                <div class="d-flex flex-row m-6 flex-wrap">
                    <div class="col-12 col-lg-2 col-md-2 col-sm-12"><b>Logout Scheduler</b>
                        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                            <input type="time" min="08:00" max="18:00" step="900"
                                class="form-control form-control-lg form-control-solid bg-white custom-input  borderc-secondary"
                                formControlName="logout_schedular" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-2 col-md-2 col-sm-12"><b>Exit CutOff Time</b>
                        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                            <input type="time"
                                class="form-control form-control-lg form-control-solid bg-white custom-input  borderc-secondary"
                                formControlName="existcutoff_time" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-2 col-md-2 col-sm-12"><b>Overnight Flag</b>
                        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                            <div class="d-flex justify-content-start mt-7">
                                <div
                                    class="form-check form-check-custom form-check-primary form-check-solid form-check-sm">
                                    <input type="radio" name="logout_overnight_flag" checked="checked" value="Y"
                                        formControlName="logout_overnight_flag">
                                    <label class="form-check-label text-gray-700 text-nowrap"
                                        for="empAccessYes">Yes</label>
                                </div>
                                <div
                                    class="form-check form-check-custom form-check-primary form-check-solid form-check-sm ms-6">
                                    <input type="radio" name="logout_overnight_flag" checked="checked" value="N"
                                        formControlName="logout_overnight_flag">
                                    <label class="form-check-label text-gray-700 text-nowrap"
                                        for="empAccessNo">No</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>In Overnight Flag</b>
                        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                            <div class="d-flex justify-content-start mt-7">
                                <div
                                    class="form-check form-check-custom form-check-primary form-check-solid form-check-sm">
                                    <input type="radio" name="logout_inovernight_flag" checked="checked" value="Y"
                                        formControlName="logout_inovernight_flag">
                                    <label class="form-check-label text-gray-700 text-nowrap"
                                        for="empAccessYes">Yes</label>
                                </div>
                                <div
                                    class="form-check form-check-custom form-check-primary form-check-solid form-check-sm ms-6">
                                    <input type="radio" name="logout_inovernight_flag" checked="checked" value="N"
                                        formControlName="logout_inovernight_flag">
                                    <label class="form-check-label text-gray-700 text-nowrap"
                                        for="empAccessNo">No</label>
                                </div>
                                <div
                                    class="form-check form-check-custom form-check-primary form-check-solid form-check-sm ms-6">
                                    <input type="radio" name="logout_inovernight_flag" checked="checked" value="M"
                                        formControlName="logout_inovernight_flag">
                                    <label class="form-check-label text-gray-700 text-nowrap"
                                        for="empAccessNo">M</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 col-md-3 col-sm-12"><b>Out Overnight Flag</b>
                        <div class="col-lg-11 col-12 col-md-11 col-sm-11 fv-row mt-2">
                            <div class="d-flex justify-content-start mt-7">
                                <div
                                    class="form-check form-check-custom form-check-primary form-check-solid form-check-sm">
                                    <input type="radio" name="logout_outovernight_flag" checked="checked" value="Y"
                                        formControlName="logout_outovernight_flag">
                                    <label class="form-check-label text-gray-700 text-nowrap"
                                        for="empAccessYes">Yes</label>
                                </div>
                                <div
                                    class="form-check form-check-custom form-check-primary form-check-solid form-check-sm ms-6">
                                    <input type="radio" name="logout_outovernight_flag" checked="checked" value="N"
                                        formControlName="logout_outovernight_flag">
                                    <label class="form-check-label text-gray-700 text-nowrap"
                                        for="empAccessNo">No</label>
                                </div>
                                <div
                                    class="form-check form-check-custom form-check-primary form-check-solid form-check-sm ms-6">
                                    <input type="radio" name="logout_outovernight_flag" checked="checked" value="M"
                                        formControlName="logout_outovernight_flag">
                                    <label class="form-check-label text-gray-700 text-nowrap"
                                        for="empAccessNo">M</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center mb-10">
        <button type="submit" class="btn-success text-white" (click)="submit()" data-bs-dismiss="modal">
            <i class="fas fa-check text-white fs-5"></i>
            Submit
        </button> &nbsp; &nbsp;
        <button type="button" class="btn-danger text-white" data-bs-dismiss="modal" routerLink="/hrm/HrmMstShiftTypeSummary">
            <i class="fa fa-close fs-5 text-center"></i>
            Close
        </button>
    </div>
</form>