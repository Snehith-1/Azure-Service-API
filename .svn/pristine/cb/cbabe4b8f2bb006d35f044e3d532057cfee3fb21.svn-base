<div class="card">

    <div class="row ms-3 mt-3 d-flex align-items-center">
        <div class="col">
            <h3 class="card-title">Invoice Summary</h3>
        </div>

        <div class="col me-5">
            <button title="Receive Invoice" class="btn-primary btn-sm text-white me-4 mb-2 mt-2 float-end"
                routerLink="/payable/PmrTrnInvoiceAddselect">Receive Invoice</button>
            <button title="Direct Invoice" class="btn-primary btn-sm text-white me-4 mb-2 mt-2 float-end"
                routerLink="/payable/PmrTrnDirectInvoice">Direct Invoice</button>
        </div>
    </div>

    <div class="table-responsive">
        <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded">

            <table id="invoice_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
                <thead>
                    <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                        <th>S.No</th>
                        <th>Invoice Date</th>
                        <th>Due Date</th>
                        <th>Invoice Ref No</th>
                        <th>Vendor Ref No.</th>
                        <th>Vendor</th>
                        <th>Cost Center</th>
                        <th>Invoice Amount</th>
                        <th>Invoice Type</th>
                        <th>Status</th>
                        <th>Overall Status</th>
                        <!-- <th>Details</th> -->
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr *ngFor="let data of invoice_list; let i=index;">
                        <td>{{i+1}}</td>
                        <td>{{data.invoice_date | date: 'dd-MM-yyyy'}}</td>
                        <td>{{data.payment_date | date: 'dd-MM-yyyy'}}</td>
                        <td>{{data.invoice_refno}}</td>
                        <td>{{data.vendorinvoiceref_no}}</td>
                        <td>{{data.vendor_companyname}}</td>
                        <td>{{data.costcenter_name}}</td>
                        <td>{{data.invoice_amount}}</td>
                        <td>{{data.invoice_type}}</td>
                        <td>{{data.invoice_status}}</td>
                        <td>{{data.overall_status}}</td>


                        <td class="text-center text-nowrap">
                            <button title="View" type="button" class="btn btn-icon btn-sm bg-primary me-2"
                                (click)="onview(data.invoice_gid)"><span
                                    class="fa-solid fa-eye text-white  fs-6"></span></button>
                            <button title="Delete" type="button" (click)="openModaldelete(data.entity_gid)"
                                data-bs-toggle="modal" data-bs-target="#myModaldelete"
                                class="btn btn-icon btn-sm bg-danger me-2"><span
                                    class="fa-solid fa-trash text-white  fs-6"></span></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>