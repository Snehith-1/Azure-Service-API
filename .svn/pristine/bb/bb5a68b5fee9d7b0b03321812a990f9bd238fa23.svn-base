#kt_chat_contacts_body1 {
    max-height: 500px;
    overflow-y: auto;
    overflow-x: hidden;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}
#kt_chat_contacts_body1::-webkit-scrollbar {
    width: 8px;
    /* You can adjust the width to your preference */
  }
   
  #kt_chat_contacts_body1::-webkit-scrollbar-thumb {
    background: #888;
    /* You can set the color of the scrollbar thumb */
    border-radius: 10px;
    /* You can adjust the border radius to your preference */
    height: 5px;
  }