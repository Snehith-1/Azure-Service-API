<div class="card">

    <div class="row ms-3 mt-3 d-flex align-items-center">
        <div class="col">
            <h3 class="card-title">Salary Component</h3>
        </div>

        <div class="col me-5">
            <button title="Add Salary Component" class="btn-primary btn-sm text-white me-4 mb-2 mt-2 float-end"
                (click)="addsalary()">
                <i class="fas fa-plus"></i> &nbsp;&nbsp;Add Salary Component</button>
        </div>
    </div>
    <br>
    <div class="table-responsive">
        <div class="card card-body table-responsive m-3 shadow-lg p-3 mb-5 bg-white rounded">
            <table id="salarycompoent_list" class="table table-striped table-row-bordered gy-5 gs-7">
                <thead>
                    <tr class="fw-bold fs-8 text-nowrap bg-lightblue text-blue align-middle ">
                            
                        <th>S.No </th>
                        <th>Component Group </th>
                        <th>Component Code</th>
                        <th>Component Name</th>
                        <th>Employee Contribution</th>
                        <th>Employer Contribution</th>
                        <th>Contribution Type</th>
                        <th>Component Type</th>
                        <th>Affecting In</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr *ngFor="let data of salarycompoent_list; let i=index;" class="fs-8 align-middle">
                        <td>{{i+1}}</td>
                        <td>{{ data.componentgroup_name }}</td>
                        <td>{{ data.component_code }}</td>
                        <td>{{ data.component_name}}</td>
                        <td>{{ data.component }}</td>
                        <td>{{ data.employer_component }}</td>
                        <td>{{ data.contribution_type }}</td>
                        <td>{{ data.component_type }}</td>
                        <td>{{ data.affecting_in }}</td>
                        <td class="text-center text-nowrap">

                            <button title="Edit" type="button" (click)="openedit(data.salarycomponent_gid)"
                                class="btn btn-icon btn-sm bg-success me-2">
                                <span class="fa-solid fa-pencil text-white  fs-6" style="color: #ffffff;"></span>
                            </button>
                            <button title="Delete" type="button" data-bs-toggle="modal" data-bs-target="#myModaldelete" (click)="openModaldelete(data.salarycomponent_gid)" class="btn btn-icon btn-sm bg-danger me-2">
                            <span  class="fa fa-trash fs-6" style="color: #ffffff;"></span>
                          </button> 

                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>

<!-- The Modal Delete -->
<div class="modal" id="myModaldelete" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog del_modal-dialog">
      <div class="modal-content del_modal-content">
        <div class="text-center my-4">
          <h2><b>Are you sure?</b></h2>
          <p style="display: block;">Do You Want To Delete the Record ?</p>
          <div class="text-center my-4">
            <button class="btn-danger btn-sm text-white me-4" (click)="ondelete()" data-bs-dismiss="modal">
              <i class="bi bi-trash-fill text-white fs-5 me-2"></i>Delete
            </button>
            <button class="btn-primary btn-sm text-white me-2" data-bs-dismiss="modal">
              <i class="fas fa-close text-white me-2"></i>Close
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>