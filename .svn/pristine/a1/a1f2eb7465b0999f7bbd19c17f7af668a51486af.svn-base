  <div class="row ms-3 mt-3 d-flex align-items-center">
    <div class="col">
      <h3 class="card-title">Tax Summary</h3>
    </div>

    <div class="col me-5">
      <button type="button" class="btn-primary btn-sm text-white me-4 float-end" data-bs-toggle="modal"
        data-bs-target="#myModaladd"><i class="fas fa-plus"></i>
         Add Tax
      </button>
    </div>
  </div>
  <div class="table-responsive">
    <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded" >
      <table id="pmrtax_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
        <thead>
          <tr class="fw-bold fs-7 text-nowrap bg-lightblue text-blue align-middle">
            <th>S.NO </th>
            <th>Tax Code </th>
            <th>Tax Name</th>
            <th>Percentage</th>
            <th>Created By </th>
            <th>Created Date </th>
            <th class="text-center">Action</th>
          </tr>
        </thead>
        <tbody>
          <tr *ngFor="let data of pmrtax_list; let i=index;">
            <td>{{i+1}}</td>
            <td>{{data.tax_gid}}</td>
            <td>{{data.tax_name}}</td>
            <td>{{data.percentage}}</td>
            <td>{{data.created_by}}</td>
            <td>{{data.created_date}}</td>

            <td class="text-center text-nowrap">

              <button title="Edit" type="button" class="btn btn-icon btn-sm  me-2" style="background-color:#009688;"
                (click)="openModaledit(data)" data-bs-toggle="modal" data-bs-target="#myModaledit"><span
                  class="fa-solid fa-pencil text-white  fs-6"></span></button>
              <button title="Delete" type="button" (click)="openModaldelete(data.tax_gid)" data-bs-toggle="modal"
                data-bs-target="#myModaldelete" class="btn btn-icon btn-sm bg-danger me-2"><span
                  class="fa-solid fa-trash text-white  fs-6"></span></button>

            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- The Modal ADD -->

<form [formGroup]="reactiveForm" #form="ngForm">
  <div class="modal" id="myModaladd" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
      <div class="modal-content">

        <!-- Modal Header -->

        <div class="card-header p-1 pb-1 pt-1 rounded-top bg-primary">
          <h3 style="margin-top:10px;color:white;font-weight: bold;">&nbsp;&nbsp;<i class="fas fa-plus"></i>&nbsp;&nbsp; Add Tax
            Details</h3>


        </div>
        <!-- Modal body -->
        <div class="modal-body">

          <div class="row"><span class="font-bold"><b>Tax</b><span class="ms-1 text-red">*</span></span>
            <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2 d-flex ">


              <input formControlName="tax_name" type="text" class="
                         form-control form-control-lg form-control-solid
                         custom-input
                         mb-3 mb-lg-0
                         bg-white
                         custom-input
                       " [ngStyle]="{
                         'border-color':
                         tax_name.invalid && tax_name.touched
                             ? 'red'
                             : 'rgb(209, 209, 209)'
                       }" placeholder="Enter Tax Name" pattern="^[a-zA-Z]+$" name="tax_name" style="height:40px;"
                required />
            </div>

          </div>
          <div *ngIf="tax_name.invalid && (tax_name.dirty || tax_name.touched)">
            <div *ngIf="tax_name.errors?.['required']">
              <span style="color:red;">Tax Name is required.</span>
            </div>
            <div *ngIf="tax_name.errors?.['required']">
              <span style="color: red;"> Only alphabetic characters are allowed.</span>
            </div>
          </div>
          <br>

          <div class="row"><span class="font-bold"><b>Percentage</b><span class="ms-1 text-red">*</span></span>
            <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2 d-flex ">


              <input formControlName="percentage" type="text" class="
                         form-control form-control-lg form-control-solid
                         custom-input
                         mb-3 mb-lg-0
                         bg-white
                         custom-input
                       " [ngStyle]="{
                         'border-color':
                         percentage.invalid && percentage.touched
                             ? 'red'
                             : 'rgb(209, 209, 209)'
                       }" placeholder="Enter Tax Percentage" style="height:40px;" pattern="^[0-9]+$" name="tax_percentage" required />
            </div>

          </div>
          <div *ngIf="percentage.invalid && (percentage.dirty || percentage.touched)">
            <div *ngIf="percentage.errors?.['required']">
              <span style="color:red;">Tax Percentage is required.</span>
            </div>
            <div *ngIf="percentage.errors?.['required']">
              <span style="color: red;"> Only Number are allowed.</span>
            </div>
          </div>

          <br>

        </div>

        <!-- Modal footer -->
        <div class="text-center my-4">
          <button class="btn-success btn-sm text-white me-4" (click)="onsubmit()" [disabled]="reactiveForm.invalid"
            [ngClass]="{
                    'primary-button': !reactiveForm.invalid,
                    'secondary-button': reactiveForm.invalid
                  }" data-bs-dismiss="modal">
            <i class="fas fa-check text-white fs-5 "></i> &nbsp;Submit
          </button> &nbsp;&nbsp;
          <button class="btn-danger btn-sm text-white me-4" (click)="onclose()" data-bs-dismiss="modal">
            <i class="fas fa-close text-white"></i> &nbsp;Close
          </button>
        </div>
      </div>
    </div>
  </div>
</form>

<!-- The Modal Edit -->
<form [formGroup]="reactiveFormEdit" #form="ngForm">
  <div class="modal" id="myModaledit" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
      <div class="modal-content">

        <!-- Modal Header -->

        <div class="card-header p-1 pb-2 pt-1 rounded-top bg-primary">
          <h2 style="margin-top:10px;color:white;font-weight: bold;">
            &nbsp;&nbsp;<i class="fa-solid fa-pen-to-square fs-2"></i>&nbsp;&nbsp;&nbsp;Edit Tax Details</h2>

        </div>

        <!-- Modal body -->
        <div class="modal-body">
          <input class="form-control form-control-lg" formControlName="tax_gid" hidden pattern="^(?!\s*$).+" type="text"
            placeholder="Enter Tax" aria-label=".form-control-lg example" autocomplete="off" required>

          <div class="row"><span class="font-bold"><b>Tax</b><span class="ms-1 text-red">*</span></span>
            <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2 d-flex ">


              <input formControlName="taxedit_name" type="text" class="
                      form-control form-control-lg form-control-solid
                      custom-input
                      mb-3 mb-lg-0
                      bg-white
                      custom-input
                    " [ngStyle]="{
                      'border-color':
                      taxedit_name.invalid && taxedit_name.touched
                          ? 'red'
                          : 'rgb(209, 209, 209)'
                    }" placeholder="Enter Tax Name" style="height:40px;" pattern="^[a-zA-Z]+$" name="taxedit_name" required />

            </div>

          </div>
          <div *ngIf="taxedit_name.invalid && (taxedit_name.dirty || taxedit_name.touched)">
            <div *ngIf="taxedit_name.errors?.['required']">
              <span style="color:red;">Tax is required.</span>
            </div>
            <div *ngIf="taxedit_name.errors?.['required']">
              <span style="color: red;"> Only alphabetic characters are allowed.</span>
            </div>
          </div>
          <br>
          <div class="row"><span class="font-bold"><b>Percentage</b><span class="ms-1 text-red">*</span></span>
            <div class="col-lg-12 col-md-12 col-sm-12 fv-row mt-2 d-flex ">


              <input formControlName="editpercentage" type="text" class="
                    form-control form-control-lg form-control-solid
                    custom-input
                    mb-3 mb-lg-0
                    bg-white
                    custom-input
                  " [ngStyle]="{
                    'border-color':
                    editpercentage.invalid && editpercentage.touched
                        ? 'red'
                        : 'rgb(209, 209, 209)'
                  }" placeholder="Enter Tax Percentage" style="height:40px;" pattern="^[0-9]+$" name="editpercentage" required />

            </div>

          </div>
          <div *ngIf="editpercentage.invalid && (editpercentage.dirty || editpercentage.touched)">
            <div *ngIf="editpercentage.errors?.['required']">
              <span style="color:red;">Tax Percentage is required.</span>
            </div>
            <div *ngIf="editpercentage.errors?.['required']">
              <span style="color: red;"> Only Number are allowed.</span>
            </div>
          </div>
          <br>
        
          <!-- Modal footer -->
          <div class="text-center my-4">
            <button (click)="onupdate()" [disabled]="reactiveFormEdit.invalid" [ngClass]="{
                  'primary-button': !reactiveFormEdit.invalid,
                  'secondary-button': reactiveFormEdit.invalid
                }" data-bs-dismiss="modal">
              <i class="fas fa-check text-white fs-5 "></i> &nbsp;Update
            </button> &nbsp;&nbsp;
            <button class="btn-danger btn-sm text-white me-4" (click)="onclose()" data-bs-dismiss="modal">
              <i class="fas fa-close text-white"></i> &nbsp;Close
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
<!-- The Modal Delete -->
<div class="modal" id="myModaldelete" data-bs-backdrop="static" data-bs-keyboard="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="text-center my-4">
        <h2><b>Are you sure?</b></h2>
        <br>
        <p style="display: block;">Do You Want To Delete the Record ?</p>
        <div class="text-center my-4">
          <button class="btn-primary btn-sm text-white me-2" data-bs-dismiss="modal">
            <i class="fas fa-close text-white"></i> &nbsp;Close
          </button>&nbsp;
          <button class="btn-danger btn-sm text-white me-4" (click)="ondelete()" data-bs-dismiss="modal">
            <i class="fas fa-trash text-white fs-5 "></i> &nbsp;Delete
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

