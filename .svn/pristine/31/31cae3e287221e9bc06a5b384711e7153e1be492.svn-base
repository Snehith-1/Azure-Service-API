<div class="card">
    <div class="row ms-3 mt-3 d-flex align-items-center">
        <div class="col">
          <h3 class="card-title">Select Purchase Order</h3>
        </div>  
    
<div class="table-responsive">
        <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded">
            <table id="grn_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
                <thead>
                    <tr class="fw-bold fs-5 text-nowrap bg-lightblue text-blue align-middle">
                        <th>S.No</th>
                        <th>PO Date</th>
                        <th>PO Ref. No.</th>
                        <th>Po Status</th>
                        <th>Vendor</th>
                        <th>Cost Center</th>
                        <th>Department</th>
                        <th>Created By</th>
                        <th>Branch</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody> 
                    <tr *ngFor="let data of grn_list; let i=index;"> 
                        <td >{{i+1}}</td>
                        <td>{{data.purchaseorder_date| date:'dd-MM-yyyy'}}</td>
                        <td>{{data.purchaseorder_gid}}</td>
                        <td>{{data.purchaseorder_status}}</td>
                        <td>{{data.vendor_companyname}}</td>
                        <td>{{data.costcenter_name}}</td>
                        <td>{{data.department_name}}</td> 
                        <td>{{data.created_by}}</td> 
                        <td>{{data.branch_name}}</td>         
                        <td class="text-center text-nowrap">
                            <button title="Select"  type="button" class=" btn-info btn-lg bg-success me-2" (click)="Onclickgrn(data.purchaseorder_gid)" >Select </button>
                        </td>                        
                    </tr>
                </tbody> 
            </table>
        </div> 
    </div> 
</div>
