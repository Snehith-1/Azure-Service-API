<div class="card">
  <div class="row ms-3 mt-3 d-flex align-items-center">
    <div class="col">
        <h3 class="card-title">CUSTOMER</h3>
    </div>

    <div class="col me-3 ">
      <button title="Import Excel" class="btn btn-icon btn-sm bg-success me-2 float-end "  routerLink="/smr/SmrTrnCustomerImportExcel"><span class="fas fa-file-excel text-white  fs-2"></span>  
      </button>
      <button title="Add Vendor" class="btn-primary btn-sm text-white me-2 float-end" routerLink="/smr/SmrTrnCustomeradd">
        Add Customer</button>  
    </div>
</div>

  <br>
    <div class="row">         
        <div class="col-lg-3 col-md-3 col-sm-3" routerLink="/smr/SmrTrnCustomerRetailer">
            <div class="cardHead radius-10 border-start border-0 border-3 border-violet" >
               <div class="card-body12">
                   <div class="d-flex align-items-center">
                       <div>
                        <h5 class="mb-0 text-secondary">Retailer</h5>
                        <div *ngFor="let ReatailerCount_List of customercount_list">
                          <h4 class="my-1 text-info">{{ReatailerCount_List.retailer_counts}}</h4>
                          </div>
                       </div>
                       <div class="widgets-icons-2 rounded-circle bg-gradient-violet text-white ms-auto"><i class="fa-solid fa-street-view"></i>
                       </div>
                   </div>
               </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-3" routerLink="/smr/SmrTrnCustomerCorporate">
            <div class="cardHead radius-10 border-start border-0 border-3 border-darkblue" >
               <div class="card-body12">
                   <div class="d-flex align-items-center">
                       <div>
                        <h5 class="mb-0 text-secondary">Corporate</h5>
                        <div *ngFor="let Corporatecount_list of customercount_list">
                          <h4 class="my-1 text-info">{{Corporatecount_list.corporate_count}}</h4>
                          </div>
                       </div>
                       <div class="widgets-icons-2 rounded-circle bg-gradient-darkblue text-white ms-auto"><i class="fa-solid fa-users-between-lines"></i>
                       </div>
                   </div>
               </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-3" routerLink="/smr/SmrTrnCustomerDistributor">
            <div class="cardHead radius-10 border-start border-0 border-3 border-darkgreen" style="background-color: rgb(203, 250, 192);">
               <div class="card-body12">
                   <div class="d-flex align-items-center">
                       <div>
                        <h5 class="mb-0 text-secondary">Distributor</h5>
                        <div *ngFor="let Distributorcount_list of customercount_list">
                          <h4 class="my-1 text-info">{{Distributorcount_list.distributor_count}}</h4>
                      </div>
                       </div>
                       <div class="widgets-icons-2 rounded-circle bg-gradient-darkgreens text-white ms-auto"><i class="fa-solid fa-users-rectangle"></i>
                       </div>
                   </div>
               </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-3" routerLink="/smr/SmrTrnCustomerSummary">
            <div class="cardHead radius-10 border-start border-0 border-3 border-brown"  >
               <div class="card-body12">
                   <div class="d-flex align-items-center">
                       <div>
                        <h5 class="mb-0 text-secondary">Total Customer</h5>
                        <div *ngFor="let TotalCustomercount_list of customercount_list">
                          <h4 class="my-1 text-info">{{TotalCustomercount_list.total_count}}</h4>
                      </div>
                       </div>
                       <div class="widgets-icons-2 rounded-circle bg-gradient-brown  text-white ms-auto"><i class="fa-solid fa-users"></i>
                       </div>
                   </div>
               </div>
            </div>
          </div>
    <div class="table-responsive">
      <div class="mx-3 p-3 pt-0 pb-0 bg-white rounded" >
        <table id="smrcustomer_list" class="table table-striped table-row-bordered gy-5 gs-7 ">
          <thead>
            <tr class="fw-bold fs-7 text-nowrap bg-lightblue text-blue align-middle">
              <th>S.NO </th>
              <th>Customer Code</th>
              <th>Customer </th>
              <th>Contact Details</th>
              <!-- <th>Branch Details </th>
              <th>Contact Person</th> -->
              <th>Region</th>
              <th class="text-center">Action</th>
            </tr>
          </thead>
          <tbody>
            <tr *ngFor="let data of smrcustomer_list; let i=index;">
              <td>{{i+1}}</td>
              <td>{{data.customer_id}}</td>
              <td>{{data.customer_name}}</td>
              <td>{{data.contact_details}}</td>
              <!-- <td>{{data.created_by}}</td>
              <td>{{data.created_date}}</td> -->
              <td>{{data.region_name}}</td>
              <td class="text-center text-nowrap"> 
  
                 <button title="View" type="button" class="btn btn-icon btn-sm  background-color1  me-2" (click)="onview()" ><span class="fa-solid fa-eye text-white  fs-6"></span></button>
                 <button title="Edit" type="button" class="btn btn-icon btn-sm  background-color2 me-2" (click)="onedit(data.customer_gid)"><span class="fa-solid fa-pencil text-white  fs-6"></span></button>
                 <button title="Delete" type="button" (click)="openModaldelete()" data-bs-toggle="modal"data-bs-target="#myModaldelete" class="btn btn-icon btn-sm  background-color me-2"><span class="fa-solid fa-trash text-white  fs-6"></span></button>
                 <button title="Additional Information" type="button" class="btn btn-icon btn-sm  background-color3 me-2" (click)="onaddinfo()" ><span class="fa-solid fa-book text-white  fs-6"></span></button>   
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
