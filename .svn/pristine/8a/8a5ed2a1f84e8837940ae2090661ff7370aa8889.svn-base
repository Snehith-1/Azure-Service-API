<div class="card shadow-sm">
    <div class="card-header bg-primary">
        <h3 class="card-title"><b>Leave Balance Summary</b></h3>
        <div class="card-toolbar">
        </div>
    </div>

    <div class="table-responsive">
        <div class="card card-body m-3 shadow-lg p-3 mb-5 bg-white rounded">
            <table id="leavebalance" class="table table-striped table-row-bordered gy-5 gs-7 ">

                <thead>
                    <tr class=" text-white fw-bold fs-5 text-nowrap bg-lightblue text-blue">
                        <th>S.No</th>
                        <th>Employee Name</th>
                        <th>Designation </th>
                        <th>Branch </th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr *ngFor="let data of leavebalance; let i=index;">
                        <td>{{i+1}}</td>
                        <td>{{data.user_name}}</td>
                        <td>{{data.branch_name}}</td>
                        <td>{{data.designation_name}}</td>


                        <td class="text-center text-nowrap">
                            <button title="Edit" type="button" class="btn btn-icon btn-sm bg-primary me-2"
                                (click)="onedit(data.employee_gid)"><span
                                    class="fa-solid fa-pencil text-white  fs-6"></span></button>
                            <button title="View" type="button" class="btn btn-icon btn-sm bg-primary me-2"
                                (click)="onview(data.employee_gid)"><span
                                    class="fa-solid fa-eye text-white fs-6"></span></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>